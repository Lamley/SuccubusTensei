;-------------------------------------------------
;讓助手侵犯
;助手によるコマンド、及びレズプレイ、レベル4
;-------------------------------------------------
@COM122
PRINTL 让助手侵犯
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
A = 0
S = 0

;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:欲望
	SIF S
		PRINT  + 
	A += ABL:欲望 * 2
	PRINT 欲望
	PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 2,')
	S = 1
ENDIF
;ABL:奉仕精神
IF ABL:奉仕精神
	SIF S
		PRINT  + 
	A += ABL:奉仕精神 * 4
	PRINT 奉仕精神
	PRINTV 'LV,ABL:奉仕精神,'(,ABL:奉仕精神 * 4,')
	S = 1
ENDIF

IF MARK:快楽刻印
	SIF S
		PRINT  + 
	A += MARK:快楽刻印 * 2
	PRINT 快楽刻印
	PRINTV 'LV,MARK:快楽刻印,'(,MARK:快楽刻印 * 2,')
	S = 1
ENDIF
;PALAM:欲情
IF GETPALAMLV(PALAM:欲情,5)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:欲情,5) * 2
	PRINT 欲情
	PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 2,')
	S = 1
ENDIF
;害羞
IF TALENT:羞恥心 > 0
	PRINT  - 
	A -= 1
	PRINT 害羞
	PRINTV '(,1,')
	S = 1
ENDIF
;献身的
IF TALENT:献身的
	SIF S
		PRINT  + 
	A += 6
	PRINT 献身的
	PRINTV '(,6,')
	S = 1
ENDIF
;接受快感
IF TALENT:快感応答 > 0
	SIF S
		PRINT  + 
	A += 2
	PRINT 接受快感
	PRINTV '(,2,')
	S = 1
ENDIF
;否定快感（淫乱、娼婦で無効）
IF TALENT:快感応答 < 0 && !TALENT:淫乱
	PRINT  - 
	A -= 2
	PRINT 否定快感
	PRINTV '(,2,')
	S = 1
ENDIF
;淫乱
IF TALENT:淫乱 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 5
	PRINT 淫乱
	PRINTV '(,5,')
	S = 5
ENDIF
;娼婦
IF TALENT:淫乱 > 1 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 5
	PRINT 娼婦
	PRINTV '(,5,')
	S = 5
ENDIF

;助手が処女
IF TALENT:PLAYER:処女
	PRINT  - 
	A -= 15
	PRINT 助手是処女
	PRINTV '(,15,')
	S = 1
ENDIF

;合計を表示(40以上で実行)
PRINT  = 
PRINTV A

V = 40
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 実行値
PRINTV V

WAIT

;実行できない
SIF A < V
	RETURN 0

;-------------------------------------------------
;実行決定
;-------------------------------------------------
STR:0 = 让助手侵犯
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = TARGET
;TCVAR:0 射精対象フラグ（ビット0=TARGET 1=PLAYER 2=MASTER 3=ASSI）
;TCVAR:1 予備射精対象フラグ（ビットを使いたくない人用、CFLAG:100に翻訳されます）	（1=TARGET 2=PLAYER 3=MASTER 4=ASSI 5=TARGET+ASSI 6=MASTER+ASSI）
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）

SETBIT TCVAR:TARGET:0, 3
TCVAR:TARGET:2 = 1
;強度
TCVAR:TARGET:4 = 2000

TEQUIP:ASSI:50 = TARGET
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 50
DOWNBASE:気力 += 150

SOURCE:快Ｃ = 400
SOURCE:性行動 = 500
SOURCE:達成 = 400
SOURCE:屈従 = 700
SOURCE:逸脱 = 500
SOURCE:反感 = 500


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 500

;助手が処女の場合、屈服逸脱が倍化し、従順が2になる。ただし一度きり
IF TALENT:PLAYER:処女 == 1
	TIMES SOURCE:屈従 , 5.00
	TIMES SOURCE:逸脱 , 3.00
	TALENT:PLAYER:処女 = 0
	IF !GETBIT(CFLAG:3,4)
		;異常経験追加（一回きり）
		EXP:異常経験 += 1
		SETBIT CFLAG:3,4
	ENDIF
	IF ABL:従順 < 2
		PRINTFORML 然後%ABLNAME:0%変為了2
		ABL:従順 = 2
	ENDIF
ENDIF
EXP:ASSI:Ｖ経験 += 1
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
IF TALENT:2 & 2
	;奴隷のＰ⇔調教者のＶの汚れが移動
	STAIN:2 |= STAIN:PLAYER:3
	STAIN:PLAYER:3 |= STAIN:2
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
SIF HETEROSEX(TARGET,ASSI)
	EXP:(50 + HETEROSEX(TARGET,ASSI)) += 10

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE122
;讓助手侵犯実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(122)
	RETURN RESULT
;助手じゃないとダメ
SIF PLAYER != ASSI
	RETURN 0
;助手が男人だとダメ
SIF !(TALENT:ASSI:2 & 1)
	RETURN 0
;体格差がある場合は主人が禁断的知識持ちじゃないとダメ
SIF ABS(TALENT:体型 - TALENT:ASSI:体型) > 2 && TALENT:MASTER:禁断的知識 == 0
	RETURN 0
;男人、半人半妖、Futanari、もしくは穿戴式假陰茎がないとダメ
SIF !(TALENT:2 & 2) && ITEM:PBAND == 0
	RETURN 0
;飛機杯使用中はダメ
SIF TEQUIP:12
	RETURN 0
;下半身内袴着衣
SIF TEQUIP:0 & 4
	RETURN 0
;浴室PLAY中は塑料地墊が無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

