;-------------------------------------------------
;媚薬
;特殊コマンド
;-------------------------------------------------
@COM181
ITEM:41 -= 1
TCVAR:媚薬 = 180
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
UP:欲情 = 2500

ELSE

;調教者が調合知識を持っていれば消費を抑えられる
IF TALENT:PLAYER:調合知識
	DOWNBASE:体力 += 150
	DOWNBASE:気力 += 150
ELSE
	DOWNBASE:体力 += 300
	DOWNBASE:気力 += 300
ENDIF

;媚薬効果で欲情のアップが2倍になるので実際には+5000
UP:欲情 = 2500
SOURCE:逸脱 = 1000
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE181
;媚薬実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(181)
	RETURN RESULT
;道具を持っているか、道具なし設定でないとダメ
SIF ITEM:41 == 0 && NOITEM == 0
	RETURN 0
;薬毒耐性だとダメ
SIF TALENT:薬毒耐性
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

