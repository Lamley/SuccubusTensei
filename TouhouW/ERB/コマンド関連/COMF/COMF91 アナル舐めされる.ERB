;実行判定
;-------------------------------------------------
@COM_ABLE91
;被舐肛門実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(91)
	RETURN RESULT
;下半身着衣==ずらし不可OR袴子(調教者)
SIF TEQUIP:PLAYER:0 & 4 || TEQUIP:PLAYER:0 & 2
	RETURN 0
;猫舌の奴隷の場合は技巧Lv2以上必要
SIF TALENT:猫舌 && ABL:技巧 < 2
	RETURN 0
;口枷使用中は不可
SIF TEQUIP:口枷
	RETURN 0
;睡眠姦中
SIF CFLAG:イタズラ > 1
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

