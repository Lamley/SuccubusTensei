;-------------------------------------------------
;揉胸
;愛撫系コマンド、レベル1
;-------------------------------------------------
@COM12
;着脱の処理
TEQUIP:揉胸 = !TEQUIP:揉胸

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;奉仕快楽
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:快Ｂ += ABL:PLAYER:指 * 20 + 30

ELSE
	DOWNBASE:体力 += 10
	DOWNBASE:気力 += 50

	SOURCE:情愛 = 15
	SOURCE:露出 = 20
	SOURCE:逸脱 = 30
	SOURCE:反感 = 50

	SOURCE:快Ｂ += ABL:PLAYER:指 * 20 + 30

	SIF ABL:親密 >= 7
		SOURCE:情愛 += (ABL:親密 * 10)

	SIF TALENT:PLAYER:霊活手指
		TIMES SOURCE:快Ｂ , 1.50

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 100
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 5
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ENDIF
RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM12(ARG)

SELECTCASE SELECTCOM
;	CASE 0 TO 9,11,40 TO 49,65,66,70,71,83 TO 85,91 TO 94,100 TO 105,120 TO 189,410
;		PRINTL ＜揉胸解除＞
;		TEQUIP:揉胸 = !TEQUIP:揉胸
	CASEELSE
;揉胸中
PRINTL ＜揉胸中＞
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:快Ｂ += (ABL:PLAYER:指 + 1) * 10
ELSE
	DOWNBASE:ARG:体力 += 5
	DOWNBASE:ARG:気力 += 20
	DOWNBASE:MASTER:体力 += 15
	DOWNBASE:MASTER:気力 += 20
	SOURCE:快Ｂ += (ABL:PLAYER:指 + 1) * 10
	SOURCE:露出 = 20
	SOURCE:逸脱 = 30
	SOURCE:反感 = 30
	SOURCE:情愛 += ABL:PLAYER:指 * 5

	SIF ABL:親密 >= 5
		SOURCE:情愛 += (ABL:親密 * 2)
ENDIF

EXP:PLAYER:手淫経験 ++
ENDSELECT
RETURN 1

