@COM_ABLE8
;張開陰唇実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(8)
	RETURN RESULT
;時間停止中は許可
IF FLAG:70 != 1
	;従順が2未満だとダメ
	SIF ABL:従順< 2
		RETURN 0
	;処女の場合、従順3以上または露出癖3以上ないとダメ
	SIF TALENT:処女 && ABL:従順 < 3 && ABL:露出癖 < 3
		RETURN 0
	;縄使用中は不可
	SIF TEQUIP:縄
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4 || TEQUIP:0 & 2
	RETURN 0
;振動棒挿入中はダメ
SIF TEQUIP:13
	RETURN 0
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;浴室PLAY中は塑料地墊が無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF

RETURN 1

