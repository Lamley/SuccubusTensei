;-------------------------------------------------
;騎乗位肛交
;セックス系コマンド、レベル2
;-------------------------------------------------
@COM66
;前回の調教が3Pのとき3Pへ
IF PREVCOM == 71
	CALL COM_ABLE71
	SIF RESULT
		JUMP COM71
ENDIF
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 2
;強度
TCVAR:PLAYER:4 = 2200

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:TARGET:2 = 12
;強度
TCVAR:TARGET:4 = 1300

;奉仕快楽フラグ
TCVAR:108 = 1
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 200
	SOURCE:快Ａ = 500
	SOURCE:苦痛 = 400

ELSE

	DOWNBASE:体力 += 80
	DOWNBASE:気力 += 200

	SOURCE:快Ａ = 500
	SOURCE:情愛 = 250
	SOURCE:性行動 = 250
	SOURCE:達成 = 250
	SOURCE:苦痛 = 800
	SOURCE:露出 = 120
	SOURCE:逸脱 = 700
	SOURCE:反感 = 900

	;上のほうで計算した汚れデータ
	SOURCE:不潔 = Y*10 + 60

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 900
ENDIF
;Aへの苦痛は先に処理しておく
CALL PAIN_CHECK_A(TARGET)

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;奴隷のＡ⇔調教者のＰの汚れが移動
CALL STAIN_アナルＰ挿入

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;A経験
EXP:Ａ経験 ++

;性交経験

EXP:PLAYER:挿入経験 ++
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 7
ENDIF
	EXP:MASTER:時姦経験 += 1
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 7
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 7
ENDIF
	EXP:Ａ性交経験 ++
	;愛情経験
	SIF !ASSIPLAY
		EXP:愛情経験 += TALENT:恋慕
ENDIF
RETURN 1

@CAN_COM66(ARG)
IF FLAG:70 == 1
	SKIPDISP ARG
	PRINTL 用騎乗位侵犯肛門
ELSE
	SKIPDISP ARG
	PRINTL 騎乗位肛交
	;-------------------------------------------------
	;実行判定処理
	;-------------------------------------------------
	A = 0
	S = 0

	;すべての命令に共通の要素を考慮
	;(従順が高いと命令に従いやすいなど)
	CALL COM_ORDER

	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		A += ABL:欲望 * 3
		PRINT 欲望
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 3,')
		S = 1
	ENDIF
	;ABL:Ａ感覚
	IF ABL:Ａ感覚
		SIF S
			PRINT  + 
		A += ABL:Ａ感覚 * 2
		PRINT Ａ感覚
		PRINTV 'LV,ABL:Ａ感覚,'(,ABL:Ａ感覚 * 2,')
		S = 1
	ENDIF
	;ABL:奉仕精神
	IF ABL:奉仕精神
		SIF S
			PRINT  + 
		A += ABL:奉仕精神 * 4
		PRINT 奉仕精神
		PRINTV 'LV,ABL:奉仕精神,'(,ABL:奉仕精神 * 4,')
		S = 1
	ENDIF
	IF MARK:快楽刻印
		SIF S
			PRINT  + 
		A += MARK:快楽刻印 * 3
		PRINT 快楽刻印
		PRINTV 'LV,MARK:快楽刻印,'(,MARK:快楽刻印 * 3,')
		S = 1
	ENDIF

	;PALAM:潤滑（の不足）
	IF PALAM:潤滑 < PALAMLV:3
		PRINT  - 
		A -= 5
		PRINT 潤滑不足
		PRINTV '(,5,')
		S = 1
	ENDIF
	;PALAM:欲情
	IF GETPALAMLV(PALAM:欲情,5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:欲情,5) * 3
		PRINT 欲情
		PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 3,')
		S = 1
	ENDIF
	;害羞
	IF TALENT:羞恥心 > 0
		PRINT  - 
		A -= 2
		PRINT 害羞
		PRINTV '(,2,')
		S = 1
	ENDIF
	;否定快感（淫乱、娼婦で無効）
	IF TALENT:快感応答 < 0 && !TALENT:淫乱
		PRINT  - 
		A -= 5
		PRINT 否定快感
		PRINTV '(,5,')
		S = 1
	ENDIF
	;討厭男人（恋慕、親愛で無効）
	IF OTOKOGIRAI(TARGET)
		PRINT  - 
		A -= 12
		PRINT 討厭男人
		PRINTV '(,12,')
		S = 1
	ENDIF
	;淫乱
	IF TALENT:淫乱 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 15
		PRINT 淫乱
		PRINTV '(,15,')
		S = 15
	ENDIF
	;娼婦
	IF TALENT:淫乱 > 1 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 娼婦
		PRINTV '(,5,')
		S = 5
	ENDIF


	;A経験
	IF EXP:Ａ経験 < EXPLV:2
		PRINT  - 
		A -= 30
		PRINT Ａ経験
		PRINT 不足
		PRINTV '(,30,')
		S = 1
	ENDIF

	;調教者がFutanari
	IF (TALENT:PLAYER:2 & 3) == 3
		SIF S
			PRINT  + 
		A += 4
		PRINT Futanari
		PRINTV '(,4,')
		S = 1
	ENDIF

	;媚薬
	IF TCVAR:媚薬
		SIF S
			PRINT  + 
		A += 6
		PRINT 媚薬
		PRINTV '(,6,')
		S = 1
	ENDIF

	Y = 0
	;愛液の汚れ
	SIF STAIN:PLAYER:2 & 1
		Y += 1
	;精液の汚れ
	SIF STAIN:PLAYER:2 & 4
		Y += 3
	;アナルの汚れ
	SIF STAIN:PLAYER:2 & 8
		Y += 7
	SIF STAIN:PLAYER:2 & 16
		Y += 15
	Y = Y * (2 - TALENT:汚臭耐性) / 2

	;汚れあり
	IF Y
		PRINT  - 
		A -= Y
		PRINT 汚れあり
		;汚臭鈍感
		IF TALENT:汚臭耐性 > 0
			PRINT 、汚臭鈍感
		ELSEIF TALENT:汚臭耐性 < 0
			PRINT 、汚臭敏感
		ENDIF
		PRINTV '(,Y,')
		S = 1
	ENDIF

	;合計を表示(45以上で実行)
	PRINT  = 
	PRINTV A

	V = 45
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V

	WAIT
	SKIPDISP 0
	;実行できない
	SIF A < V
		RETURN 0
	IF TALENT:妊娠 && (CFLAG:903 <= 30 || CFLAG:903 >= 71)
		PRINTFORMW 因為肚子有孩子现在还是别対%CALLNAME:ARG%乱来比较好吧
		RETURN 0
	ENDIF
ENDIF
SKIPDISP 0
RETURN 1


;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE66
;騎乗位肛交実行判定
SIF !TFLAG:100
	RETURN 0
SIF GLOBAL_COMABLE(66)
	RETURN RESULT
;睡眠姦中
SIF CFLAG:イタズラ > 1
	RETURN 0
;調教者が男人、Futanariの場合はある程度勃起してないとダメ
SIF (TALENT:PLAYER:2 & 2) && BASE:MASTER:勃起 < 1000
	RETURN 0
;肛用振動棒挿入中はダメ
SIF TEQUIP:14
	RETURN 0
;後庭拉珠使用中は不可
SIF TEQUIP:15
	RETURN 0
;普通の浣腸使用中は不可
SIF TEQUIP:21
	RETURN 0
;バルーン使用中は不可
SIF TEQUIP:22
	RETURN 0
;電極使用中は不可
SIF TEQUIP:23
	RETURN 0
;時間停止中はスキップ
IF FLAG:70 != 1
	;一定のＡ経験が必要
	SIF EXP:2 < EXPLV:3
		RETURN 0
	;縄使用中は不可
	SIF TEQUIP:縄
		RETURN 0
ENDIF
;体格差がある場合は主人が禁断的知識持ちじゃないとダメ
SIF 挿入不可(TARGET) == 1 && !TALENT:PLAYER:禁断的知識 && !TALENT:PLAYER:禁断的知識
	RETURN 0
;さらに体格差があると経験が必要
SIF 挿入不可(TARGET) == 2 && (!TALENT:PLAYER:禁断的知識 || EXP:Ａ経験 < 50)
	RETURN 0
SIF 挿入不可(TARGET) == 3
	RETURN 0
;調教者が男人か半人半妖かFutanariじゃないとダメ
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0


;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
;浴室PLAY中は塑料地墊が無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;潤滑不足で、従順3以下・百合属性3以下のASSIの場合はできない（施虐狂ならＯＫ）
IF PALAM:潤滑 < PALAMLV:2 && ASSIPLAY
	SIF (ABL:ASSI:従順 <= 3 || ABL:ASSI:技巧 <= 3) && TALENT:ASSI:施虐狂 == 0
		RETURN 0
;ベッドルームorバスルームで塑料地墊がないとダメ
SIF !BEDROOM(CFLAG:PLAYER:現在位置) && !(BATHROOM() && ITEM:20)
	RETURN 0
ENDIF
RETURN 1

