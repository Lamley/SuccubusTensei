@COM_ABLE617
;一括管理
SIF GLOBAL_COMABLE(617)
	RETURN RESULT
;相手が居ない
SIF !TARGET
	RETURN 0
;デート中以外
SIF !CHK_DATENOW(CFLAG:12)
	RETURN 0

IF !AT_HOME(MASTER)
	SIF CFLAG:MASTER:現在位置 != 広場
		RETURN 0
ELSE
	SIF CFLAG:MASTER:現在位置 != 217
		RETURN 0
ENDIF

;食べたばかり
SIF !TIME_PROGRESS(TCVAR:デザート空腹時刻)
	RETURN 0
SIF MONEY < 3000
	RETURN 0
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;時間停止中
SIF FLAG:70
	RETURN 0
RETURN 1

