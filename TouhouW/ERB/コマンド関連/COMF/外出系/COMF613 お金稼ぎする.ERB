@COM613
;賺錢
LOCAL = RAND:100
LOCAL:1 = 90 + GET_SUCCESS_RATE() / 5
SIF LOCAL:1 > 99
	LOCAL:1 = 99
IF LOCAL <= 9
	;10％で大成功
	TFLAG:193 = 1
ELSEIF LOCAL >= LOCAL:1
	;10～1％で失敗
	TFLAG:193 = -1
ELSE
	;残りは成功
	TFLAG:193 = 0
ENDIF

DOWNBASE:MASTER:体力 += 50
DOWNBASE:MASTER:気力 += 100

;報酬計算
TFLAG:200 = 0
IF DATE_PARTTIME(CFLAG:MASTER:現在位置) > 99
	TFLAG:200 = (ABL:MASTER:技巧 + 10) * (RAND:20 + 40) * 2
ELSE
	TFLAG:200 = (ABL:MASTER:技巧 + 10) * (RAND:20 + 30) * DATE_PARTTIME(CFLAG:MASTER:現在位置)
ENDIF
SIF TFLAG:200 > 0
	MONEY += TFLAG:200

IF TARGET > 0 && !CFLAG:睡眠
	;固定で獲得するソース
	SOURCE:歓楽 = 100
	SOURCE:反感 = 50
	
	;ABL:従順をみる
	IF ABL:従順 <= 1

	ELSEIF ABL:従順 <= 3
		SOURCE:歓楽 += 100 + (ABL:従順 * 20)
	ELSEIF ABL:従順 <= 5
		SOURCE:歓楽 += 300 + (ABL:従順 * 30)
	ELSEIF ABL:従順 <= 8
		SOURCE:歓楽 += 600 + (ABL:従順 * 50)
	ELSEIF ABL:従順 <= 11
		SOURCE:歓楽 += 1000 + (ABL:従順 * 70)
	ELSE
		SOURCE:歓楽 += 2000 + (ABL:従順 * 50)
	ENDIF
	
	;好感度をみる
	IF CFLAG:2 <= 500
		SOURCE:歓楽 += CFLAG:2
	ELSEIF CFLAG:2 <= 5000
		SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
	ELSE
		SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
	ENDIF
	SIF SOURCE:歓楽 < 0
		SOURCE:歓楽 = 0
	
	SOURCE:征服 = 300 + 100 * ABL:施虐属性
	
ENDIF
TIME += 60

RETURN 1

