@COM_ABLE614
;一括管理
SIF GLOBAL_COMABLE(614)
	RETURN RESULT
IF !AT_HOME(MASTER)
	SIF CFLAG:MASTER:現在位置 != 商家町
		RETURN 0
ELSE
	SIF CFLAG:MASTER:現在位置 != 216
		RETURN 0
ENDIF
;もう買ってるか
SIF GETBIT(TFLAG:一日一回,2)
	RETURN 0
;睡眠中
SIF CFLAG:MASTER:睡眠
	RETURN 0
;時間停止中
SIF FLAG:70
	RETURN 0
RETURN 1