@COM603
;牽手
LOCAL = RAND:110
LOCAL:1 = 90 + GET_SUCCESS_RATE() / 5
SIF LOCAL:1 > 109
	LOCAL:1 = 109
IF LOCAL <= 9
	;大成功
	TFLAG:193 = 1
	EXP:MASTER:約会経験 ++
	EXP:TARGET:約会経験 ++
ELSEIF LOCAL >= LOCAL:1
	;失敗
	TFLAG:193 = -1
ELSE
	;残りは成功
	TFLAG:193 = 0
ENDIF

;先制発生時は失敗しない
;SIF TFLAG:102 == 3
;	TFLAG:193 = MAX(TFLAG:193,0)
DOWNBASE:気力 += 50
DOWNBASE:MASTER:気力 += 50

;固定で獲得するソース
SOURCE:歓楽 = 150
SOURCE:情愛 = 150
SOURCE:恭順 = 100
SOURCE:反感 = 100
SOURCE:受動 = 100

;ABL:親密をみる
IF ABL:親密 <= 3
	SOURCE:歓楽 += 150 + (ABL:親密 * 50)
	SOURCE:情愛 += 180 + (ABL:親密 * 40)
ELSEIF ABL:親密 <= 5
	SOURCE:歓楽 += 500 + (ABL:親密 * 50)
	SOURCE:情愛 += 450 + (ABL:親密 * 30)
ELSEIF ABL:親密 <= 8
	SOURCE:歓楽 += 800 + (ABL:親密 * 50)
	SOURCE:情愛 += 700 + (ABL:親密 * 50)
ELSEIF ABL:親密 <= 11
	SOURCE:歓楽 += 1000 + (ABL:親密 * 90)
	SOURCE:情愛 += 900 + (ABL:親密 * 50)
ELSE
	SOURCE:歓楽 += 1800 + (ABL:親密 * 40)
	SOURCE:情愛 += 2000 + (ABL:親密 * 20)
ENDIF

;ABL:従順をみる
IF ABL:従順 <= 3
	SOURCE:恭順 += 100 + (ABL:従順 * 50)
	SOURCE:受動 += 170 + (ABL:従順 * 40)
ELSEIF ABL:従順 <= 5
	SOURCE:恭順 += 300 + (ABL:従順 * 50)
	SOURCE:受動 += 350 + (ABL:従順 * 30)
ELSEIF ABL:従順 <= 8
	SOURCE:恭順 += 500 + (ABL:従順 * 50)
	SOURCE:受動 += 600 + (ABL:従順 * 50)
ELSEIF ABL:従順 <= 11
	SOURCE:恭順 += 800 + (ABL:従順 * 90)
	SOURCE:受動 += 700 + (ABL:従順 * 50)
ELSE
	SOURCE:恭順 += 1500 + (ABL:従順 * 40)
	SOURCE:受動 += 1000 + (ABL:従順 * 20)
ENDIF

;好感度をみる
IF CFLAG:2 <= 500
	SOURCE:情愛 += CFLAG:2
ELSEIF CFLAG:2 <= 5000
	SOURCE:情愛 += 200 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:情愛 += 1000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:歓楽 < 0
	SOURCE:歓楽 = 0

LOCAL = 0
;親密が低いと好感度低下
IF ABL:親密 == 0
	LOCAL -= 3
ELSEIF ABL:親密 == 1
	LOCAL -= 2
ELSEIF ABL:親密 == 2
	LOCAL -= 1
ENDIF
;従順が低いと好感度低下
IF ABL:従順 == 0
	LOCAL -= 5
ELSEIF ABL:従順 == 1
	LOCAL -= 3
ELSEIF ABL:従順 == 2
	LOCAL -= 1
ENDIF
;好感度が低いと好感度低下
IF CFLAG:2 <= 50
	LOCAL -= 3
ELSEIF CFLAG:2 <= 100
	LOCAL -= 2
ELSEIF CFLAG:2 <= 250
	LOCAL -= 1
ENDIF

SOURCE:欲情 = 50 + 150 * ABL:欲望
SOURCE:屈従 = 100 + 200 * ABL:受虐属性

;好感度変化
TFLAG:97 += LOCAL

IF TFLAG:193 == -1
	TIMES SOURCE:歓楽 , 0.10
	TIMES SOURCE:情愛 , 0.50
	TIMES SOURCE:恭順 , 0.50
	TIMES SOURCE:受動 , 1.50
	TIMES SOURCE:欲情 , 0.50
	TIMES SOURCE:反感 , 1.50
ELSEIF TFLAG:193 == 0
	TIMES SOURCE:歓楽 , 1.00
	TIMES SOURCE:情愛 , 1.00
	TIMES SOURCE:恭順 , 1.00
	TIMES SOURCE:受動 , 1.00
	TIMES SOURCE:欲情 , 1.00
ELSE
	TIMES SOURCE:歓楽 , 2.00
	TIMES SOURCE:情愛 , 2.00
	TIMES SOURCE:恭順 , 1.50
	TIMES SOURCE:受動 , 2.00
	TIMES SOURCE:欲情 , 2.00
	TIMES SOURCE:反感 , 0.75
ENDIF
TIME += 10
CALL DATE_GOES_ON(1)
EXP:MASTER:約会経験 ++
EXP:TARGET:約会経験 ++

RETURN 1

