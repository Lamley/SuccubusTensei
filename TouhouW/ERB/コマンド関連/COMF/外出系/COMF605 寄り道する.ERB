;繞道
@COM_ABLE605
;一括管理
SIF GLOBAL_COMABLE(605)
	RETURN RESULT
;相手が居ない
SIF !TARGET
	RETURN 0
;デート中以外
SIF !CHK_DATENOW(CFLAG:12)
	RETURN 0
;デート道中以外
SIF (CFLAG:現在位置 % 100) % 10 == 0
	RETURN 0
;待客室
SIF CFLAG:MASTER:現在位置 == OMANEKIBEYA()
	RETURN 0
;30分間隔
SIF TIME_PROGRESS(TCVAR:309) < 30
	RETURN 0
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;時間停止中
SIF FLAG:70
	RETURN 0
RETURN 1

