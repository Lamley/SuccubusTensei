SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(90)
	RETURN RESULT
;下半身着衣（調教者）
SIF TEQUIP:PLAYER:0 & 4
	RETURN 0
;睡眠姦中
SIF CFLAG:イタズラ > 1
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

