;-------------------------------------------------
;睡眠薬
;特殊コマンド
;-------------------------------------------------
@COM191
ITEM:252 -= 1
TCVAR:睡眠薬強度 = 3
TCVAR:睡眠深度 += 10000
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE191
;睡眠薬実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(191)
	RETURN RESULT
;道具を持っているか、道具なし設定でないとダメ
SIF ITEM:252 == 0 && NOITEM == 0
	RETURN 0
;睡眠薬強度が3ならダメ
SIF TCVAR:睡眠薬強度 > 2
	RETURN 0
;停止中もしくは睡眠イタズラ中じゃないとダメ
SIF FLAG:70 == 0 && !CFLAG:イタズラ
	RETURN 0
;禁断的知識がないとダメ
SIF TALENT:MASTER:禁断的知識 == 0
	RETURN 0
RETURN 1

