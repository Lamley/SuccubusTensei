;-------------------------------------------------
;乳首吸い
;愛撫系コマンド、レベル1
;-------------------------------------------------
@COM11
;着脱の処理
TEQUIP:乳首吸い = !TEQUIP:乳首吸い

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;奉仕快楽
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:快Ｂ += ABL:PLAYER:舌 * 20 + 20

ELSE
	DOWNBASE:体力 += 5
	DOWNBASE:気力 += 50

	SOURCE:快Ｂ = 20
	SOURCE:情愛 = 30
	SOURCE:露出 = 20
	SOURCE:不潔 = 30
	SOURCE:反感 = 100

	SOURCE:快Ｂ += ABL:PLAYER:舌 * 20
	SOURCE:情愛 += ABL:PLAYER:舌 * 5

	SIF ABL:親密 >= 7
		SOURCE:情愛 += (ABL:親密 * 20)

	;調教者のTALENT:舌頭霊活をみる
	SIF TALENT:PLAYER:舌頭霊活
		TIMES SOURCE:快Ｂ , 1.50

	;調教者のTALENT:猫舌をみる
	SIF TALENT:PLAYER:猫舌
		TIMES SOURCE:快Ｂ , 0.75
	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 100
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者の口の汚れが移動
STAIN:5 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:5
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 5
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ENDIF
;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1
EXP:PLAYER:口淫経験 ++
RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM11(ARG)

SELECTCASE SELECTCOM
	CASE 0 TO 2,4,8,20,47 TO 49,60 TO 66,68,70,71,81 TO 85,91 TO 94,105,120 TO 126,140,410
		PRINTL ＜吸乳头解除＞
		SIF TEQUIP:乳首吸い
			TEQUIP:乳首吸い = 0
	CASEELSE
;乳首吸い中
PRINTL ＜吸乳头中＞
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:快Ｂ += (ABL:PLAYER:舌 + 1) * 10
ELSE
	DOWNBASE:ARG:体力 += 5
	DOWNBASE:ARG:気力 += 20
	DOWNBASE:MASTER:体力 += 5
	DOWNBASE:MASTER:気力 += 10
	SOURCE:快Ｂ += (ABL:PLAYER:舌 + 1) * 10
	SOURCE:露出 = 20
	SOURCE:不潔 = 30
	SOURCE:反感 = 50
	SOURCE:情愛 += ABL:PLAYER:舌 * 5

	SIF ABL:親密 >= 5
		SOURCE:情愛 += (ABL:親密 * 3)
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者の口の汚れが移動
STAIN:5 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:5
;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1
EXP:PLAYER:口淫経験 ++
;EXP:乳首 ++
ENDSELECT
RETURN 1

