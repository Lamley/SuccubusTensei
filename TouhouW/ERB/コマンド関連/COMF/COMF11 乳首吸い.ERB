SIF CFLAG:PLAYER:今忙しくて手が離せない == 1
	PRINTFORM %CALLNAME:TARGET%的
IF EX:Ｂ絶頂 * 10000 + PALAM:快Ｂ + PALAM:欲情 >= 10000 && ABL:Ｂ感覚 <= 5
	IF RAND:3 == 0
		PRINT 因為対乳房凌辱的期待而颤抖着
	ELSEIF RAND:2
		PRINT 焦急的盼望着乳奸
	ELSE
		PRINT 
	ENDIF
ENDIF
PRINTFORM %NIPPLE_DESCRIPTION(TARGET,1)%
IF RAND:2
	;欲情のPALAMLV4以上
	IF PALAM:欲情 >= PALAMLV:4 && RAND:3
		PRINT 的咯哩咯哩的
	ELSEIF EX:Ｂ絶頂 * 10000 + PALAM:快Ｂ + PALAM:欲情 >= 10000 && RAND:2
		PRINT 的软糖般的
	ELSE
		PRINT 的柔软的
	ENDIF
	PRINT 触感品味着的同时、
ELSE
	PRINT 触感反复舔舐的同时、
ENDIF

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE11
;乳首吸い実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(11)
	RETURN RESULT
;上半身着衣
SIF (TEQUIP:1 & 2) && TEQUIP:3 == 0
	RETURN 0
;搾乳器使用中は不可
SIF TEQUIP:17
	RETURN 0
;乳頭夾使用中は不可
SIF TEQUIP:16
	RETURN 0
;乳房電極装着中はダメ
SIF TEQUIP:24
	RETURN 0
SIF TEQUIP:体位 == 5 || TEQUIP:体位 == 2 || TEQUIP:体位 == 3
	RETURN 0
;主人公の口使用中
SIF MASTER_POSE(0,4) && MASTER_POSE(0,4) != TARGET
	RETURN 0
IF IN_ROOM_NUMBER(CFLAG:MASTER:現在位置) > 2
	LOCAL:1 = 0
	FOR LOCAL,1,CHARANUM
		SIF TEQUIP:LOCAL:乳首吸い && LOCAL != TARGET
			LOCAL:1 ++
	NEXT
	SIF LOCAL:1
	RETURN 0
ENDIF

RETURN 1