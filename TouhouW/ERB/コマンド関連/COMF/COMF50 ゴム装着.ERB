@COM50
;着脱の処理
IF !TEQUIP:PLAYER:避孕套
	ITEM:45 -= 1
	TEQUIP:MASTER:避孕套 = 1
	PRINTL 戴上了避孕套
	PRINTFORMW 剩余{ITEM:45}枚
ELSE
	TEQUIP:PLAYER:避孕套 = 0
	PRINTW 取下了避孕套
ENDIF
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

RETURN 0

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE50
;ゴム装着
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(50)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:MASTER:避孕套
	RETURN 1
SIF !ITEM:45
	RETURN 0
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
RETURN 1
