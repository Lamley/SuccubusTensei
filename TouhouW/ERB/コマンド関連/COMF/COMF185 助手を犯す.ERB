;-------------------------------------------------
;侵犯助手
;特殊コマンド
;-------------------------------------------------
@COM185
PRINTL 侵犯助手
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
A = 0
S = 0

;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:欲望
	SIF S
		PRINT  + 
	A += ABL:欲望 * 2
	PRINT 欲望
	PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 2,')
	S = 1
ENDIF

IF MARK:快楽刻印
	SIF S
		PRINT  + 
	A += MARK:快楽刻印 * 2
	PRINT 快楽刻印
	PRINTV 'LV,MARK:快楽刻印,'(,MARK:快楽刻印 * 2,')
	S = 1
ENDIF
;PALAM:欲情
IF GETPALAMLV(PALAM:欲情,5)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:欲情,5) * 2
	PRINT 欲情
	PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 2,')
	S = 1
ENDIF
;助手のABL:露出癖
IF ABL:ASSI:露出癖
	SIF S
		PRINT  + 
	A += ABL:ASSI:露出癖 * 2
	PRINT 助手的露出癖
	PRINTV 'LV,ABL:ASSI:露出癖,'(,ABL:ASSI:露出癖 * 2,')
	S = 1
ENDIF

;助手が恋慕
IF TALENT:ASSI:恋慕 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 10
	PRINT 助手是恋慕
	PRINTV '(,10,')
	S = 1
ENDIF

;助手が親愛
IF TALENT:ASSI:恋慕 > 1 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 15
	PRINT 助手是親愛
	PRINTV '(,15,')
	S = 1
ENDIF

;助手が処女
IF TALENT:ASSI:処女 == 1
	PRINT  - 
	A -= 50
	PRINT 助手是処女
	PRINTV '(,50,')
	S = 1
ENDIF

;合計を表示(40以上で実行)
PRINT  = 
PRINTV A

V = 40
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 実行値
PRINTV V

WAIT

;実行できない
SIF A < V
	RETURN 0


;-------------------------------------------------
;実行決定
;-------------------------------------------------
STR:0 = 让助手侵犯
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;TCVAR:0 射精対象フラグ（ビット0=TARGET 1=PLAYER 2=MASTER 3=ASSI）
;TCVAR:1 予備射精対象フラグ（ビットを使いたくない人用、CFLAG:100に翻訳されます）	（1=TARGET 2=PLAYER 3=MASTER 4=ASSI 5=TARGET+ASSI 6=MASTER+ASSI）
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）

SETBIT TCVAR:MASTER:0, 3
TCVAR:MASTER:2 = 1
;強度
TCVAR:MASTER:4 = 1500

TEQUIP:ASSI:50 = MASTER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 0
DOWNBASE:気力 += 250

SOURCE:情愛 = 200
SOURCE:液体 = 100
SOURCE:屈従 = 1500
SOURCE:逸脱 = 700
SOURCE:反感 = 700

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 700

;助手が処女喪失をした場合、屈服と逸脱を増加
IF TALENT:ASSI:処女 == 1
	TIMES SOURCE:逸脱 , 20.00
	TIMES SOURCE:屈従 , 3.00
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
IF TALENT:MASTER:2 & 2
	;主人のＰ⇔助手のＶの汚れが移動
	STAIN:MASTER:2 |= STAIN:ASSI:3
	STAIN:ASSI:3 |= STAIN:MASTER:2
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;助手のＶ経験
EXP:ASSI:Ｖ経験 += 1

;助手の百合経験;同性愛　レズなら戻り値1ゲイなら戻り値2
SIF HETEROSEX(ASSI,MASTER) == 1
	EXP:ASSI:百合経験 += 10

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE185
LOCAL = 0
;侵犯助手実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(185)
	RETURN RESULT
;助手がいないとダメ
SIF ASSI < 1
	RETURN 0
;主人じゃないとダメ
SIF ASSIPLAY
	RETURN 0
;助手が男人だとダメ
SIF !(TALENT:ASSI:2 & 1)
	RETURN 0
;体格差がある場合は主人が禁断的知識持ちじゃないとダメ
SIF ABS(TALENT:体型 - TALENT:ASSI:体型) > 2 && (TALENT:MASTER:禁断的知識 == 0)
	RETURN 0
;主人が男人、半人半妖、Futanari、もしくは穿戴式假陰茎がないとダメ
SIF !(TALENT:MASTER:2 & 2) && ITEM:PBAND == 0
	RETURN 0
;縄使用中か従順が3以上ないとダメ
SIF TEQUIP:縄 == 0 && ABL:従順 < 3
	RETURN 0
;浴室PLAY中は塑料地墊が無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

