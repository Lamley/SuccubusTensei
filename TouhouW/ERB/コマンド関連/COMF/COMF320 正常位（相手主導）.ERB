@COM320

;ベッドがないと立位に
SIF !BEDROOM(CFLAG:PLAYER:現在位置) && !(BATHROOM() && ITEM:20)
	TFLAG:193 = 1



;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1
CALL TOUCH_SET(SET_FROM_V,1,TARGET)
TCVAR:PLAYER:2 = 1
TEQUIP:TARGET:体位 = 1
TFLAG:MASTERのＰ挿入中 = 1
TEQUIP:50 = MASTER

;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 1
;強度
TCVAR:PLAYER:4 = 800

CSTR:TARGET:10 += @"{PLAYER}/"
TCVAR:TARGET:2 = 13
;強度
TCVAR:TARGET:4 = 1500


;正常位補正
;MASTERがTARGETの膣に挿入している
SIF (BEDROOM(CFLAG:PLAYER:現在位置) || (BATHROOM() && ITEM:20)) && TEQUIP:50 == MASTER
	TCVAR:MASTER:4 += EXP:愛情経験 * 5
SIF TCVAR:MASTER:4 >= 3000
	TCVAR:MASTER:4 = 3000

DOWNBASE:体力 += 20
DOWNBASE:気力 += 50

SOURCE:快Ｖ = 400
SOURCE:情愛 = 300
SOURCE:苦痛 = 500
SOURCE:露出 = 50
SIF TFLAG:193
	SOURCE:露出 = 300
;正常位補正
SIF BEDROOM(CFLAG:MASTER:現在位置) && !ASSIPLAY
	SOURCE:快Ｖ += EXP:愛情経験
SIF SOURCE:快Ｖ >= 1000
	SOURCE:快Ｖ = 1000

;上のほうで計算した汚れデータ
SOURCE:不潔 = Y*10 + 60
CALL 特殊ソース処理
;Vへの苦痛は先に処理しておく
CALL PAIN_CHECK_V(TARGET)
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
CALL STAIN_膣内Ｐ挿入
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:挿入経験 ++
EXP:Ｖ経験 ++
;同性愛　レズなら戻り値1ゲイなら戻り値2

IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF
EXP:Ｖ性交経験 ++
IF !ASSIPLAY
	EXP:愛情経験 += TALENT:恋慕 * 3
	;処女
	SIF TALENT:処女 == 1 && TALENT:恋慕
		EXP:愛情経験 += 10
ENDIF

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE320
SIF !TFLAG:100
	RETURN 0
SIF TCVAR:20 != 41
	RETURN 0
;調教者が男人、Futanariの場合はある程度勃起してないとダメ
SIF (TALENT:PLAYER:2 & 2) && BASE:MASTER:勃起 < 1000
	RETURN 0
;振動棒挿入中はダメ
SIF TEQUIP:13
	RETURN 0
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;体格差がある場合は経験がないとダメ
SIF 挿入不可(TARGET) == 1 && EXP:Ｖ経験 < 50 && !TALENT:PLAYER:禁断的知識
	RETURN 0
;さらに体格差があると禁断的知識が必要
SIF 挿入不可(TARGET) == 2 && (!TALENT:PLAYER:禁断的知識 || EXP:Ｖ経験 < 50)
	RETURN 0
SIF 挿入不可(TARGET) == 3
	RETURN 0
;調教者が男人、半人半妖、Futanari、もしくは穿戴式假陰茎がないとダメ
SIF !(TALENT:PLAYER:2 & 2) && ITEM:PBAND == 0
	RETURN 0
;処女で、従順4以下・百合属性4以下のASSIの場合はできない（施虐狂ならＯＫ）
IF TALENT:処女 && ASSIPLAY
	SIF (ABL:ASSI:従順 <= 4 || ABL:ASSI:百合属性 <= 4) && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF
;時間停止中はスキップ
IF FLAG:70 != 1
	;処女かつ潤滑不足はだめ
	SIF PALAM:潤滑 < PALAMLV:2 && TALENT:処女 && TALENT:処女 != -1
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
;浴室PLAY中は塑料地墊が無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;背面座位からはダメ
SIF TEQUIP:体位 == 5
	RETURN 0
RETURN 1