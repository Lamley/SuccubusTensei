;-------------------------------------------------
;浣腸器＋肛塞
;ハードな調教コマンド、レベル4
;-------------------------------------------------
@COM146
;着脱の処理
TEQUIP:浣腸 = !TEQUIP:浣腸
IF !TEQUIP:浣腸
	IF !GETBIT(CFLAG:3,7)
		EXP:異常経験 += 1
		SETBIT CFLAG:3,7
	ENDIF
ENDIF
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
BASE:MASTER:TSP -= 150
SOURCE:快Ａ = 300
SOURCE:苦痛 = 250

ELSE

DOWNBASE:体力 += 60
DOWNBASE:気力 += 150

SOURCE:快Ａ = 300
SOURCE:苦痛 = 500
SOURCE:露出 = 300
SOURCE:屈従 = 200
SOURCE:不潔 = 500
SOURCE:逸脱 = 500
SOURCE:反感 = 500

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 500
ENDIF
;Aへの苦痛は先に処理しておく
CALL PAIN_CHECK_A(TARGET)
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
STAIN:7 |= STAIN:4
STAIN:4 |= STAIN:7
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
EXP:Ａ経験 += 4
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
ENDIF
RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------

@EQUIP_COM146(ARG)
PRINTL ＜浣腸＋アナルプラグ挿入中＞
IF FLAG:70 == 1
BASE:MASTER:TSP -= 150
SOURCE:ARG:快Ａ += 150

;Aへの苦痛は先に処理しておく
;EXP:Ａ経験をみる
LOCAL = 250
LOCAL:1 = 250
IF EXP:ARG:Ａ経験 < EXPLV:1
	TIMES LOCAL , 3.00
ELSEIF EXP:ARG:Ａ経験 < EXPLV:2
	TIMES LOCAL , 1.20
ELSEIF EXP:ARG:Ａ経験 < EXPLV:3
	TIMES LOCAL , 0.80
ELSEIF EXP:ARG:Ａ経験 < EXPLV:4
	TIMES LOCAL , 0.60
ELSEIF EXP:ARG:Ａ経験 < EXPLV:5
	TIMES LOCAL , 0.40
ELSEIF EXP:ARG:Ａ経験 >= EXPLV:5
	TIMES LOCAL , 0.20
ENDIF

;PALAM:潤滑をみる
IF PALAM:ARG:潤滑 < PALAMLV:1
	TIMES LOCAL , 1.20
ELSEIF PALAM:ARG:潤滑 < PALAMLV:2
	TIMES LOCAL , 1.00
ELSEIF PALAM:ARG:潤滑 < PALAMLV:3
	TIMES LOCAL , 0.60
ELSEIF PALAM:ARG:潤滑 < PALAMLV:4
	TIMES LOCAL , 0.30
ELSEIF PALAM:ARG:潤滑 >= PALAMLV:4
	TIMES LOCAL , 0.20
ENDIF
SOURCE:ARG:苦痛 += LOCAL

ELSE

DOWNBASE:ARG:体力 += 60
DOWNBASE:ARG:気力 += 150

SOURCE:ARG:快Ａ += 150
SOURCE:ARG:屈従 += 100
SOURCE:ARG:不潔 += 250
SOURCE:ARG:逸脱 += 250

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:ARG:自己愛 < 0 || TALENT:ARG:抵抗
	SOURCE:ARG:鬱屈 += 250

;Aへの苦痛は先に処理しておく
;EXP:Ａ経験をみる
LOCAL = 250
LOCAL:1 = 250
IF EXP:ARG:Ａ経験 < EXPLV:1
	TIMES LOCAL , 3.00
	TIMES LOCAL:1 , 3.00
ELSEIF EXP:ARG:Ａ経験 < EXPLV:2
	TIMES LOCAL , 1.20
	TIMES LOCAL:1 , 2.00
ELSEIF EXP:ARG:Ａ経験 < EXPLV:3
	TIMES LOCAL , 0.80
	TIMES LOCAL:1 , 1.50
ELSEIF EXP:ARG:Ａ経験 < EXPLV:4
	TIMES LOCAL , 0.60
	TIMES LOCAL:1 , 1.20
ELSEIF EXP:ARG:Ａ経験 < EXPLV:5
	TIMES LOCAL , 0.40
ELSEIF EXP:ARG:Ａ経験 >= EXPLV:5
	TIMES LOCAL , 0.20
ENDIF

;PALAM:潤滑をみる
IF PALAM:ARG:潤滑 < PALAMLV:1
	TIMES LOCAL , 1.20
	TIMES LOCAL:1 , 2.00
ELSEIF PALAM:ARG:潤滑 < PALAMLV:2
	TIMES LOCAL , 1.00
	TIMES LOCAL:1 , 1.50
ELSEIF PALAM:ARG:潤滑 < PALAMLV:3
	TIMES LOCAL , 0.60
ELSEIF PALAM:ARG:潤滑 < PALAMLV:4
	TIMES LOCAL , 0.30
ELSEIF PALAM:ARG:潤滑 >= PALAMLV:4
	TIMES LOCAL , 0.20
ENDIF
SOURCE:ARG:苦痛 += LOCAL
SOURCE:ARG:反感 += LOCAL:1
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
EXP:ARG:Ａ経験 += 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE146
;浣腸実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(146)
	RETURN RESULT
;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:21
	RETURN 1
;道具を持っているか、道具なし設定でないとダメ
SIF ITEM:9 == 0 && NOITEM == 0
	RETURN 0
;肛用振動棒使用中は不可
SIF TEQUIP:14
	RETURN 0
;後庭拉珠使用中は不可
SIF TEQUIP:15
	RETURN 0
;バルーン使用中は不可
SIF TEQUIP:22
	RETURN 0
;電極使用中は不可
SIF TEQUIP:23
	RETURN 0
IF FLAG: 70 == 1
ELSE
;Ａ経験が100未満じゃできない
SIF EXP:1 < 100
	RETURN 0
;露出癖、欲望、従順の合計が10ないとできない
SIF ABL:従順 + ABL:欲望 + ABL:露出癖 < 10
	RETURN 0
ENDIF
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:現在位置)
	RETURN 0
RETURN 1

