;-------------------------------------------------
;利尿剤
;特殊コマンド
;-------------------------------------------------
@COM182
ITEM:42 -= 1

TCVAR:利尿剤 = 60
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;調教者が調合知識を持っていれば消費を抑えられる
IF TALENT:PLAYER:調合知識
	DOWNBASE:体力 += 100
	DOWNBASE:気力 += 100
ELSE
	DOWNBASE:体力 += 200
	DOWNBASE:気力 += 200
ENDIF

SOURCE:逸脱 = 800
;利尿剤効果で軽く変動
SOURCE:反感 = 150


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE182
;利尿剤実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(182)
	RETURN RESULT
;道具を持っているか、道具なし設定でないとダメ
SIF ITEM:42 == 0 && NOITEM == 0
	RETURN 0
;薬毒耐性の場合、直接注入以外ダメ
SIF TALENT:薬毒耐性
	RETURN 0
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

