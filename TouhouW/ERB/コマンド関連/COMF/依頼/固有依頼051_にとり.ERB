@固有依頼51(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE ARG % 1000
;ID101：荷取和黄瓜
CASE 101
	SELECTCASE O_DATA
	CASE "依頼名"
		CALLF MAKE_STR(V_NAME, "荷取和黄瓜")
	CASE "依頼内容表示"
		CALLF MAKE_STR(V_NAME, "提供黄瓜")
	CASE "依頼報酬表示"
		CALLF MAKE_STR(V_NAME, @"\\1000")
	CASE "依頼実行コマンド名"
		CALLF MAKE_STR(V_NAME, "提供黄瓜")
		
	CASE "依頼内容"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(GETNUM(ITEM, "黄瓜"), "調達"))
	CASE "依頼サブ"
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依頼期限"
		CALLF MAKE_INT(V_NAME, 7)
	CASE "依頼発生率"
	;これは他の固有依頼との相対確率なんで10％ではありません
		CALLF MAKE_INT(V_NAME, 10)
	CASE "依頼発生条件"
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依頼受託可能条件"
	;受託可能は@COM_ABLE366も確認のこと
	;ここを参照するのは依頼人をTARGETにしてる時なので素通しでよし
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依頼実行可能条件"
	;実行可能は@COM_ABLE367も確認のこと
		CALLF MAKE_INT(V_NAME, 1)
	;成功/失敗処理はCARRYOUTで直接書く
	;SOURCEやITEM入手など、内容が複雑なので
	CASE "依頼消滅条件"
	;30％で消失
		SIF RAND:100 < 30
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
;ID102：かっぱすたーたー
CASE 102
	SELECTCASE O_DATA
	CASE "依頼名"
		CALLF MAKE_STR(V_NAME, "かっぱすたーたー")
	CASE "依頼内容表示"
		CALLF MAKE_STR(V_NAME, "研究開発用的資金捐款（100籌碼）")
	CASE "依頼報酬表示"
		CALLF MAKE_STR(V_NAME, "薄禮（跳蛋1個）")
	CASE "依頼実行コマンド名"
		CALLF MAKE_STR(V_NAME, "捐献資金")
		
	CASE "依頼内容"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(0, "作業"))
	CASE "依頼サブ"
	CASE "依頼期限"
	CASE "依頼発生率"
	;これは他の固有依頼との相対確率なんで10％ではありません
		CALLF MAKE_INT(V_NAME, 10)
	CASE "依頼発生条件"
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依頼受託可能条件"
	;受託可能は@COM_ABLE366も確認のこと
	;ここを参照するのは依頼人をTARGETにしてる時なので素通しでよし
		CALLF MAKE_INT(V_NAME, 1)
	CASE "依頼実行可能条件"
	;実行可能は@COM_ABLE367も確認のこと
		SIF MONEY:2 >= 100
			CALLF MAKE_INT(V_NAME, 1)
	;成功/失敗処理はCARRYOUTで直接書く
	;SOURCEやITEM入手など、内容が複雑なので
	CASE "依頼消滅条件"
	;30％で消失
		SIF RAND:100 < 30
			CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
ENDSELECT



;固有依頼の設定用
;この関数は実行/成功/失敗時の
;報酬とペナルティと地の文のみを扱います
;各キャラのメッセージは別所にて
@IRAI_固有51(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
;個々の依頼名で分岐
CASE "荷取和黄瓜"
	SELECTCASE SCENE
	CASE "依頼条件表示"
	;何か専用の表示情報を設けたい時用
	;受託済みの依頼表示で使用されます
	;
	;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも無しで
	;ここ以外の表示項目は
	;PRINTFORML 　　　　　：
	;となっているのでスペースを揃えたほうが見栄えが良いです
	
	CASE "実行委託時"
	;実行委託時にはRESULTが意味を持ちます
	;-2:キャンセル（選択肢があり、実行しなかった時）
	;-1:実行して失敗
	; 0:実行して成功
	; 1:実行して依頼続行（未解決状態、時間経過あり）
		SOURCE:TARGET:歓楽 += 500
		PRINTFORMW %CALLNAME:MASTER%给%CALLNAME:TARGET%送来了黄瓜
		PRINTFORML
		ITEM:黄瓜 --
		RETURN 0
	CASE "依頼成功時"
	;成功報告時の報酬など
		MONEY += 1000
		CALL CHANGE_CFLAG(2, TARGET, 30)
		CALL CHANGE_CFLAG(4, TARGET, 20)
		TALENT:心情 = LIMIT(TALENT:心情 + 1, -1, 1)
		PRINTFORMW %CALLNAME:MASTER%獲得了作為委託報酬的\\1000
	CASE "依頼失敗時"
	;失敗報告時の処理
		CALL CHANGE_CFLAG(2, TARGET, -10)
		CALL CHANGE_CFLAG(4, TARGET, -10)
		TALENT:心情 = LIMIT(TALENT:心情 - 1, -1, 1)
	ENDSELECT

CASE "かっぱすたーたー"
	SELECTCASE SCENE
	CASE "依頼条件表示"
	;何か専用の表示情報を設けたい時用
	;受託済みの依頼表示で使用されます
	;
	;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも無しで
	;ここ以外の表示項目は
	;PRINTFORML 　　　　　：
	;となっているのでスペースを揃えたほうが見栄えが良いです
	
	CASE "実行委託時"
	;実行委託時にはRESULTが意味を持ちます
	;-2:キャンセル（選択肢があり、実行しなかった時）
	;-1:実行して失敗
	; 0:実行して成功
	; 1:実行して依頼続行（未解決状態、時間経過あり）
		SOURCE:歓楽 = 1000
		MONEY:2 -= 100
		PRINTFORMW %CALLNAME:MASTER%把籌碼捐給了%CALLNAME:TARGET%
		RETURN 0
	CASE "依頼成功時"
	;成功報告時の報酬など
		ITEM:跳蛋 ++
		;システムメッセージつき好感度変化
		;最後の引数だけ好感度が変化
		CALL CHANGE_CFLAG(2, TARGET, 20)
		;システムメッセージつき信頼度変化
		;最後の引数だけ信頼度が変化
		CALL CHANGE_CFLAG(4, TARGET, 10)
		PRINTFORMW 收下了回禮跳蛋
	CASE "依頼失敗時"
	;失敗報告時の処理
		CALL CHANGE_CFLAG(2, TARGET, -10)
		CALL CHANGE_CFLAG(4, TARGET, -10)
	ENDSELECT
ENDSELECT
