[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ(13)
;--------------------------------------------
@IRAI_SETTING_6

IRAI_SETTING_DEADLINE:6 = 0
IRAI_SETTING_TARGET:6 = 13
IRAI_SETTING_CLIENT:6 = 13

IRAI_SETTING_COMMANDNAME:6 = 送出冰淇淋


;--------------------------------------------
;依頼発生時のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_6
PRINTFORML 「請幇我帯冰淇淋来」
PRINTFORML 依頼内容：提供六份冰淇淋
PRINTFORML 報酬　　：\\3000

;--------------------------------------------
;実行委託時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_CARRYOUT_6
PRINTFORMW %CALLNAME:MASTER%把冰淇淋交给了%CALLNAME:TARGET%
PRINTFORMW 「非常感谢♪%CALLNAME:MASTER%要不要也和我一起尝尝看呢？」
PRINTFORMW %CALLNAME:TARGET%邀請%CALLNAME:MASTER%同席的样子
PRINTFORML
;冰淇淋
ITEM:213 -= 6

;--------------------------------------------
;依頼失敗時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_FAILED_6
;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,-20)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依頼達成時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_SUCCESS_6
SOURCE:TARGET:歓楽 += 200
SOURCE:TARGET:征服 += 300

;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,20)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,5)
MONEY += 3000

;--------------------------------------------
;実行委託条件
;--------------------------------------------
@IRAI_ACTABLE_6
SIF SHIRAHU(TARGET) == 1 && ITEM:冰淇淋 >= 6
	RETURN 1

;--------------------------------------------
;依頼発生条件
;--------------------------------------------
@IRAI_HAPPEN_6
SIF !RAND:4
	RETURN 1


;--------------------------------------------
;依頼消滅条件
;--------------------------------------------
@IRAI_VANISH_6
RETURN 1
[SKIPEND]
