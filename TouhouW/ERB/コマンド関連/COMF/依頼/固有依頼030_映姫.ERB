@固有依頼30(ARG, O_DATA, V_NAME)
#FUNCTION
#LOCALSIZE 1
#LOCALSSIZE 1
#DIMS O_DATA
#DIMS V_NAME
SELECTCASE ARG % 1000
;ID101：討厭的説教
CASE 101
	SELECTCASE O_DATA
	CASE "依頼名"
		CALLF MAKE_STR(V_NAME, "討厭的説教")
	CASE "依頼内容表示"
		CALLF MAKE_STR(V_NAME, "把映姫的信交給小町")
	CASE "依頼報酬表示"
		CALLF MAKE_STR(V_NAME, @"\\1000")
	CASE "依頼実行コマンド名"
		CALLF MAKE_STR(V_NAME, "送出信件")
		
	CASE "依頼内容"
		CALLF MAKE_INT(V_NAME, MAKE_IRAI_DATA(76, "伝令（人物）"))
	CASE "依頼サブ"
	CASE "依頼期限"
	;発生時ではなく受託時に確定します
	CASE "依頼発生率"
	;これは他の固有依頼との相対確率なんで10％ではありません
		CALLF MAKE_INT(V_NAME, 10)
	CASE "依頼発生条件"
		SIF CAN_MEET(76)
			CALLF MAKE_INT(V_NAME, 1)
	CASE "依頼受託可能条件"
	;受託可能は@COM_ABLE366も確認のこと
		;仕事の曜日でない
		IF !GROUPMATCH(GET_DAY(), "月", "水", "金")
		;仕事の時間帯でない
		ELSEIF !INRANGE(TIME / 60, 10, 15)
		;小町が三途之川にいる
		ELSEIF CFLAG:76:現在位置 == 三途之川
		;上記の条件を抜けた場合、サボり認定とする
		ELSE
			CALLF MAKE_INT(V_NAME, 1)
		ENDIF
	CASE "依頼実行可能条件"
	;実行可能は@COM_ABLE367も確認のこと
		CALLF MAKE_INT(V_NAME, 1)
	;成功/失敗処理はCARRYOUTで直接書く
	;SOURCEやITEM入手など、内容が複雑なので
	CASE "依頼消滅条件"
	;30％で消失
	SIF RAND:100 < 30
		CALLF MAKE_INT(V_NAME, 1)
	ENDSELECT
ENDSELECT



;固有依頼の設定用
;この関数は実行/成功/失敗時の
;報酬とペナルティと地の文のみを扱います
;各キャラのメッセージは別所にて
@IRAI_固有30(CHARA, IRAI_ID, SCENE)
#DIM  CHARA
#DIM  IRAI_ID
#DIMS SCENE
#DIM  CLIENT_ID
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE STR_DATA_IRAI(IRAI_ID, "依頼名", CLIENT_ID)
;個々の依頼名で分岐
CASE "討厭的説教"
	SELECTCASE SCENE
	CASE "依頼条件表示"
	;何か専用の表示情報を設けたい時用
	;受託済みの依頼表示で使用されます
	;
	;PRINT系だけでSOURCEとかは入れちゃダメ、WAITも無しで
	;ここ以外の表示項目は
	;PRINTFORML 　　　　　：
	;となっているのでスペースを揃えたほうが見栄えが良いです
	
	CASE "実行委託時"
	;実行委託時にはRESULTが意味を持ちます
	;-2:キャンセル（選択肢があり、実行しなかった時）
	;-1:実行して失敗
	; 0:実行して成功
	; 1:実行して依頼続行（未解決状態、時間経過あり）
		PRINTFORMW %CALLNAME:MASTER%把保管着的信親手交給了%CALLNAME:76%
		SOURCE:76:恐怖 = 100
		SOURCE:76:屈従 = 500
		CALL CHANGE_CFLAG(4, 76, 3)
	CASE "依頼成功時"
	;成功報告時の報酬など
		;システムメッセージつき好感度変化
		;最後の引数だけ好感度が変化
		CALL CHANGE_CFLAG(2, TARGET, 20)
		;システムメッセージつき信頼度変化
		;最後の引数だけ信頼度が変化
		CALL CHANGE_CFLAG(4, TARGET, 15)
		MONEY += 1000
		PRINTFORMW %CALLNAME:MASTER%獲得了作為委託報酬的\\1000
	CASE "依頼失敗時"
	;失敗報告時の処理
		;システムメッセージつき好感度変化
		;最後の引数だけ好感度が変化
		CALL CHANGE_CFLAG(2, TARGET, -20)
		;システムメッセージつき信頼度変化
		;最後の引数だけ信頼度が変化
		CALL CHANGE_CFLAG(4, TARGET, -10)
	ENDSELECT
ENDSELECT
