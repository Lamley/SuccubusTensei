[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ(6)
;--------------------------------------------
@IRAI_SETTING_5

IRAI_SETTING_DEADLINE:5 = 0
IRAI_SETTING_TARGET:5 = 1
IRAI_SETTING_CLIENT:5 = 1

IRAI_SETTING_COMMANDNAME:5 = 送出酒水


;--------------------------------------------
;依頼発生時のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_5
PRINTFORML 「能不能幇忙提供些宴会用的酒呢」
PRINTFORML 依頼内容：提供酒(10份)
PRINTFORML 報酬　　：宴会規模提高

;--------------------------------------------
;実行委託時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_CARRYOUT_5
PRINTL 要交出什么呢？
CALL 酒一覧表示(10)
IF RESULT >= 51 && RESULT <= 53
	PRINTFORMW %CALLNAME:MASTER%把酒交给了%CALLNAME:TARGET%
	ITEM:RESULT -= 10
	FLAG:宴会差し入れ = RESULT
ELSE
	RETURN -1
ENDIF

;--------------------------------------------
;依頼失敗時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_FAILED_5
;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,-30)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依頼達成時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_SUCCESS_5
PRINTFORML 「得救了」
;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,50)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,20)

;--------------------------------------------
;実行委託条件
;--------------------------------------------
@IRAI_ACTABLE_5
SIF SHIRAHU(TARGET) == 1 && MAX(ITEM:51,ITEM:52,ITEM:53) > 9
	RETURN 1

;--------------------------------------------
;依頼発生条件
;--------------------------------------------
@IRAI_HAPPEN_5
SIF FLAG:宴会開催フラグ == 1
	RETURN 1

;--------------------------------------------
;依頼消滅条件
;--------------------------------------------
@IRAI_VANISH_5
SIF FLAG:宴会開催フラグ == 1 && !DAY % 7
	RETURN 1
[SKIPEND]
