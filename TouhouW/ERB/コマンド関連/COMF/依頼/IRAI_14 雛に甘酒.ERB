[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ(79)
;--------------------------------------------
@IRAI_SETTING_14

IRAI_SETTING_DEADLINE:14 = 3
IRAI_SETTING_TARGET:14 = 79
IRAI_SETTING_CLIENT:14 = 79

IRAI_SETTING_COMMANDNAME:14 = 提供甜酒


;--------------------------------------------
;依頼発生時のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_14

PRINTFORML 「我很喜欢甜酒。能给我两份吗？」
PRINTFORML 依頼内容：提供两份甜酒
PRINTFORML 報酬　　：\\1000

;--------------------------------------------
;実行委託時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_CARRYOUT_14
SOURCE:TARGET:歓楽 += 500
SOURCE:MASTER:露出 += 100
PRINTFORMW %CALLNAME:MASTER%把甜酒送给了%CALLNAME:TARGET%、她的表情変得稍微缓和了
PRINTFORML 注视着一辺呼呼一辺喝着甜酒的%CALLNAME:TARGET%丝毫不怕烫的样子
PRINTFORMW 注意到这一視線的%CALLNAME:TARGET%覚得有些害羞
PRINTFORML 
ITEM:甜酒 -= 2
TIME += 20

;--------------------------------------------
;依頼失敗時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_FAILED_14
CALL CHANGE_CFLAG(2,TARGET,-10)
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依頼達成時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_SUCCESS_14
MONEY += 1000
CALL CHANGE_CFLAG(2,TARGET,30)
CALL CHANGE_CFLAG(4,TARGET,20)
TALENT:心情 = LIMIT(TALENT:心情 + 1, -1, 1)
;--------------------------------------------
;実行委託条件
;--------------------------------------------
@IRAI_ACTABLE_14
SIF SHIRAHU(TARGET) == 1 && ITEM:甜酒 >= 2
	RETURN 1

;--------------------------------------------
;依頼発生条件
;--------------------------------------------
@IRAI_HAPPEN_14
SIF !RAND:15 && DAY:2 != 2
	RETURN 1


;--------------------------------------------
;依頼消滅条件
;--------------------------------------------
@IRAI_VANISH_14
SIF DAY:2 == 2
	RETURN 1
SIF !RAND:5
	RETURN 1
[SKIPEND]
