[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ(14)
;--------------------------------------------
@IRAI_SETTING_7

IRAI_SETTING_DEADLINE:7 = 0
IRAI_SETTING_TARGET:7 = 14
IRAI_SETTING_CLIENT:7 = 14

IRAI_SETTING_COMMANDNAME:7 = 陪着玩


;--------------------------------------------
;依頼発生時のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_7
PRINTFORML 「来ー！玩ー！吧ー！」
PRINTFORML 依頼内容：一起玩
PRINTFORML 報酬　　：青蛙

;--------------------------------------------
;実行委託時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_CARRYOUT_7
SOURCE:歓楽 = 1500
PRINTFORMW %CALLNAME:MASTER%和%CALLNAME:TARGET%玩了投接球游戏
PRINTFORMW %CALLNAME:TARGET%終始帯着天真的笑容
PRINTL
TIME += 20
DOWNBASE:体力 = 150
DOWNBASE:気力 = 100
DOWNBASE:MASTER:体力 = 150
DOWNBASE:MASTER:気力 = 100

;--------------------------------------------
;依頼失敗時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_FAILED_7
PRINTFORML 「还没尽兴呢！再陪我一会儿啊！」
;--------------------------------------------
;依頼達成時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_SUCCESS_7
PRINTFORML 「还没尽兴呢！再陪我一会儿啊！」
ITEM:青蛙 ++
TALENT:TARGET:心情 = LIMIT(TALENT:心情 + 1, -1, 1)
CALL CHANGE_CFLAG(2,14,30)
CALL CHANGE_CFLAG(4,14,15)
;--------------------------------------------
;実行委託条件
;--------------------------------------------
@IRAI_ACTABLE_7
SIF SHIRAHU(TARGET) == 1
	RETURN 1

;--------------------------------------------
;依頼発生条件
;--------------------------------------------
@IRAI_HAPPEN_7
SIF !RAND:4
	RETURN 1

;--------------------------------------------
;依頼消滅条件
;--------------------------------------------
@IRAI_VANISH_7
	RETURN 1
[SKIPEND]
