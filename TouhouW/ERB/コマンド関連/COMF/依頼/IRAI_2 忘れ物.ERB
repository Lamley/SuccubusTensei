[SKIPSTART]
;--------------------------------------------
;基本条件いろいろ
;--------------------------------------------
@IRAI_SETTING_2

IRAI_SETTING_DEADLINE:2 = 7
IRAI_SETTING_TARGET:2 = 11
IRAI_SETTING_CLIENT:2 = 1

IRAI_SETTING_COMMANDNAME:2 = 送回遗失物


;--------------------------------------------
;依頼発生時のメッセージ
;--------------------------------------------
@IRAI_INITIALMESSAGE_2
PRINTFORML 「魔理沙把东西落下了」
PRINTFORML 依頼内容：把失物还给魔理沙
PRINTFORML 報酬　　：\\500
;--------------------------------------------
;実行委託時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_CARRYOUT_2
SOURCE:歓楽 = 500
PRINTFORMW %CALLNAME:MASTER%把遗落的东西送到了%CALLNAME:11%手上
;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,11,20)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,11,10)
;--------------------------------------------
;依頼失敗時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_FAILED_2
PRINTFORML 「我已経送过去了哦」
CALL CHANGE_CFLAG(2,TARGET,-10)
CALL CHANGE_CFLAG(4,TARGET,-10)
;--------------------------------------------
;依頼達成時のメッセージやソースなどの処理
;--------------------------------------------
@IRAI_SUCCESS_2
PRINTFORML 「谢谢你、幇上大忙了」
MONEY += 500
SOURCE:TARGET:歓楽 += 1000
;システムメッセージつき好感度変化
;最後の引数だけ好感度が変化
CALL CHANGE_CFLAG(2,TARGET,20)

;システムメッセージつき信頼度変化
;最後の引数だけ信頼度が変化
CALL CHANGE_CFLAG(4,TARGET,10)
;--------------------------------------------
;実行委託条件
;--------------------------------------------
@IRAI_ACTABLE_2
SIF SHIRAHU(TARGET) == 1
	RETURN 1

;--------------------------------------------
;依頼発生条件
;--------------------------------------------
@IRAI_HAPPEN_2
SIF (GET_MAPID(CFLAG:11:現在位置) != 0 || (FLAG:なりきり != 11 && !CFLAG:11:出禁)) && !RAND:10
	RETURN 1

;--------------------------------------------
;依頼消滅条件
;--------------------------------------------
@IRAI_VANISH_2
SIF !RAND:3
	RETURN 1
[SKIPEND]
