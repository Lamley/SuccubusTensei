;被愛撫
;及びレズプレイ、レベル1
;-------------------------------------------------
@COM125
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;奉仕快楽フラグ
TCVAR:108 = 1

;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具）

LOCALS = {PLAYER}/
CSTR:TARGET:10 += LOCALS
TCVAR:TARGET:2 = 4
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;コメントアウト状態で提出
;SOURCE:PLAYER:快Ｃ = 80
;SOURCE:PLAYER:快Ｂ = 80

;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
ELSE
	DOWNBASE:体力 += 10
	DOWNBASE:気力 += 100
	
;コメントアウト状態で提出
	;SOURCE:性行動 = 250
	;SOURCE:屈従 = 350
	;SOURCE:逸脱 = 100
	SOURCE:反感 = 100
	SOURCE:情愛 = 50
	
	;上のほうで計算した汚れデータ
	SOURCE:不潔 = Y*80 + 50

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 400
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;調教者の指⇔奴隷の指の汚れが移動
STAIN:PLAYER:1 |= STAIN:1
STAIN:1 |= STAIN:PLAYER:1
;調教者のＢ⇔奴隷の指の汚れが移動
STAIN:PLAYER:5 |= STAIN:1
STAIN:1 |= STAIN:PLAYER:5
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;手淫経験;コメントアウト状態で提出
;SIF !FLAG:70
;	EXP:手淫経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET,PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ELSE
	IF HETEROSEX(TARGET,PLAYER)
		EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 2
		EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	ENDIF
ENDIF
RETURN 1

@CAN_COM125(ARG)
SKIPDISP ARG
PRINTL 被愛撫
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
IF !FLAG:70
	A = 0
	S = 0

	;すべての命令に共通の要素を考慮
	;(従順が高いと命令に従いやすいなど)
	CALL COM_ORDER

	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		A += ABL:欲望 * 1
		PRINT 欲望
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 1,')
		S = 1
	ENDIF
	;ABL:奉仕精神
	IF ABL:奉仕精神
		SIF S
			PRINT  + 
		A += ABL:奉仕精神 * 4
		PRINT 奉仕精神
		PRINTV 'LV,ABL:奉仕精神,'(,ABL:奉仕精神 * 4,')
		S = 1
	ENDIF

	IF MARK:快楽刻印
		SIF S
			PRINT  + 
		A += MARK:快楽刻印 * 2
		PRINT 快楽刻印
		PRINTV 'LV,MARK:快楽刻印,'(,MARK:快楽刻印 * 2,')
		S = 1
	ENDIF
	;PALAM:欲情
	IF GETPALAMLV(PALAM:欲情,5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:欲情,5) * 1
		PRINT 欲情
		PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 1,')
		S = 1
	ENDIF
	;害羞
	IF TALENT:羞恥心 > 0
		PRINT  - 
		A -= 1
		PRINT 害羞
		PRINTV '(,1,')
		S = 1
	ENDIF
	;汚臭鈍感
	IF TALENT:汚臭耐性 > 0
		SIF S
			PRINT  + 
		A += 3
		PRINT 汚臭鈍感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;汚臭敏感
	IF TALENT:汚臭耐性 < 0
		PRINT  - 
		A -= 3
		PRINT 汚臭敏感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;献身的
	IF TALENT:献身的
		SIF S
			PRINT  + 
		A += 6
		PRINT 献身的
		PRINTV '(,6,')
		S = 1
	ENDIF
	;否定快感（淫乱で無効）
	IF TALENT:快感応答 < 0 && !TALENT:淫乱
		PRINT  - 
		A -= 1
		PRINT 否定快感
		PRINTV '(,1,')
		S = 1
	ENDIF
	;淫乱
	IF TALENT:淫乱 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 淫乱
		PRINTV '(,5,')
		S = 5
	ENDIF
	Y = 0
	;愛液の汚れ
	SIF STAIN:PLAYER:3 & 1
		Y += 1
	;精液の汚れ
	SIF STAIN:PLAYER:3 & 4
		Y += 3
	;アナルの汚れ
	SIF STAIN:PLAYER:3 & 8
		Y += 7
	SIF STAIN:PLAYER:3 & 16
		Y += 15

	Y = Y * (2 - TALENT:汚臭耐性) / 2

	;汚れあり
	IF Y
		PRINT  - 
		A -= Y
		PRINT 汚れあり
		;汚臭鈍感
		IF TALENT:汚臭耐性 > 0
			PRINT 、汚臭鈍感
		ELSEIF TALENT:汚臭耐性 < 0
			PRINT 、汚臭敏感
		ENDIF
		PRINTV '(,Y,')
		S = 1
	ENDIF

	;合計を表示(23以上で実行)
	PRINT  = 
	PRINTV A

	V = 23
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V

	WAIT
	SKIPDISP 0
	;実行できない
	SIF A < V
		RETURN 0
ENDIF
RETURN 1

