	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:18
	RETURN 1
;道具を持っているか、道具なし設定でないとダメ
SIF ITEM:15 == 0 && NOITEM == 0
	RETURN 0
RETURN 1

