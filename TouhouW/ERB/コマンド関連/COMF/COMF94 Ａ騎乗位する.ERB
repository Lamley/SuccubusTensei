;-------------------------------------------------
;Ａ騎乗位
;-------------------------------------------------
@COM94
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = TARGET

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
LOCALS = {PLAYER}/
CSTR:TARGET:10 += LOCALS

;射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）
TCVAR:TARGET:2 = 2
TCVAR:PLAYER:2 = 12

;強度
TCVAR:TARGET:4 = 1700
TCVAR:PLAYER:4 = 1000 + (200 * ABL:PLAYER:Ａ感覚)

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
BASE:MASTER:TSP -= 180
DOWNBASE:PLAYER:体力 += 60
DOWNBASE:PLAYER:気力 += 180

SOURCE:PLAYER:快Ａ = 500

ELSE

DOWNBASE:体力 += 40
DOWNBASE:気力 += 120
DOWNBASE:PLAYER:体力 += 60
DOWNBASE:PLAYER:気力 += 180

SOURCE:PLAYER:快Ａ = 500
SOURCE:情愛 = 100
SOURCE:性行動 = 400
SOURCE:征服 = 1000
SOURCE:逸脱 = 500
SOURCE:反感 = 500

;上のほうで計算した汚れデータ
SOURCE:不潔 = Y*10 + 60
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 500
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＰ⇔調教者のＡの汚れが移動
STAIN:2 |= STAIN:PLAYER:4
STAIN:2 |= STAIN:PLAYER:7
STAIN:PLAYER:4 |= STAIN:2
STAIN:PLAYER:7 |= STAIN:2

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:Ａ経験 ++
EXP:PLAYER:Ａ性交経験 ++
EXP:挿入経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1 || CFLAG:イタズラ
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF

;愛情経験
SIF !ASSIPLAY
EXP:愛情経験 += TALENT:恋慕
ENDIF
STR:0 = Ａ騎乗位

RETURN 1

@CAN_COM94(ARG)
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
IF FLAG:70 == 1 || CFLAG:イタズラ
	SKIPDISP ARG
	PRINTL Ａ騎乗位
ELSE

;縄で縛られている場合は無視（縄が無い時のみ実行判定を行う）
IF !TEQUIP:縄
	SKIPDISP ARG
	PRINTL Ａ騎乗位
	A = 0
	S = 0

	;すべての命令に共通の要素を考慮
	;(従順が高いと命令に従いやすいなど)
	CALL COM_ORDER

	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		A += ABL:欲望 * 2
		PRINT 欲望
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 2,')
		S = 1
	ENDIF
	
	;ABL:奉仕精神
	IF ABL:奉仕精神
		SIF S
			PRINT  + 
		A += ABL:奉仕精神
		PRINT 奉仕精神
		PRINTV 'LV,ABL:奉仕精神,'(,ABL:奉仕精神,')
		S = 1
	ENDIF

	;ABL:施虐属性
	IF ABL:施虐属性
		SIF S
			PRINT  + 
		A += ABL:施虐属性 * 4
		PRINT 施虐属性
		PRINTV 'LV,ABL:施虐属性,'(,ABL:施虐属性 * 4,')
		S = 1
	ENDIF

	IF MARK:快楽刻印
		SIF S
			PRINT  + 
		A += MARK:快楽刻印 * 2
		PRINT 快楽刻印
		PRINTV 'LV,MARK:快楽刻印,'(,MARK:快楽刻印 * 2,')
		S = 1
	ENDIF

	;PALAM:欲情
	IF GETPALAMLV(PALAM:欲情,5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:欲情,5) * 2
		PRINT 欲情
		PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 2,')
		S = 1
	ENDIF

	;害羞
	IF TALENT:羞恥心 > 0
		PRINT  - 
		A -= 1
		PRINT 害羞
		PRINTV '(,1,')
		S = 1
	ENDIF
	
	;献身的
	IF TALENT:献身的
		SIF S
			PRINT  + 
		A += 6
		PRINT 献身的
		PRINTV '(,2,')
		S = 1
	ENDIF

	;接受快感
	IF TALENT:快感応答 > 0
		SIF S
			PRINT  + 
		A += 2
		PRINT 接受快感
		PRINTV '(,2,')
		S = 1
	ENDIF

	;否定快感（淫乱、娼婦で無効）
	IF TALENT:快感応答 < 0 && !TALENT:淫乱
		PRINT  - 
		A -= 2
		PRINT 否定快感
		PRINTV '(,2,')
		S = 1
	ENDIF
	
	;倒錯的
	IF TALENT:倒錯的
		SIF S
			PRINT  + 
		A += 4
		PRINT 倒錯的
		PRINTV '(,4,')
		S = 1
	ENDIF
	
	;施虐狂
	IF TALENT:施虐狂
		SIF S
			PRINT  + 
		A += 3
		PRINT 施虐狂
		PRINTV '(,6,')
		S = 1
	ENDIF
	
	;小悪魔
	IF TALENT:小悪魔
		SIF S
			PRINT  + 
		A += 4
		PRINT 小悪魔
		PRINTV '(,4,')
		S = 1
	ENDIF
	
	;恋慕
	IF TALENT:恋慕 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 恋慕
		PRINTV '(,5,')
		S = 5
	ENDIF

	;親愛
	IF TALENT:恋慕 > 1 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 親愛
		PRINTV '(,5,')
		S = 5
	ENDIF

	;淫乱
	IF TALENT:淫乱 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 淫乱
		PRINTV '(,5,')
		S = 5
	ENDIF

	;娼婦
	IF TALENT:淫乱 > 1 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 娼婦
		PRINTV '(,5,')
		S = 5
	ENDIF
	
	;STAIN関係の計算
	;アナルと腸内の両方を見る
	Y = 0
	;愛液の汚れ
	SIF (STAIN:PLAYER:4 & 1) || (STAIN:PLAYER:7 & 1)
		Y += 1
	;精液の汚れ
	SIF (STAIN:PLAYER:4 & 4) || (STAIN:PLAYER:7 & 4)
		Y += 3
	;触手粘液の汚れ
	SIF (STAIN:PLAYER:4 & 32) || (STAIN:PLAYER:7 & 32)
		Y += 15
	Y = Y * (2 - TALENT:汚臭耐性) / 2

	;汚れあり
	IF Y
		PRINT  - 
		A -= Y
		PRINT 汚れあり
		;汚臭鈍感
		IF TALENT:汚臭耐性 > 0
			PRINT 、汚臭鈍感
		ELSEIF TALENT:汚臭耐性 < 0
			PRINT 、汚臭敏感
		ENDIF
		PRINTV '(,Y,')
		S = 1
	ENDIF

	;合計を表示(30以上で実行)
	PRINT  = 
	PRINTV A

	V = 30
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V

	WAIT
	SKIPDISP 0
	;実行できない
	SIF A < V
		RETURN 0
ELSE
	SKIPDISP ARG
	PRINTL Ａ騎乗位
ENDIF
ENDIF
RETURN 1

