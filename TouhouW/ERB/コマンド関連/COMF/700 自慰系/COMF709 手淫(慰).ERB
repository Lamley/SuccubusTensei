;手淫実行判定
SIF !TFLAG:100
	RETURN 0
;SIF GLOBAL_COMABLE(709)
	RETURN RESULT
;男人かFutanariじゃないとダメ
SIF !(TALENT:2 & 2)
	RETURN 0
;縄使用中は不可
SIF TEQUIP:縄
	RETURN 0
RETURN 1

