;-------------------------------------------------
;手淫
;自慰系コマンド、レベル3
;-------------------------------------------------
@COM709
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）

LOCALS = {PLAYER}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 3
;強度
TCVAR:PLAYER:4 = 500
;奉仕快楽
TFLAG:30 = 1
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:PLAYER:体力 += 10
DOWNBASE:PLAYER:気力 += 100

SOURCE:PLAYER:情愛 = 50
SOURCE:PLAYER:性行動 = 250
SOURCE:PLAYER:達成 = 50
SOURCE:PLAYER:屈従 = 350
SOURCE:PLAYER:逸脱 = 100
SOURCE:PLAYER:反感 = 100

;上のほうで計算した汚れデータ
SOURCE:PLAYER:不潔 = Y*10 + 60


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:鬱屈 += 200
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;奴隷の指⇔調教者のＰの汚れが移動
STAIN:PLAYER:手 |= STAIN:PLAYER:Ｐ
STAIN:PLAYER:Ｐ |= STAIN:PLAYER:手

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF !FLAG:時間停止
	TIME += 5
;手淫経験
EXP:PLAYER:手淫経験 ++
;自慰経験
CFLAG:PLAYER:オナニーした ++

RETURN 1

;-------------------------------------------------
;実行可能判定
;-------------------------------------------------
