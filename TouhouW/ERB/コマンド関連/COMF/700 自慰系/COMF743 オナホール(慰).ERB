;-------------------------------------------------
;飛機杯
;道具使用コマンド、レベル2
;-------------------------------------------------
@COM743
;着脱の処理
TEQUIP:PLAYER:飛機杯 = !TEQUIP:PLAYER:飛機杯

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）
LOCALS = 飛機杯/
CSTR:PLAYER:10 += LOCALS
;強度
TCVAR:PLAYER:4 = 1000

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:PLAYER:体力 += 10
DOWNBASE:PLAYER:気力 += 80

SOURCE:PLAYER:快Ｃ = 200
SOURCE:PLAYER:露出 = 20
SOURCE:PLAYER:逸脱 = 30
SOURCE:PLAYER:反感 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:鬱屈 += 30

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF !FLAG:時間停止
	TIME += 5
;自慰経験
CFLAG:PLAYER:オナニーした ++

EXP:PLAYER:道具使用経験 ++

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM743(PLAYER)
PRINTL ＜飛機杯装備中＞

;TCVAR:0 射精対象フラグ（ビット0=TARGET 1=PLAYER 2=MASTER 3=ASSI 4=触手 5=其他）
;TCVAR:1 予備射精対象フラグ（ビットを使いたくない人用、CFLAG:100に翻訳されます）
;	（1=TARGET 2=PLAYER 3=MASTER 4=ASSI 5=TARGET+ASSI 6=MASTER+ASSI -1=触手 -2=其他）
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 ）
;TCVAR:4 射精快感強度

SETBIT TCVAR:PLAYER:0, 5
;強度
TCVAR:PLAYER:4 = 1000
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:気力 += 20

SOURCE:PLAYER:快Ｃ += 100
SOURCE:PLAYER:露出 += 10
SOURCE:PLAYER:逸脱 += 15
SOURCE:PLAYER:反感 += 15
;-------------------------------------------------
;経験の処理
;-------------------------------------------------

RETURN 1

;-------------------------------------------------
;実行可能判定
;-------------------------------------------------
@COM_ABLE743
;飛機杯実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(743)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:12
	RETURN 1
;道具を持っているか、道具なし設定でないとダメ
SIF ITEM:3 == 0 && NOITEM == 0
	RETURN 0
;男人やFutanariじゃないとダメ
SIF !(TALENT:2 & 2)
	RETURN 0

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;ASSIの場合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
RETURN 1

