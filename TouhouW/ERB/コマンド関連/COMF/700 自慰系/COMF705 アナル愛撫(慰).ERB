;-------------------------------------------------
;肛門愛撫
;自慰系コマンド、レベル2
;-------------------------------------------------
@COM705
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:PLAYER:体力 += 40
DOWNBASE:PLAYER:気力 += 100

SOURCE:PLAYER:快Ａ = 100
SOURCE:PLAYER:苦痛 = 100
SOURCE:PLAYER:屈従 = 100
SOURCE:PLAYER:逸脱 = 80
SOURCE:PLAYER:反感 = 60

SIF TALENT:PLAYER:霊活手指
	SOURCE:PLAYER:快Ａ += 20
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:鬱屈 += 100

;Aへの苦痛は先に処理しておく
CALL PAIN_CHECK_A(PLAYER)
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＡ⇔調教者の指の汚れが移動
STAIN:PLAYER:手 |= STAIN:PLAYER:Ａ
STAIN:PLAYER:手 |= STAIN:PLAYER:腸内
STAIN:PLAYER:Ａ |= STAIN:PLAYER:手
STAIN:PLAYER:腸内 |= STAIN:PLAYER:手
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF !FLAG:時間停止
	TIME += 5
;自慰経験
CFLAG:PLAYER:オナニーした ++
EXP:PLAYER:手淫経験 ++
RETURN 1

;-------------------------------------------------
;実行可能判定
;-------------------------------------------------
@COM_ABLE705
;肛門愛撫実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(705)
	RETURN RESULT
;潤滑不足で、従順3以下・百合属性3以下のASSIの場合肛門愛撫はできない（施虐狂ならＯＫ）
IF PALAM:潤滑 < PALAMLV:2 && ASSIPLAY
	SIF (ABL:ASSI:従順 <= 3 || ABL:ASSI:百合属性 <= 3) && TALENT:ASSI:施虐狂 == 0
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
RETURN 1

