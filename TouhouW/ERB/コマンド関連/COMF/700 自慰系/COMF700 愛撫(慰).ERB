;-------------------------------------------------
;愛撫
;自慰系コマンド　レベル2
;-------------------------------------------------
@COM700
PRINTFORML 愛撫実行
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:PLAYER:体力 += 5
DOWNBASE:PLAYER:気力 += 50

SOURCE:PLAYER:快Ｃ = 80
SOURCE:PLAYER:快Ｂ = 80
SOURCE:PLAYER:情愛 = 50
SOURCE:PLAYER:性行動 = 60
SOURCE:PLAYER:露出 = 20
SOURCE:PLAYER:不潔 = 30
SOURCE:PLAYER:逸脱 = 20
SOURCE:PLAYER:反感 = 20

;性技補正
SOURCE:PLAYER:快Ｃ += ABL:PLAYER:指 * 5
SOURCE:PLAYER:快Ｂ += ABL:PLAYER:指 * 5

;舌を使う調教では、調教者の舌頭霊活によって、快感のソース増加
IF TALENT:PLAYER:霊活手指
	TIMES SOURCE:PLAYER:快Ｃ , 1.50
	TIMES SOURCE:PLAYER:快Ｂ , 1.50
ENDIF

SIF TALENT:PLAYER:舌頭霊活
	TIMES SOURCE:PLAYER:情愛 , 1.50
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:鬱屈 += 20
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
IF (FIRSTTIME(312,1) || FIRSTTIME(20,1)) || (MASTER_POSE(SET_M, SET_M) != TARGET && MASTER_POSE(0,4)) || (STAIN:0 >= 2 && (STAIN:0 != 16 && STAIN:0 != 17) && ASSIPLAY == 0 && TALENT:MASTER:汚臭耐性 < 2) || TEQUIP:20
;奴隷の口の汚れがあるときキスはない（愛液と母乳よごれはＯＫ、汚臭無視か助手調教時は問題なし）
;口枷使用中もなし
	SOURCE:PLAYER:不潔 = 0
	SOURCE:PLAYER:情愛 /= 4
	SOURCE:PLAYER:液体 /= 2
ELSE
	;汚臭鈍感
	SIF TALENT:PLAYER:汚臭耐性 > 0
		SOURCE:PLAYER:不潔 /= 4
	;汚臭敏感
	SIF TALENT:PLAYER:汚臭耐性 < 0
		SOURCE:PLAYER:不潔 *= 3
	;自尊心高
	SIF TALENT:PLAYER:自尊心 > 0
		SOURCE:PLAYER:不潔 *= 2
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1
;手淫経験
EXP:PLAYER:手淫経験 ++
;自慰経験
CFLAG:PLAYER:オナニーした ++
SIF !FLAG:時間停止
	TIME += 5
RETURN 1

;-------------------------------------------------
;実行可能判定
;-------------------------------------------------
@COM_ABLE700
;愛撫実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(700)
	RETURN RESULT
RETURN 1

