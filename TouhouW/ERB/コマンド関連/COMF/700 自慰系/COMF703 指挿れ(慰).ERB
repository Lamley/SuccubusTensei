;-------------------------------------------------
;指挿入れ
;自慰系コマンド、レベル1
;-------------------------------------------------
@COM703
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;破瓜抑制
TFLAG:2 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:PLAYER:体力 += 30
DOWNBASE:PLAYER:気力 += 80

IF !TALENT:PLAYER:処女 || TALENT:PLAYER:処女 == -1
	SOURCE:PLAYER:快Ｖ = 120
	SOURCE:PLAYER:苦痛 = 15
	SOURCE:PLAYER:露出 = 10
	SOURCE:PLAYER:逸脱 = 20
	SOURCE:PLAYER:反感 = 20
;V経験が0の時はV経験を伴わない物に派生
;Vの珠は入らないが、快Vが高いと慣らしてあるため処女喪失時に影響
ELSE
	SOURCE:PLAYER:快Ｖ = 60
	SOURCE:PLAYER:苦痛 = 10
	SOURCE:PLAYER:露出 = 30
	SOURCE:PLAYER:逸脱 = 30
	SOURCE:PLAYER:反感 = 30
ENDIF

SIF TALENT:PLAYER:霊活手指
	SOURCE:PLAYER:快Ｖ += 20
SOURCE:PLAYER:快Ｖ += ABL:PLAYER:指 * 5
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
IF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
	SOURCE:PLAYER:鬱屈 += 20
	;処女
	SIF TALENT:PLAYER:処女
		SOURCE:PLAYER:鬱屈 += 10
ENDIF
;Vへの苦痛
CALL PAIN_CHECK_V(PLAYER)
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の膣内⇔調教者の指の汚れが移動
	STAIN:PLAYER:膣内 |= STAIN:PLAYER:手
	STAIN:PLAYER:手 |= STAIN:PLAYER:膣内
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF !FLAG:時間停止
	TIME += 5
;自慰経験
CFLAG:PLAYER:オナニーした ++
EXP:PLAYER:Ｖ経験 ++
EXP:PLAYER:手淫経験 ++
RETURN 1


;-------------------------------------------------
;実行可能判定
;-------------------------------------------------
@COM_ABLE703
;指挿入れ実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(703)
	RETURN RESULT
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;潤滑不足で、従順3以下・百合属性3以下のASSIの場合肛門愛撫はできない（施虐狂ならＯＫ）
IF PALAM:潤滑 < PALAMLV:2 && ASSIPLAY
	SIF (ABL:ASSI:従順 <= 3 || ABL:ASSI:百合属性 <= 3) && !TALENT:ASSI:施虐狂
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
RETURN 1

