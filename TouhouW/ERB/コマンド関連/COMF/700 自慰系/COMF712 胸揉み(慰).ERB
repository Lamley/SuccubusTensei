;-------------------------------------------------
;揉胸
;愛撫系コマンド、レベル1
;-------------------------------------------------
@COM712
;着脱の処理
TEQUIP:PLAYER:揉胸自慰 = !TEQUIP:PLAYER:揉胸自慰

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力

	DOWNBASE:PLAYER:体力 += 10
	DOWNBASE:PLAYER:気力 += 50

	SOURCE:PLAYER:情愛 = 15
	SOURCE:PLAYER:露出 = 20
	SOURCE:PLAYER:逸脱 = 30
	SOURCE:PLAYER:反感 = 50

	SOURCE:PLAYER:快Ｂ += ABL:PLAYER:指 * 20 + 30

	SIF ABL:PLAYER:親密 >= 7
		SOURCE:PLAYER:情愛 += (ABL:PLAYER:親密 * 10)

	SIF TALENT:PLAYER:霊活手指
		TIMES SOURCE:PLAYER:快Ｂ , 1.50

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:PLAYER:自己愛 < 0 || TALENT:PLAYER:抵抗
		SOURCE:PLAYER:鬱屈 += 100

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF !FLAG:時間停止
	TIME += 5
;自慰経験
CFLAG:PLAYER:オナニーした ++
;手淫経験
EXP:PLAYER:手淫経験 ++
RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM712(PLAYER)

SELECTCASE SELECTCOM
	CASE 700 TO 709,711,740 TO 748
		PRINTL ＜揉胸解除(慰)＞
		TEQUIP:PLAYER:揉胸自慰 = !TEQUIP:PLAYER:揉胸自慰
	CASEELSE
;揉胸中
PRINTL ＜揉胸中(慰)＞
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

	DOWNBASE:PLAYER:体力 += 5
	DOWNBASE:PLAYER:気力 += 20
	SOURCE:PLAYER:快Ｂ += (ABL:PLAYER:指 + 1) * 10
	SOURCE:PLAYER:露出 = 20
	SOURCE:PLAYER:逸脱 = 30
	SOURCE:PLAYER:反感 = 30
	SOURCE:PLAYER:情愛 += ABL:PLAYER:指 * 5

EXP:PLAYER:手淫経験 ++
ENDSELECT
RETURN 1

@MESSAGE_EQUIP_COM712
	PRINTFORM 揉着%OPPAI_DESCRIPTION(PLAYER)%的同时

;-------------------------------------------------
;実行可能判定
;-------------------------------------------------
@COM_ABLE712
;揉胸実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(712)
	RETURN RESULT
;乳房電極装着中はダメ
SIF TEQUIP:24
	RETURN 0
;[絶壁]だと不可
SIF TALENT:胸囲 == -2
	RETURN 0
RETURN 1

