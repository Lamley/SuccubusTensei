;-------------------------------------------------
;淋浴
;特殊コマンド
;-------------------------------------------------
@COM188
;着脱の処理　装備時はソース、経験の加算は行わない
TEQUIP:淋浴 = !TEQUIP:淋浴
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM188(ARG)
;淋浴使用中

PRINTL ＜淋浴使用中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:ARG:体力 += 0
DOWNBASE:ARG:気力 += 10

SOURCE:ARG:恭順 += 100
SOURCE:ARG:鬱屈 += 100
SOURCE:ARG:反感 += 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;吸血鬼（流水の中では動けないため、いろいろ追加）
IF TALENT:ARG:吸血鬼
	SOURCE:ARG:恐怖 += 200
	SOURCE:ARG:屈従 += 200
	SOURCE:ARG:不潔 += 500
	SOURCE:ARG:逸脱 += 500
	SOURCE:ARG:反感 += 500
ENDIF

;動物耳の場合（まぁ基本洗われるのは嫌と解釈）
IF TALENT:ARG:動物耳
	SOURCE:ARG:恐怖 += 100
	SOURCE:ARG:屈従 += 100
	SOURCE:ARG:逸脱 += 500
	SOURCE:ARG:反感 += 500
ENDIF


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;淋浴で汚れは常にリセット
STAIN:ARG:0 = 0
STAIN:ARG:1 = 0
STAIN:ARG:2 = 2
STAIN:ARG:3 = 1
STAIN:ARG:4 = 8
STAIN:ARG:5 = 0
STAIN:ARG:6 = 0

;潤滑を1000減らす
IF PALAM:ARG:潤滑 > 1000
	PALAM:ARG:潤滑 -= 1000
ELSE
	PALAM:ARG:潤滑 = 0
ENDIF

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE188
;淋浴実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(188)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:32
	RETURN 1
;お浴室中じゃないとダメ
SIF !BATHROOM()
	RETURN 0
;プールで浴室PLAY中は淋浴機能がないとダメ
;SIF !GETBIT (FLAG:プール, 2) && CFLAG:MASTER:現在位置 != 13 && CFLAG:MASTER:現在位置 != 24 && CFLAG:MASTER:現在位置 != 30 && CFLAG:MASTER:現在位置 != 39 && CFLAG:MASTER:現在位置 != 250 && CFLAG:MASTER:現在位置 != OMANEKIBEYA()
SIF !GETBIT (FLAG:プール, 2) && !BATHROOM() && CFLAG:MASTER:現在位置 != OMANEKIBEYA()
	RETURN 0
;陰蒂夾使用中は不可
SIF TEQUIP:11
	RETURN 0
;乳頭夾使用中は不可
SIF TEQUIP:16
	RETURN 0
;搾乳器使用中は不可
SIF TEQUIP:17
	RETURN 0
;乳房電極装着中はダメ
SIF TEQUIP:24
	RETURN 0
;吸血鬼や動物耳には従順４がないと使用不可（プレイヤーが施虐狂ならＯＫ）
IF TALENT:吸血鬼 || TALENT:動物耳
SIF ABL:従順 < 4 && TALENT:PLAYER:施虐狂 == 0
	RETURN 0
ENDIF
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

