@COM_ABLE82
;乳交実行判定
SIF !TFLAG:100
	RETURN 0
SIF GLOBAL_COMABLE(82)
	RETURN RESULT
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;時間停止中は許可
IF FLAG:70 != 1
	;[絶壁]だと不可
	SIF TALENT:胸囲 == -2
		RETURN 0
	;[爆乳]なら技巧LV1以上、[巨乳]でなければ技巧3以上、[貧乳]だと技巧4以上必要
	SIF TALENT:胸囲 + ABL:技巧 < 3
		RETURN 0
	;縄使用中は不可
	SIF TEQUIP:縄
		RETURN 0
ENDIF
;調教者が男人か半人半妖かFutanariじゃないとダメ
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0

;上半身着衣
SIF TEQUIP:1 > 1 && TEQUIP:3 == 0
	RETURN 0
RETURN 1

