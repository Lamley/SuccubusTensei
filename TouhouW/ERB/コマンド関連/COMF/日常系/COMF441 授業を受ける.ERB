;-------------------------------------------------
;聽課
;-------------------------------------------------
@COM441
DOWNBASE:MASTER:体力 = 50
DOWNBASE:MASTER:気力 = 200

IF TARGET > 0 && !CFLAG:睡眠
	;固定で獲得するソース
	SOURCE:歓楽 = 200

	;信頼
	TFLAG:98 = 3
	SIF ABL:MASTER:教養 > 2
		TFLAG:98 ++ 
	IF ABL:MASTER:教養 > ABL:教養
		TFLAG:98 ++ 
		EXP:学習経験 += 2
	ENDIF
	SIF ABL:MASTER:教養 < ABL:教養 - 2
		EXP:MASTER:学習経験 ++
	;ABL:従順をみる
	IF ABL:従順 <= 1
		SOURCE:歓楽 += (ABL:従順 * 60)
	ELSEIF ABL:従順 <= 3
		SOURCE:歓楽 += 200 + (ABL:従順 * 60)
	ELSEIF ABL:従順 <= 5
		SOURCE:歓楽 += 500 + (ABL:従順 * 60)
	ELSEIF ABL:従順 <= 8
		SOURCE:歓楽 += 750 + (ABL:従順 * 75)
	ELSEIF ABL:従順 <= 11
		SOURCE:歓楽 += 1000 + (ABL:従順 * 75)
	ELSE
		SOURCE:歓楽 += 2000 + (ABL:従順 * 30)
	ENDIF
	
;授業を受けたら回数をカウント
SIF CFLAG:現在位置 == 寺子屋 && CFLAG:67:行動 == 5
	TCVAR:67:特殊イベント ++
	
	;好感度をみる
	IF CFLAG:2 <= 500
		SOURCE:歓楽 += CFLAG:2
	ELSEIF CFLAG:2 <= 5000
		SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
	ELSE
		SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
	ENDIF
	SIF SOURCE:歓楽 < 0
		SOURCE:歓楽 = 0
	EXP:MASTER:学習経験 ++
	EXP:学習経験 ++
ENDIF

TIME += 60
EXP:MASTER:学習経験 ++
SIF ITEM:103 && !RAND:2
	EXP:MASTER:学習経験 ++
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
;聽課
@COM_ABLE441
;掃除実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(441)
	RETURN RESULT
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
;寺子屋以外不可
SIF CFLAG:MASTER:現在位置 != 240
	RETURN 0
;慧音の居る所
SIF CFLAG:MASTER:現在位置 != CFLAG:67:現在位置
	RETURN 0
;仕事中以外不可
SIF CFLAG:行動 != 5
	RETURN 0
;お昼休み中は不可
SIF TIME >= 720 && TIME <= 780
	RETURN 0
;授業時間後は不可
SIF TIME >= 840
	RETURN 0
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
SIF CFLAG:うふふ == 2
	RETURN 0
RETURN 1

