;-------------------------------------------------
;戦闘訓練
;-------------------------------------------------
@COM411
;天気を参照
SELECTCASE TIME:5
	CASE 4,6,8,10,12,13
		;悪天候
		TFLAG:194 = 1
	CASE 5,9
		;ヤバい天気
		TFLAG:194 = 2
	;それ以外
	CASEELSE
		;夏場は死ねる
		SIF DAY:2 == 2 && TIME:5 == 1 && TIME > 360 && TIME < 1020
			TFLAG:194 = 3
ENDSELECT
SIF !OUTROOF(CFLAG:MASTER:現在位置)
	TFLAG:194 = 0
SELECTCASE TFLAG:194
	CASE 0
		DOWNBASE:MASTER:体力 = 200
		DOWNBASE:MASTER:気力 = 200
		IF TARGET > 0 && !CFLAG:睡眠
			;固定で獲得するソース
			SOURCE:歓楽 = 400
				MAXBASE:TARGET:体力 += RAND:10
			;信頼
			TFLAG:98 += 3
			SIF ABL:MASTER:戦闘能力 > 2
			TFLAG:98 ++ 
			IF ABL:MASTER:戦闘能力 > ABL:戦闘能力
				EXP:戦闘経験 += 2
				TFLAG:98 ++ 
			ENDIF
			SIF ABL:MASTER:戦闘能力 < ABL:戦闘能力 - 2
				EXP:MASTER:戦闘経験 ++
			;ABL:親密をみる
			IF ABL:親密 <= 5
				SOURCE:歓楽 += 500 + (ABL:親密 * 60)
				TFLAG:98 ++ 
			ELSEIF ABL:親密 <= 8
				SOURCE:歓楽 += 750 + (ABL:親密 * 75)
			ELSEIF ABL:親密 <= 11
				SOURCE:歓楽 += 1000 + (ABL:親密 * 75)
			ELSE
				SOURCE:歓楽 += 2000 + (ABL:親密 * 30)
			ENDIF
			;好感度をみる
			IF CFLAG:2 <= 500
				SOURCE:歓楽 += CFLAG:2
			ELSEIF CFLAG:2 <= 5000
				SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
			ELSE
				SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
			ENDIF
			SIF SOURCE:歓楽 < 0
				SOURCE:歓楽 = 0
			EXP:MASTER:戦闘経験 ++
			EXP:戦闘経験 ++
		ENDIF
	CASE 1
	;悪天候
	DOWNBASE:MASTER:体力 = 300
	DOWNBASE:MASTER:気力 = 300
	IF TARGET > 0 && !CFLAG:睡眠
		;固定で獲得するソース
		SOURCE:歓楽 = 450
			MAXBASE:TARGET:体力  += RAND:15
			MAXBASE:TARGET:気力  += RAND:10
		;信頼
		TFLAG:98 += 3
		SIF ABL:MASTER:戦闘能力 > 2
		TFLAG:98 ++ 
		IF ABL:MASTER:戦闘能力 > ABL:戦闘能力
			EXP:戦闘経験 += 2
			TFLAG:98 ++ 
		ENDIF
		SIF ABL:MASTER:戦闘能力 < ABL:戦闘能力 - 2
			EXP:MASTER:戦闘経験 ++
		;ABL:親密をみる
		IF ABL:親密 <= 5
			SOURCE:歓楽 += 520 + (ABL:親密 * 60)
			TFLAG:98 ++ 
		ELSEIF ABL:親密 <= 8
			SOURCE:歓楽 += 750 + (ABL:親密 * 75)
		ELSEIF ABL:親密 <= 11
			SOURCE:歓楽 += 1100 + (ABL:親密 * 75)
		ELSE
			SOURCE:歓楽 += 2150 + (ABL:親密 * 30)
		ENDIF

		;好感度をみる
		IF CFLAG:2 <= 500
			SOURCE:歓楽 += CFLAG:2
		ELSEIF CFLAG:2 <= 5000
			SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
		ELSE
			SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
		ENDIF
		SIF SOURCE:歓楽 < 0
			SOURCE:歓楽 = 0
		EXP:MASTER:戦闘経験 += 2
		EXP:戦闘経験 += 2
	ENDIF
	CASE 2,3
	;ヤバい天気
		DOWNBASE:MASTER:体力 = 600
		DOWNBASE:MASTER:気力 = 600
		IF TARGET > 0 && !CFLAG:睡眠
			;固定で獲得するソース
			SOURCE:歓楽 = 500
				MAXBASE:TARGET:体力 += RAND:30
				MAXBASE:TARGET:気力 += RAND:30
			;信頼
			TFLAG:98 += 3
			SIF ABL:MASTER:戦闘能力 > 2
			TFLAG:98 ++ 
			IF ABL:MASTER:戦闘能力 > ABL:戦闘能力
				EXP:戦闘経験 += 2
				TFLAG:98 ++ 
			ENDIF
			SIF ABL:MASTER:戦闘能力 < ABL:戦闘能力 - 2
				EXP:MASTER:戦闘経験 ++
			;ABL:親密をみる
			IF ABL:親密 <= 5
				TFLAG:98 ++ 
				SOURCE:歓楽 += 550 + (ABL:親密 * 60)
			ELSEIF ABL:親密 <= 8
				SOURCE:歓楽 += 800 + (ABL:親密 * 75)
			ELSEIF ABL:親密 <= 11
				SOURCE:歓楽 += 1200 + (ABL:親密 * 75)
			ELSE
				SOURCE:歓楽 += 2300 + (ABL:親密 * 30)
			ENDIF
			;好感度をみる
			IF CFLAG:2 <= 500
				SOURCE:歓楽 += CFLAG:2
			ELSEIF CFLAG:2 <= 5000
				SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
			ELSE
				SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
			ENDIF
			SIF SOURCE:歓楽 < 0
				SOURCE:歓楽 = 0
			EXP:MASTER:戦闘経験 += 3
			EXP:戦闘経験 += 3
		ENDIF
ENDSELECT
TIME += 60
	SIF CFLAG:同行
		CFLAG:同行 += 60
EXP:MASTER:戦闘経験 ++
TCVAR:MASTER:空腹時刻 -= 15
SIF TARGET
	TCVAR:TARGET:空腹時刻 -= 15
SIF ITEM:101 && !RAND:2
	EXP:MASTER:戦闘経験 ++
IF ITEM:運動飲料
	IF TFLAG:194 == 3
		DOWNBASE:MASTER:体力 -= 200
		DOWNBASE:MASTER:気力 -= 300
	ELSE
		DOWNBASE:MASTER:体力 -= 50
		DOWNBASE:MASTER:気力 -= 50
	ENDIF
	SIF TARGET
		SOURCE:歓楽 += 300
	TFLAG:193 = 1
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE411
;戦闘訓練実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(411)
	RETURN RESULT
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
;仕事中
SIF CFLAG:行動 == 5
	RETURN 0
SIF !戦闘訓練可(CFLAG:MASTER:現在位置)
	RETURN 0
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
SIF CFLAG:うふふ == 2
	RETURN 0
RETURN 1

