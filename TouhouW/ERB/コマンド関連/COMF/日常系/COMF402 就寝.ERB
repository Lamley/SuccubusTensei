	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(402)
	RETURN RESULT
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
;私室設定
SIF CFLAG:MASTER:現在位置 != CFLAG:MASTER:311 && CFLAG:MASTER:現在位置 != OMANEKIBEYA() && CFLAG:添い寝中 == 0
	RETURN 0
