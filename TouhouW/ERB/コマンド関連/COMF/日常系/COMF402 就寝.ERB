@COM402
#DIM 労働量
#DIM 収益
IF TARGET > 0
	CFLAG:同行 = 0
	CFLAG:添い寝中 = 0
	CFLAG:MASTER:同行 = 0
	CFLAG:MASTER:添い寝中 = 0
ENDIF

IF CFLAG:MASTER:現在位置 == CFLAG:MASTER:311
	CALL SET_SLEEP(1,MASTER,0)
ELSE
	CALL SET_SLEEP(1,TARGET,1)
	SIF CFLAG:TARGET:衰弱
		CFLAG:TARGET:衰弱 = 0
ENDIF

CALL SET_SNEAK(0,TARGET,1)
;CALL SET_TOGETHER(0,TARGET,1)

IF FLAG:内職 && !CFLAG:添い寝中 && BASE:MASTER:気力 > 300 && BASE:MASTER:TSP > 0
	PRINTFORML %CALLNAME:MASTER%在睡覚之前使用剩余的TSP做了些副業
	労働量 = MIN(BASE:MASTER:気力, BASE:MASTER:TSP /2)
	収益 = 労働量 * (5 + RAND:5) / 10
	PRINTFORMW 掙了\\{収益}
ENDIF

CFLAG:MASTER:就寝時間 = DAY * 1440 + TIME
BEGIN AFTERTRAIN

RETURN 1

