@COM310
;摸屁股
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 10
ELSE
IF FLAG:甲斐性無 && !CFLAG:うふふ
	PRINTFORMW %CALLNAME:MASTER%沒有那樣的胆量
	RETURN -1
ENDIF
;先制発生時は失敗しない
SIF TFLAG:102 == 3
	TFLAG:193 = MAX(TFLAG:193,0)
DOWNBASE:気力 += 50
DOWNBASE:MASTER:気力 += 50

;信頼
TFLAG:98 = -3

;固定で獲得するソース
SOURCE:歓楽 = 100
SOURCE:情愛 = 100
SOURCE:露出 = 100
SOURCE:反感 = 900

;ABL:親密をみる
IF ABL:親密 <= 5
	SOURCE:反感 -= (ABL:親密 * 15)
	TFLAG:193 = 1
ELSEIF ABL:親密 <= 7
	SOURCE:歓楽 += 400 + (ABL:親密 * 50)
	SOURCE:情愛 += 400 + (ABL:親密 * 30)
	SOURCE:反感 -= (ABL:親密 * 15)
	TFLAG:193 = 2
ELSEIF ABL:親密 <= 9
	SOURCE:歓楽 += 700 + (ABL:親密 * 60)
	SOURCE:情愛 += 600 + (ABL:親密 * 40)
	SOURCE:反感 -= (ABL:親密 * 25)
	TFLAG:193 = 3
ELSEIF !TALENT:恋慕
	SOURCE:歓楽 += 1200 + (ABL:親密 * 80)
	SOURCE:情愛 += 800 + (ABL:親密 * 40)
	SOURCE:反感 -= (ABL:親密 * 35)
	TFLAG:193 = 4
ELSE
	SOURCE:歓楽 += 2000 + (ABL:親密 * 50)
	SOURCE:情愛 += 1800 + (ABL:親密 * 20)
	SOURCE:反感 -= (ABL:親密 * 50)
	TFLAG:193 = 4
ENDIF
SIF SOURCE:反感 < 0
	SOURCE:反感 = 0
;好感度をみる
IF CFLAG:2 < 3000
ELSEIF CFLAG:2 <= 5000
	SOURCE:歓楽 += CFLAG:2
ELSEIF CFLAG:2 <= 10000
	SOURCE:歓楽 += 500 + (CFLAG:2 - 500) / 3
ELSE
	SOURCE:歓楽 += 2000 + (CFLAG:2 - 5000) / 5
ENDIF
SIF SOURCE:歓楽 < 0
	SOURCE:歓楽 = 0

LOCAL = 0
;親密が低いと好感度低下
IF ABL:親密 <= 5
	LOCAL -= 10
ELSEIF ABL:親密 <= 7
	LOCAL -= 5
ELSEIF ABL:親密 <= 9
	LOCAL -= 3
ELSEIF TALENT:恋慕
	LOCAL -= 1
ENDIF

SOURCE:欲情 = 100 + 200 * ABL:欲望
SOURCE:受動 = 100 + 200 * ABL:従順

;好感度変化
TFLAG:97 += LOCAL

IF TFLAG:193 == -1
	TIMES SOURCE:歓楽 , 0.10
	TIMES SOURCE:情愛 , 0.50
	TIMES SOURCE:受動 , 0.50
	TIMES SOURCE:欲情 , 0.50
	TIMES SOURCE:反感 , 1.50
ELSEIF TFLAG:193 == 0
	TIMES SOURCE:歓楽 , 1.00
	TIMES SOURCE:情愛 , 1.00
	TIMES SOURCE:受動 , 1.00
	TIMES SOURCE:欲情 , 1.00
ELSE
	TIMES SOURCE:歓楽 , 2.00
	TIMES SOURCE:情愛 , 2.00
	TIMES SOURCE:受動 , 2.00
	TIMES SOURCE:欲情 , 2.00
	TIMES SOURCE:反感 , 0.75
ENDIF
TIME += 10
ENDIF
RETURN 1

