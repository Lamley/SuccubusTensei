	RETURN 0
;添い寝中
SIF CFLAG:添い寝中
	RETURN 0
;浴場
;SIF CFLAG:MASTER:現在位置 == 13 || CFLAG:MASTER:現在位置 == 24 || CFLAG:MASTER:現在位置 == 30 || CFLAG:MASTER:現在位置 == 39
SIF BATHCHECK(CFLAG:MASTER:現在位置)
	RETURN 0
;宴会中
SIF CFLAG:350 == 49
	RETURN 0
;デート中
