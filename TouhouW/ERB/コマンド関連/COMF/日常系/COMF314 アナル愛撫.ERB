;肛門愛撫
@COM314
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 40
SOURCE:快Ａ = 80
IF ABL:PLAYER:指 >= 4
	SOURCE:快Ａ += 50
ELSE
	SOURCE:快Ａ += ABL:PLAYER:指 * 10
ENDIF
;手を突っ込めない衣装
IF TEQUIP:0 & 16
	TIMES SOURCE:快Ａ , 0.60
	TIMES SOURCE:欲情 , 0.60
	TIMES SOURCE:露出 , 0.60
;裙子以外の何かを履いてる
ELSEIF TEQUIP > 1
	TIMES SOURCE:快Ａ , 0.80
	TIMES SOURCE:欲情 , 0.80
	TIMES SOURCE:露出 , 0.80
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF
SIF TFLAG:60 < 2
	EXP:PLAYER:手淫経験 ++
ENDIF
ELSE
IF FLAG:甲斐性無 && !CFLAG:うふふ
	PRINTFORMW %CALLNAME:MASTER%沒有那樣的胆量
	RETURN -1
ENDIF
DOWNBASE:体力 += 40
DOWNBASE:気力 += 100

SOURCE:快Ａ = 80
SOURCE:苦痛 = 50
SOURCE:屈従 = 100
SOURCE:露出 = 120
SOURCE:欲情 = 170
SOURCE:歓楽 = 50
SOURCE:逸脱 = 80
SOURCE:反感 = 60
SOURCE:受動 = 150 + 300 * ABL:従順
IF ABL:PLAYER:指 >= 4
	SOURCE:快Ａ += 50
ELSE
	SOURCE:快Ａ += ABL:PLAYER:指 * 10
ENDIF
;手を突っ込めない衣装
IF TEQUIP:0 & 16
	TIMES SOURCE:快Ａ , 0.60
	TIMES SOURCE:欲情 , 0.60
	TIMES SOURCE:露出 , 0.60
;裙子以外の何かを履いてる
ELSEIF TEQUIP > 1
	TIMES SOURCE:快Ａ , 0.80
	TIMES SOURCE:欲情 , 0.80
	TIMES SOURCE:露出 , 0.80
ENDIF

;信頼
TFLAG:98 = -7

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 100
ENDIF
;Aへの苦痛は先に処理しておく
SIF TCVAR:20 == 72 && !TEQUIP:六九式
	CALL PAIN_CHECK_A(TARGET)

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
IF TCVAR:20 == 72 && !TEQUIP:六九式
	;奴隷のＡ⇔調教者の指の汚れが移動
	STAIN:PLAYER:0 |= STAIN:4
	STAIN:4 |= STAIN:PLAYER:0
ELSE
	;奴隷のＡ⇔調教者の指の汚れが移動
	STAIN:PLAYER:1 |= STAIN:4
	STAIN:PLAYER:1 |= STAIN:7
	STAIN:4 |= STAIN:PLAYER:1
	STAIN:7 |= STAIN:PLAYER:1
ENDIF
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF
SIF TFLAG:60 < 2
	EXP:PLAYER:手淫経験 ++
SIF TEQUIP:六九式 || TCVAR:20 == 72
	EXP:PLAYER:口淫経験 ++
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF
SIF TFLAG:60 < 2
	EXP:PLAYER:手淫経験 ++
SIF TEQUIP:六九式 || TCVAR:20 == 72
	EXP:PLAYER:口淫経験 ++
TIME += 10
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE314
;肛門愛撫実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(314)
	RETURN RESULT
;時間停止中はスキップ
IF !FLAG:70
	;馴れ合い強度1
	SIF TCVAR:MASTER:馴れ合い < 2
		RETURN 0
	;睡眠中
	SIF CFLAG:睡眠
		RETURN 0
	;仕事中
	SIF CFLAG:行動 == 5
		RETURN 0
	;添い寝中
	SIF CFLAG:添い寝中
		RETURN 0
	;デート中
	SIF CHK_DATENOW(CFLAG:デート中) && CFLAG:現在位置 != OMANEKIBEYA()
		RETURN 0
ENDIF
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
SIF TEQUIP:51 >= 0
	RETURN 0
;顔面騎乗アナル(腕判定回避)
SIF TCVAR:20 == 72
	RETURN 1
;六九式体勢(腕判定回避)
SIF TEQUIP:六九式
	RETURN 1
;腕使用中
SIF TFLAG:61 && MASTER_POSE(SET_A,SET_YUBI) != TARGET
	RETURN 0
SIF GETBIT (TCVAR:26,4)
	RETURN 0
RETURN 1

