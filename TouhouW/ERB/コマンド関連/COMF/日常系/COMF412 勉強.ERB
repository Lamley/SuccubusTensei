@COM_ABLE412
;学習実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(412)
	RETURN RESULT
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
;学習出来る部屋か
SIF !学習可(CFLAG:MASTER:現在位置)
	RETURN 0

;添い寝中
SIF CFLAG:添い寝中
	RETURN 0
;イタズラ中
SIF CFLAG:MASTER:イタズラ
	RETURN 0
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
SIF CFLAG:うふふ == 2
	RETURN 0
RETURN 1

