;做農活
@COM_ABLE470
SIF !TFLAG:100
	RETURN 0
SIF TFLAG:妄想中
	RETURN 0
;主人公は農民ではない
SIF !FLAG:地主
	RETURN 0
;現在位置が畑の場所ではない、LOCALに畑の位置を一次取得して使用
LOCAL = TOINT(STR_NOUMIN(CALLNAME:(FLAG:地主), "場所ID"))
SIF GET_MAPID(LOCAL) != MAIN_MAP
	LOCAL = GET_MAP_REPLACEMENT(LOCAL)
SIF CFLAG:MASTER:現在位置 != LOCAL
	RETURN 0
;呑んでる
SIF BASE:MASTER:酒気
	RETURN 0
SIF CFLAG:うふふ
	RETURN 0
;体力・気力不足
SIF BASE:MASTER:気力 < 300 || BASE:MASTER:体力 < 300
	RETURN 0
;天気が悪い
SIF !GROUPMATCH(TIME:5, 0, 1, 2, 3, 4, 6, 7)
	RETURN 0
;今日はもう仕事をした
SIF TFLAG:畑仕事成功度
	RETURN 0
;時間に余裕が無いとダメ
IF FLAG:70
	;TSP足りない
	SIF BASE:MASTER:TSP < 300
		RETURN 0
ELSE
	;活動限界を720としてその3時間前
	SIF NEMUKE() >= 540
		RETURN 0
ENDIF
RETURN 1
