	CASE IS < 1000
	CASE IS < 5000
		TFLAG:畑仕事成功度 += 1
	CASE IS < 10000
		TFLAG:畑仕事成功度 += 2
	CASE IS < 30000
		TFLAG:畑仕事成功度 += 3
	CASEELSE
		TFLAG:畑仕事成功度 += 4
