;-------------------------------------------------
@COM_ABLE352
;停止中は不可
SIF FLAG:70
	RETURN 0
;妄想中は告白できない
SIF TFLAG:妄想中 == 1
	RETURN 0
;告白実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(352)
	RETURN RESULT
;二人きりでないとだめ
SIF GET_TARGETNUM() > 1
	RETURN 0
;馴れ合い強度2
SIF TCVAR:MASTER:馴れ合い < 2
	RETURN 0
;すでに恋人が居る場合はだめ
SIF GETBIT(CFLAG:MASTER:既成事実 , 2)
	RETURN 0
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;添い寝中
SIF CFLAG:添い寝中
	RETURN 0
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
RETURN 1
