;撫摸肚子
@COM306
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;破瓜抑制
TFLAG:2 = 1

;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 10
	CUP:快Ｖ = 30 + ABL:PLAYER:指 * 5
;着衣補正
SIF TEQUIP:1 > 1
	TIMES SOURCE:快Ｖ , 0.50
ELSE
DOWNBASE:体力 += 5
DOWNBASE:気力 += 30
CUP:快Ｖ = BASE:TARGET:情緒 / 100 + 30 + ABL:PLAYER:指 * 5
SOURCE:歓楽 = 150
SOURCE:情愛 = 100
SOURCE:欲情 = 30
SOURCE:露出 = 10
SOURCE:反感 = 150 - BASE:TARGET:情緒 / 100
SOURCE:受動 = 120
IF TALENT:妊娠 == 1
	DOWNBASE:体力 += 5
	DOWNBASE:気力 += 30
	SOURCE:歓楽 = 350 + 240 * ABL:従順
	SOURCE:情愛 = 150
	SOURCE:反感 = 50
	SOURCE:受動 = 120
	SIF TALENT:恋慕
		EXP:愛情経験 ++
ENDIF
;着衣補正
IF TEQUIP:1 > 1
	TIMES SOURCE:快Ｖ , 0.50
	TIMES SOURCE:欲情 , 0.70
	TIMES SOURCE:露出 , 0.30
ENDIF
IF !TALENT:恋慕 && !TALENT:思慕
	CUP:快Ｖ /= 2
	SOURCE:歓楽 /= 2
ENDIF
;好感度変化
IF ABL:親密 <= 5
	TFLAG:97 -= 3
	TFLAG:193 = -1
ELSEIF TALENT:妊娠
	TFLAG:97 += 3
	TFLAG:193 = 1
ENDIF
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 20

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
TIME += 10
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE306
;お腹撫でる実行判定
SIF !TFLAG:100
	RETURN 0
SIF !TARGET
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(306)
	RETURN RESULT
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
;馴れ合い強度1
SIF TCVAR:MASTER:馴れ合い < 1
	RETURN 0
;仕事中
SIF CFLAG:行動 == 5
	RETURN 0
;腕使用中
SIF TFLAG:61
	RETURN 0
SIF GETBIT (TCVAR:26,1)
	RETURN 0
RETURN 1

