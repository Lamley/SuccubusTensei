	CFLAG:MASTER:小槌 = 5
	TALENT:MASTER:183 = 1
	CFLAG:MASTER:魔力回収 = 6
ELSEIF RESULT == 5 && TALENT:MASTER:100 >= -4
	PRINTFORMW 许完愿后一挥動万宝槌
	PRINTFORMW %CALLNAME:MASTER%的身体眼看着就缩小了
	CFLAG:MASTER:魔力回収 = 3
	CFLAG:MASTER:小槌 = 6
	FLAG:元の体格 = TALENT:MASTER:100
	TALENT:MASTER:100 = -5
