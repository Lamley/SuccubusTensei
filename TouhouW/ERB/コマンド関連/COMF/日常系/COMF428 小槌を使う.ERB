	PRINTFORMW 「可不能在这里这样做啊！」
	RETURN -1
ELSEIF RESULT == 6 && TALENT:MASTER:100 < -4
	PRINTFORMW 许完愿后一挥動万宝槌
	PRINTFORMW %CALLNAME:MASTER%的身体変回了原样
	TALENT:MASTER:100 = FLAG:元の体格
	CFLAG:MASTER:魔力回収 = 3
	CFLAG:MASTER:小槌 = 7
ELSEIF RESULT == 100
SIF FLAG:なりきり != 71
	PRINTL 針妙丸「真是明智的选択呢」
	RETURN -1
ELSE
	GOTO LOOP
ENDIF
TIME += 5

RETURN 1

