	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(424)
	RETURN RESULT
SIF CFLAG:MASTER:現在位置 != CFLAG:52:現在位置 && CFLAG:MASTER:現在位置 != CFLAG:53:現在位置
	RETURN 0
SIF CFLAG:うふふ == 2
	RETURN 0
