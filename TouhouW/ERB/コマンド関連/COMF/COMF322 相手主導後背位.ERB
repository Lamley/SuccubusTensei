;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 1
;強度
TCVAR:PLAYER:4 = 1800

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:TARGET:2 = 13
;強度
TCVAR:TARGET:4 = 1500


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

DOWNBASE:体力 += 40
DOWNBASE:気力 += 100

SOURCE:快Ｖ = 500
SOURCE:情愛 = 200
SOURCE:苦痛 = 300
SOURCE:露出 = 150
SIF TFLAG:193
	SOURCE:露出 = 300

;上のほうで計算した汚れデータ
SOURCE:不潔 = Y*10 + 60
CALL 特殊ソース処理
;Vへの苦痛は先に処理しておく
CALL PAIN_CHECK_V(TARGET)
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
CALL STAIN_膣内Ｐ挿入
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:挿入経験 ++
EXP:Ｖ経験 ++
;同性愛　レズなら戻り値1ゲイなら戻り値2

IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF
EXP:Ｖ性交経験 ++
IF !ASSIPLAY
	EXP:愛情経験 += TALENT:恋慕 * 3
	;処女
	SIF TALENT:処女 == 1 && TALENT:恋慕
		EXP:愛情経験 += 10
ENDIF

RETURN 1

