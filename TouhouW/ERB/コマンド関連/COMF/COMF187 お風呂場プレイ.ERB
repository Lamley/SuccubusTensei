;-------------------------------------------------
;浴室PLAY
;特殊なコマンド
;-------------------------------------------------
@COM187
;着脱の処理　終了時はソース、経験の加算は行わない
IF TEQUIP:浴室PLAY == 1
	TEQUIP:浴室PLAY = 0
	;淋浴も外す
	TEQUIP:淋浴 = 0
	RETURN 1
ELSE
	TEQUIP:浴室PLAY = 1
ENDIF
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 0
DOWNBASE:気力 += 30

SOURCE:恐怖 = 100
SOURCE:露出 = 200
SOURCE:逸脱 = 50
SOURCE:反感 = 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 50
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;装備時に汚れをリセットする（浴室に来て汚れたままもどうかということで）
STAIN:0 = 0
STAIN:1 = 0
STAIN:2 = 2
STAIN:3 = 1
STAIN:4 = 8
STAIN:5 = 0

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM187(ARG)
;浴室PLAY
SIF ARG
	PRINTL ＜浴室PLAY中＞

IF FLAG:70 == 1

ELSE
DOWNBASE:ARG:体力 += 10
DOWNBASE:ARG:気力 += 10

SOURCE:ARG:恭順 += 100
SOURCE:ARG:反感 += 50
ENDIF

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE187
;浴室PLAY実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(187)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:31
	RETURN 1
;従順が1以上ないとダメ
SIF ABL:従順 <= 1
	RETURN 0
;対象か助手が動物耳で、従順が3以下だとダメ
SIF TALENT:動物耳 && ABL:従順 <= 2
	RETURN 0
IF ASSI >= 0
	SIF TALENT:ASSI:動物耳 && ABL:従順 <= 2
		RETURN 0
ENDIF
;簡易泳池がないとダメ
SIF !ITEM:簡易泳池
	RETURN 0
;待客室以外は温水機能がないとダメ
SIF !GETBIT (FLAG:プール, 1) && CFLAG:MASTER:現在位置 != OMANEKIBEYA()
	RETURN 0
;狭い場所はダメ
SIF SMALL_PLACE(CFLAG:MASTER:現在位置)
	RETURN 0
;全裸でないとダメ
SIF TEQUIP:0 || TEQUIP:1
	RETURN 0
;野外PLAY中はダメ
SIF TEQUIP:29
	RETURN 0
;羞恥PLAY中はダメ
SIF TEQUIP:30
	RETURN 0
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

