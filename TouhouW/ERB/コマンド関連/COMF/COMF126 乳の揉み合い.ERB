;-------------------------------------------------
;互揉胸部
;助手によるコマンド、及びレズプレイ、レベル1
;-------------------------------------------------
@COM126
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = TARGET

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1
TCVAR:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 7
DOWNBASE:気力 += 70

SOURCE:PLAYER:快Ｂ = 200
SOURCE:快Ｂ = 200
SOURCE:性行動 = 150
SOURCE:露出 = 50
SOURCE:不潔 = 30
SOURCE:逸脱 = 100
SOURCE:反感 = 200

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 100

;調教者が［幼児退行］
IF TALENT:PLAYER:幼児／幼児退行
	TIMES SOURCE:快Ｂ , 1.20
	TIMES SOURCE:性行動 , 1.20
ENDIF

;調教者が［幼稚］
IF TALENT:PLAYER:幼稚
	TIMES SOURCE:快Ｂ , 1.20
	TIMES SOURCE:性行動 , 1.20
ENDIF

;戦力差補正
SIF TALENT:PLAYER:胸囲 - TALENT:胸囲 > 1
	SOURCE:屈従 += 100
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;調教者の指⇔奴隷のＢの汚れが移動
	STAIN:PLAYER:1 |= STAIN:5
	STAIN:5 |= STAIN:PLAYER:1
;調教者のＢ⇔奴隷の指の汚れが移動
	STAIN:PLAYER:5 |= STAIN:1
	STAIN:1 |= STAIN:PLAYER:5
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 7
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 7
ENDIF

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE126
;互揉胸部
SIF !TFLAG:100
	RETURN 0
SIF FLAG:70
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(126)
	RETURN RESULT
;男人だとダメ
SIF !(TALENT:2 & 1) || !(TALENT:PLAYER:2 & 1)
	RETURN 0
;百合属性３以上限定
SIF ABL:百合属性 < 3
	RETURN 0
;上半身着衣
SIF TEQUIP:1 > 0 && TEQUIP:3 == 0
	RETURN 0
;睡眠姦中
SIF CFLAG:イタズラ > 1
	RETURN 0
;縄使用中は不可
SIF TEQUIP:縄
	RETURN 0
RETURN 1

