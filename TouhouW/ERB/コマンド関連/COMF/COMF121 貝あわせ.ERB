;-------------------------------------------------
;貝あわせ
;助手によるコマンド、及びレズプレイ、レベル1
;-------------------------------------------------
@COM121
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1
TCVAR:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
BASE:MASTER:TSP -= 90
SOURCE:快Ｃ = 200

ELSE

DOWNBASE:体力 += 30
DOWNBASE:気力 += 90

SOURCE:快Ｃ = 200
SOURCE:性行動 = 200
SOURCE:達成 = 100
SOURCE:露出 = 50
SOURCE:屈従 = 400
SOURCE:逸脱 = 400
SOURCE:反感 = 400


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 400
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＶ⇔調教者のＶの汚れが移動
STAIN:3 |= STAIN:PLAYER:3
STAIN:PLAYER:3 |= STAIN:3

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 8
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 8
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 8
ENDIF

;愛情経験
SIF !ASSIPLAY
	EXP:愛情経験 += 2 * TALENT:恋慕
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE121
;貝あわせ実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(121)
	RETURN RESULT
;男人かFutanariだとダメ
SIF TALENT:PLAYER:2 & 2 || TALENT:2 & 2
	RETURN 0
;欲望3以下の場合貝あわせはできない（小悪魔、相性良好ならＯＫ）
IF ASSIPLAY
	SIF ABL:ASSI:欲望 <= 3 && TALENT:ASSI:小悪魔 == 0
		RETURN 0
ENDIF
;縄使用中は不可
SIF TEQUIP:縄
	RETURN 0
;下半身内袴着衣
SIF TEQUIP:0 > 1
	RETURN 0
;振動棒挿入中はダメ
SIF TEQUIP:13
	RETURN 0
;陰蒂夾使用中はダメ
SIF TEQUIP:11
	RETURN 0
;浴室PLAY中は塑料地墊が無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;室内でないとダメ
SIF !INROOM(CFLAG:PLAYER:現在位置)
	RETURN 0
;睡眠姦中
SIF CFLAG:イタズラ > 1
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

