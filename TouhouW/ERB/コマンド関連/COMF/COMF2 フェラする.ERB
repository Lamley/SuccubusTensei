;-------------------------------------------------
;舐陰茎
;愛撫系コマンド、レベル1
;-------------------------------------------------
@COM2
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）

;奉仕快楽
TCVAR:PLAYER:108 = 1

LOCALS = {PLAYER}/
CSTR:TARGET:10 += LOCALS
TCVAR:TARGET:2 = 4
;強度
TCVAR:TARGET:4 = 1500

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 50
	SOURCE:快Ｃ = 110
;性技補正
IF ABL:PLAYER:舌 >= 4
	SOURCE:快Ｃ += 100
ELSE
	SOURCE:快Ｃ += ABL:PLAYER:舌 * 25
ENDIF

;調教者のTALENT:舌頭霊活をみる
SIF TALENT:PLAYER:舌頭霊活
	TIMES SOURCE:快Ｃ , 1.50

;調教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:猫舌
	TIMES SOURCE:快Ｃ , 0.75
;奴隷のＰ⇔調教者の口の汚れが移動
STAIN:2 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:2
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
ENDIF
;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1
EXP:PLAYER:口淫経験 ++
ELSE

	DOWNBASE:体力 += 5
	DOWNBASE:気力 += 50

	SOURCE:快Ｃ = 110
	SOURCE:露出 = 20
	SOURCE:逸脱 = 20
	SOURCE:反感 = 20

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 20

;性技補正
IF ABL:PLAYER:舌 >= 4
	SOURCE:快Ｃ += 100
ELSE
	SOURCE:快Ｃ += ABL:PLAYER:舌 * 25
ENDIF

;調教者のTALENT:舌頭霊活をみる
SIF TALENT:PLAYER:舌頭霊活
	TIMES SOURCE:快Ｃ , 1.50

;調教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:猫舌
	TIMES SOURCE:快Ｃ , 0.75
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＰ⇔調教者の口の汚れが移動
STAIN:2 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:2

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
ENDIF
;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1
EXP:PLAYER:口淫経験 ++
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE2
;舐陰茎実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(2)
	RETURN RESULT
;性器が汚れているとMASTERの場合舐陰茎はできない（調教者が汚臭無視か愛液、Ｐ、母乳、チョコのよごれならＯＫ）
SIF STAIN:2 >= 4 && (STAIN:2 != 18 && STAIN:2 != 19 && STAIN:2 != 128 && STAIN:2 != 129 && STAIN:2 != 130 && STAIN:2 != 131 && STAIN:2 != 144 && STAIN:2 != 145 && STAIN:2 != 146 && STAIN:2 != 147) && ASSIPLAY == 0 && TALENT:MASTER:汚臭耐性 < 2
	RETURN 0
;性器が汚れており、汚臭敏感で従順3以下のASSIの場合フェラはできない（調教者が汚臭無視か愛液、Ｐ、母乳、チョコのよごれならＯＫ）
IF STAIN:2 >= 4 && (STAIN:2 != 18 && STAIN:2 != 19 && STAIN:2 != 128 && STAIN:2 != 129 && STAIN:2 != 130 && STAIN:2 != 131 && STAIN:2 != 144 && STAIN:2 != 145 && STAIN:2 != 146 && STAIN:2 != 147) && ASSIPLAY
	SIF ABL:ASSI:従順 <= 3 && TALENT:ASSI:汚臭耐性 < 0
		RETURN 0
ENDIF
;猫舌の調教者の場合は技巧Lv2以上必要
SIF TALENT:PLAYER:猫舌 && ABL:PLAYER:技巧 < 2
	RETURN 0
;男人かFutanariじゃないとダメ
SIF !(TALENT:2 & 2)
	RETURN 0

