@COM_ABLE140
;強制口交実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(140)
	RETURN RESULT
;調教者が男人かFutanariじゃないとダメ
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
;口枷使用中は不可
SIF TEQUIP:口枷
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
;従順、欲望の合計が6以上ないとダメ
SIF ABL:従順 + ABL:欲望 < 6
	RETURN 0
;猫舌の奴隷の場合は技巧Lv2以上必要
SIF TALENT:猫舌 && ABL:技巧 < 2
	RETURN 0
;体格差がある場合は主人が禁断的知識持ちじゃないとダメ
SIF ABS(TALENT:体型 - TALENT:PLAYER:体型) > 2 && (TALENT:MASTER:禁断的知識 == 0)
	RETURN 0
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
RETURN 1

