;-------------------------------------------------
;新妻PLAY
;特殊コマンド
;-------------------------------------------------
@COM189
;着脱の処理　装備時はソース、経験の加算は行わない
TEQUIP:新妻PLAY = !TEQUIP:新妻PLAY
RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM189(ARG)
;新妻PLAY

;助手調教時は、囲裙を解除して関数終了
IF ASSIPLAY
	TEQUIP:ARG:新妻PLAY = 0
	RETURN 0
ENDIF

PRINTL ＜新妻PLAY中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:ARG:体力 += 20
DOWNBASE:ARG:気力 += 20

SOURCE:ARG:情愛 += 1000
SOURCE:ARG:恭順 += 5000
SOURCE:ARG:逸脱 += 500


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;愛情経験
EXP:ARG:愛情経験 += RAND:2
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE189
;新妻PLAY実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(189)
	RETURN RESULT
;奴隷が恋慕か親愛でないとダメ
SIF !TALENT:恋慕
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:33
	RETURN 1
;道具｢囲裙｣を持っているか、道具なし設定でないとダメ
SIF ITEM:23 == 0 && NOITEM == 0
	RETURN 0
;助手じゃダメ
SIF ASSIPLAY
	RETURN 0
;従順が3以上ないとダメ
SIF ABL:従順 < 3
	RETURN 0
;野外PLAY中はダメ
SIF TEQUIP:29
	RETURN 0
;羞恥PLAY中はダメ
SIF TEQUIP:30
	RETURN 0
;浴室PLAY中はダメ
SIF TEQUIP:31
	RETURN 0
;睡眠姦中
SIF CFLAG:イタズラ > 1
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

