;-------------------------------------------------
;搾乳器
;道具使用コマンド、レベル3
;-------------------------------------------------
@COM48
;着脱の処理
TEQUIP:搾乳機 = !TEQUIP:搾乳機

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
BASE:MASTER:TSP -= 100
SOURCE:快Ｂ = 200
SOURCE:苦痛 = 50

ELSE

DOWNBASE:体力 += 50
DOWNBASE:気力 += 100

SOURCE:快Ｂ = 200
SOURCE:苦痛 = 100
SOURCE:露出 = 30
SOURCE:屈従 = 100
SOURCE:逸脱 = 100
SOURCE:反感 = 100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;圧抑、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 100
ENDIF
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF
ENDIF
EXP:PLAYER:道具使用経験 ++

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM48(ARG)
;搾乳器装備中
PRINTL ＜搾乳器装備中＞
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
IF FLAG:70 == 1
BASE:MASTER:TSP -= 50
SOURCE:ARG:快Ｂ += 100

ELSE

DOWNBASE:ARG:体力 += 25
DOWNBASE:ARG:気力 += 50

SOURCE:ARG:快Ｂ += 100
SOURCE:ARG:苦痛 += 50
SOURCE:ARG:露出 += 15
SOURCE:ARG:屈従 += 50
SOURCE:ARG:逸脱 += 50
SOURCE:ARG:反感 += 50
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE48
;搾乳器実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(48)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:17
	RETURN 1
;道具を持っているか、道具なし設定でないとダメ
SIF ITEM:11 == 0 && NOITEM == 0
	RETURN 0
;母乳体質でないと使えない
SIF TALENT:母乳体質 == 0
	RETURN 0
;上半身着衣
SIF TEQUIP:1 > 1 && TEQUIP:3 == 0
	RETURN 0
;乳頭夾使用中は不可
SIF TEQUIP:16
	RETURN 0
;乳房電極装着中はダメ
SIF TEQUIP:24
	RETURN 0
;時間停止中は許可
IF FLAG:70 != 1
	;Ｂ感度2以下はダメ
	SIF ABL:TARGET:Ｂ感覚 <= 2
		RETURN 0
ENDIF
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;ASSIの場合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;淋浴中はダメ
SIF TEQUIP:32
	RETURN 0
;新妻PLAY中はダメ
SIF TEQUIP:33
	RETURN 0
;室内でないとダメ
SIF !INROOM(CFLAG:PLAYER:現在位置)
	RETURN 0
RETURN 1

