;拘束
;SM系コマンド、レベル1
;-------------------------------------------------
@COM107
IF CFLAG:無理矢理膣射 == 1 && !TEQUIP:拘束
	PRINTFORML 以前被强制中出过的%CALLNAME:TARGET%対此深悪痛絶的样子…
	PRINTFORML [0] 放弃
	PRINTFORML [1] 最后再来一次吧
	$LOOP
	INPUT
	IF RESULT == 0
		PRINTFORML 為了不惹悩%CALLNAME:TARGET%、放弃了捆绑
		RETURN -1
	ELSEIF RESULT == 1
		IF ABL:受虐属性 >= 3 || (CFLAG:4 + ABL:MASTER:話術技能 * 100) > 1500
			PRINTFORML 在苦苦哀求之下总算把%CALLNAME:TARGET%説服了
			CFLAG:無理矢理膣射 = 2
		ELSE
			PRINTFORML 无论%CALLNAME:MASTER%怎么説、%CALLNAME:TARGET%就是不答応…
			SOURCE:反感 += 10000
			BASE:情緒 /= 2
			TFLAG:193 = 1
			RETURN -1
		ENDIF
	ELSE
		GOTO LOOP
	ENDIF
ELSEIF CFLAG:無理矢理膣射 == 3 && !TEQUIP:拘束
	PRINTFORML 面対厚颜无耻再次提出想玩捆绑的%CALLNAME:MASTER%、%CALLNAME:TARGET%投来了冰冷的視線
	CALL ASK_YN("すいません",@"それでも拘束された%CALLNAME:TARGET%が好きなんです")
	IF RESULT == 0
		PRINTFORML 察覚到危険的%CALLNAME:MASTER%立刻打了退堂鼓
		RETURN -1
	ELSEIF RESULT == 1
		IF ABL:受虐属性 >= 3 || (CFLAG:4 + ABL:MASTER:話術技能 * 100) > 3000
			PRINTFORML %CALLNAME:TARGET%在软磨硬泡之下、最後还是同意被捆绑了
			PRINTW 真好対付！
		ELSE
			PRINTFORML %CALLNAME:TARGET%一言不発背朝着%CALLNAME:MASTER%穿上了衣服
			CUP:欲情 = 0
			SOURCE:反感 += 10000
			BASE:情緒 = 0
			FOR LOCAL,0,CHARANUM
				;IF CFLAG:LOCAL:うふふ == 2 && LOCAL != 0
				;	CALL KOJO_MESSAGE_SEND("EVENT",10,LOCAL,2,0)
				;ELSEIF CFLAG:LOCAL:うふふ == 1 && LOCAL != 0
				;	SIF !FLAG:70 == 1
				;	CALL KOJO_MESSAGE_SEND("EVENT",15,LOCAL,2,0)
				;ENDIF
				SIF CFLAG:うふふ == 2
					CALL SET_DERAY(5,LOCAL)
				CALL ENDUFUFU(LOCAL)
			NEXT
			TFLAG:106 = 0
			;MASTERとの接触位置をリセット
			CALL TOUCH_SET(0,0,0,1)
			;はだけフラグをオフ
			TEQUIP:2 = 0
			TEQUIP:上半身はだけ状態 = 0
			;キャラ全員の服再セッティング
			FOR LOCAL,0,CHARANUM
				CALL CLOTHES_SETTING_TRAIN(LOCAL)
				;上衣脱衣済みフラグをオフ
				TEQUIP:LOCAL:5 = 0
			NEXT
			TFLAG:193 = 1
			RETURN 1
		ENDIF
	ENDIF
ENDIF
