;実行判定
;-------------------------------------------------
@COM_ABLE81
;口交実行判定
SIF !TFLAG:100
	RETURN 0
SIF GLOBAL_COMABLE(81)
	RETURN RESULT
;調教者が男人か半人半妖かFutanariじゃないとダメ
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
;時間停止中は許可
IF FLAG:70 != 1
	;猫舌の奴隷の場合は技巧Lv2以上必要
	SIF TALENT:猫舌 && ABL:技巧 < 2
		RETURN 0
	;小人サイズだと口の中に入らない
	SIF 挿入不可(TARGET) == 3
	RETURN 0
ENDIF
;口枷使用中は不可
SIF TEQUIP:口枷
	RETURN 0
RETURN 1
