@TARGET_CHANGE
PRINTFORML 做了%CALLNAME:TARGET%的対手
PRINTL [0] - 返回
FOR LOCAL,1,CHARANUM
	SIF CFLAG:LOCAL:現在位置 == CFLAG:MASTER:現在位置
		PRINTFORML [{LOCAL}] - %CALLNAME:LOCAL% (好感度:{CFLAG:LOCAL:2})
NEXT
INPUT
IF RESULT <= 0 || RESULT >= CHARANUM
	RETURN 0
ELSEIF CFLAG:RESULT:現在位置 == CFLAG:MASTER:現在位置
	TFLAG:104 = RESULT
ENDIF

