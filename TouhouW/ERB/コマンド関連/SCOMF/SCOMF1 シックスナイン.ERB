;-------------------------------------------------
;六九式
;愛撫・奉仕系派生コマンド
;-------------------------------------------------
@SCOM1
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = TARGET
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 4
;強度
TCVAR:PLAYER:4 = 1500

LOCALS = {PLAYER}/
CSTR:TARGET:10 += LOCALS
TCVAR:TARGET:2 = 4
;強度
TCVAR:TARGET:4 = 1500

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1
TCVAR:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 25
	SOURCE:快Ｃ = 100
	SOURCE:液体 = 80

	;上のほうで計算した汚れデータ
	IF SELECTCOM == 3
		;破瓜抑制
		TFLAG:2 = 1
		IF !TALENT:処女 || TALENT:処女 == -1
			SOURCE:快Ｖ += 120
			SOURCE:苦痛 += 8
		;V経験が0の時はV経験を伴わない物に派生
		;Vの珠は入らないが、快Vが高いと慣らしてあるため処女喪失時に影響
		ELSE
			SOURCE:快Ｖ += 60
			SOURCE:苦痛 += 5

		ENDIF
		;Vへの苦痛
		CALL PAIN_CHECK_V(TARGET)
		;-------------------------------------------------
		;汚れの処理
		;-------------------------------------------------
		;奴隷の膣内⇔調教者の指の汚れが移動
			STAIN:6 |= STAIN:PLAYER:1
			STAIN:PLAYER:1 |= STAIN:6
	ELSEIF SELECTCOM == 5
		SOURCE:快Ａ += 100
		SOURCE:苦痛 += 50


		;Aへの苦痛は先に処理しておく
		CALL PAIN_CHECK_A(TARGET)
		;-------------------------------------------------
		;汚れの処理
		;-------------------------------------------------
		;奴隷のＡ⇔調教者の指の汚れが移動
		STAIN:PLAYER:1 |= STAIN:4
		STAIN:PLAYER:1 |= STAIN:7
		STAIN:4 |= STAIN:PLAYER:1
		STAIN:7 |= STAIN:PLAYER:1
	ENDIF

ELSE

	DOWNBASE:体力 += 20
	DOWNBASE:気力 += 160

	SOURCE:快Ｃ = 100
	SOURCE:快Ｍ = 40
	SOURCE:情愛 = 100
	SOURCE:性行動 = 450
	SOURCE:達成 = 200
	SOURCE:液体 = 80
	SOURCE:露出 = 100
	SOURCE:屈従 = 800
	SOURCE:反感 = 400
	SOURCE:逸脱 = 50
	;上のほうで計算した汚れデータ
	SOURCE:不潔 = Y*80 + 50
	IF SELECTCOM == 3
		;破瓜抑制
		TFLAG:2 = 1
		IF !TALENT:処女 && TALENT:処女 == -1
			SOURCE:快Ｖ += 120
			SOURCE:苦痛 += 15
			SOURCE:露出 += 10
			SOURCE:逸脱 += 20
			SOURCE:反感 += 20
		;V経験が0の時はV経験を伴わない物に派生
		;Vの珠は入らないが、快Vが高いと慣らしてあるため処女喪失時に影響
		ELSE
			SOURCE:快Ｖ += 60
			SOURCE:苦痛 += 10
			SOURCE:露出 += 30
			SOURCE:逸脱 += 30
			SOURCE:反感 += 30
		ENDIF
		;Vへの苦痛
		CALL PAIN_CHECK_V(TARGET)
		;-------------------------------------------------
		;汚れの処理
		;-------------------------------------------------
		;奴隷の膣内⇔調教者の指の汚れが移動
			STAIN:6 |= STAIN:PLAYER:1
			STAIN:PLAYER:1 |= STAIN:6
	ELSEIF SELECTCOM == 5
		SOURCE:快Ａ += 100
		SOURCE:苦痛 += 100
		SOURCE:屈従 += 100
		SOURCE:逸脱 += 80
		SOURCE:反感 += 60

		;Aへの苦痛は先に処理しておく
		CALL PAIN_CHECK_A(TARGET)
		;-------------------------------------------------
		;汚れの処理
		;-------------------------------------------------
		;奴隷のＡ⇔調教者の指の汚れが移動
		STAIN:PLAYER:1 |= STAIN:4
		STAIN:PLAYER:1 |= STAIN:7
		STAIN:4 |= STAIN:PLAYER:1
		STAIN:7 |= STAIN:PLAYER:1
	ENDIF
	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 800
ENDIF
;舌を使う調教では、調教者の舌頭霊活によって、快感のソース増加
SIF TALENT:PLAYER:舌頭霊活
	TIMES SOURCE:快Ｃ , 1.50

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の口⇔調教者のＶの汚れが移動（半人半妖、Futanari、男人はペニス）
IF TALENT:PLAYER:2 & 2
	STAIN:0 |= STAIN:PLAYER:2
	STAIN:PLAYER:2 |= STAIN:0
ELSE
	STAIN:0 |= STAIN:PLAYER:3
	STAIN:PLAYER:3 |= STAIN:0
ENDIF
;奴隷のＶ⇔調教者の口の汚れが移動（半人半妖、Futanari、男人はペニス）
IF TALENT:2 & 2
	STAIN:2 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:2
ELSE
	STAIN:3 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:3
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:口淫経験 ++
EXP:PLAYER:口淫経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 8
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 8
ENDIF

IF FLAG:70 == 1
	EXP:MASTER:時姦経験 += 1
ELSE

	;愛情経験
	SIF TALENT:恋慕 && ASSIPLAY == 0
		EXP:愛情経験 += 1

	;奴隷が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
	SIF TALENT:TARGET:猫舌
		EXP:嗜虐快楽経験 += 1
ENDIF
;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1

;精液汚れ
SIF STAIN:PLAYER:2 & 4
	EXP:精飲経験 ++

RETURN 1

@CAN_SCOM1(ARG)
SKIPDISP ARG
PRINTL 六九式
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
IF FLAG:70 == 1

ELSE

	A = 0
	S = 0

	;すべての命令に共通の要素を考慮
	;(従順が高いと命令に従いやすいなど)
	CALL COM_ORDER

	;ABL:欲望
	IF ABL:欲望
		SIF S
			PRINT  + 
		A += ABL:欲望 * 2
		PRINT 欲望
		PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 2,')
		S = 1
	ENDIF
	;ABL:奉仕精神
	IF ABL:奉仕精神
		SIF S
			PRINT  + 
		A += ABL:奉仕精神 * 4
		PRINT 奉仕精神
		PRINTV 'LV,ABL:奉仕精神,'(,ABL:奉仕精神 * 4,')
		S = 1
	ENDIF

	IF MARK:快楽刻印
		SIF S
			PRINT  + 
		A += MARK:1 * 2
		PRINT 快楽刻印
		PRINTV 'LV,MARK:快楽刻印,'(,MARK:快楽刻印 * 2,')
		S = 1
	ENDIF
	;PALAM:欲情
	IF GETPALAMLV(PALAM:欲情,5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:欲情,5) * 2
		PRINT 欲情
		PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 2,')
		S = 1
	ENDIF
	;害羞
	IF TALENT:羞恥心 > 0
		PRINT  - 
		A -= 3
		PRINT 害羞
		PRINTV '(,3,')
		S = 1
	ENDIF
	;汚臭鈍感
	IF TALENT:汚臭耐性 > 0
		SIF S
			PRINT  + 
		A += 3
		PRINT 汚臭鈍感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;汚臭敏感
	IF TALENT:汚臭耐性 < 0
		PRINT  - 
		A -= 3
		PRINT 汚臭敏感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;献身的
	IF TALENT:献身的
		SIF S
			PRINT  + 
		A += 6
		PRINT 献身的
		PRINTV '(,6,')
		S = 1
	ENDIF
	;接受快感
	IF TALENT:快感応答 > 0 
		SIF S
			PRINT  + 
		A += 3
		PRINT 接受快感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;否定快感（淫乱、娼婦で無効）
	IF TALENT:快感応答 < 0 && !TALENT:淫乱
		PRINT  - 
		A -= 3
		PRINT 否定快感
		PRINTV '(,3,')
		S = 1
	ENDIF
	;恋慕
	IF TALENT:恋慕 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 5
		PRINT 恋慕
		PRINTV '(,5,')
		S = 5
	ENDIF
	;親愛
	IF TALENT:恋慕 > 1 && ASSIPLAY == 0
		SIF S
			PRINT  + 
		A += 4
		PRINT 親愛
		PRINTV '(,4,')
		S = 1
	ENDIF

	;媚薬
	IF TCVAR:媚薬
		SIF S
			PRINT  + 
		A += 8
		PRINT 媚薬
		PRINTV '(,8,')
		S = 1
	ENDIF

	Y = 0
	;愛液の汚れ
	SIF STAIN:PLAYER:3 & 1
		Y += 1
	;精液の汚れ
	SIF STAIN:PLAYER:3 & 4
		Y += 3
	;アナルの汚れ
	SIF STAIN:PLAYER:3 & 8
		Y += 7
	SIF STAIN:PLAYER:3 & 16
		Y += 15
	Y = Y * (2 - TALENT:汚臭耐性) / 2

	;汚れあり
	IF Y
		PRINT  - 
		A -= Y
		PRINT 汚れあり
		;汚臭鈍感
		IF TALENT:汚臭耐性 > 0
			PRINT 、汚臭鈍感
		ELSEIF TALENT:汚臭耐性 < 0
			PRINT 、汚臭敏感
		ENDIF
		PRINTV '(,Y,')
		S = 1
	ENDIF

	;合計を表示(33以上で実行)
	PRINT  = 
	PRINTV A

	V = 33
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V

	WAIT
	SKIPDISP 0
	;実行できない
	SIF A < V
		RETURN 0
ENDIF
RETURN 1

;-------------------------------------------------
;選択可能判定
;-------------------------------------------------
@COM_ABLE501
;六九式実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(501)
	RETURN RESULT
;睡眠姦中
SIF CFLAG:イタズラ > 1
	RETURN 0
;欲望3以下・百合属性3以下のASSIの場合六九式はできない（小悪魔、相性良好ならＯＫ）
IF ASSIPLAY
	SIF (ABL:ASSI:欲望 <= 3 || ABL:ASSI:百合属性 <= 3) && TALENT:ASSI:小悪魔 == 0
		RETURN 0
;時間停止中は許可
IF FLAG: 70 != 1
	;調教者が助手でないなら従順3以上、奉仕精神3以上必要
	SIF ABL:従順 < 3 || ABL:奉仕精神 < 3
		RETURN 0
	;猫舌の奴隷の場合は技巧Lv2以上必要
	SIF TALENT:猫舌 && ABL:技巧 < 2
		RETURN 0
	;縄使用中は不可
	SIF TEQUIP:縄
		RETURN 0
	ENDIF
ENDIF
;体格差があるとダメ
SIF ABS(TALENT:体型 - TALENT:PLAYER:体型) > 2
	RETURN 0
;猫舌の調教者の場合は技巧Lv2以上必要
SIF TALENT:PLAYER:猫舌 && ABL:PLAYER:技巧 < 2
	RETURN 0


;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
;飛機杯使用中はダメ
SIF TEQUIP:12
	RETURN 0
;口枷使用中は不可
SIF TEQUIP:口枷
	RETURN 0

;浴室PLAY中は塑料地墊が無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:現在位置) && !(BATHROOM() && ITEM:20)
	RETURN 0
RETURN 1

