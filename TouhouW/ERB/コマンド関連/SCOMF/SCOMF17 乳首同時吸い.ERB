;-------------------------------------------------
;乳首同時吸い
;愛撫系派生コマンド
;-------------------------------------------------
@SCOM17
;着脱の処理
;TEQUIP:乳首吸い = !TEQUIP:乳首吸い


;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;奉仕快楽
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 20
	SOURCE:快Ｂ += ABL:PLAYER:舌 * 25 + 25

ELSE
	IF TALENT:TARGET:胸囲 >= 1
		DOWNBASE:体力 += 10
		DOWNBASE:気力 += 100
	
		SOURCE:快Ｂ = 100
		SOURCE:情愛 = 50
		SOURCE:露出 = 30
		SOURCE:不潔 = 40
		SOURCE:反感 = 150
	ELSE
		DOWNBASE:体力 += 10
		DOWNBASE:気力 += 80
	
		SOURCE:快Ｂ = 80
		SOURCE:情愛 = 50
		SOURCE:露出 = 30
		SOURCE:不潔 = 40
		SOURCE:反感 = 120
	ENDIF

	SOURCE:快Ｂ += ABL:PLAYER:舌 * 25
	SOURCE:情愛 += ABL:PLAYER:舌 * 5

	SIF ABL:親密 >= 7
		SOURCE:情愛 += (ABL:親密 * 20)

	;調教者のTALENT:舌頭霊活をみる
	SIF TALENT:PLAYER:舌頭霊活
		TIMES SOURCE:快Ｂ , 1.50

	;調教者のTALENT:猫舌をみる
	SIF TALENT:PLAYER:猫舌
		TIMES SOURCE:快Ｂ , 0.75
	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 100
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者の口の汚れが移動
STAIN:5 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:5
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF FLAG:70 == 1
IF HETEROSEX(TARGET,PLAYER)
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ELSE
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 5
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 5
ENDIF
ENDIF
;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1
EXP:PLAYER:口淫経験 ++
RETURN 1

;-------------------------------------------------
;選択可能判定
;-------------------------------------------------
@COM_ABLE517
;乳首同時吸い実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(11)
	RETURN RESULT
;上半身着衣
SIF (TEQUIP:1 & 2) && TEQUIP:3 == 0
	RETURN 0
;搾乳器使用中は不可
SIF TEQUIP:17
	RETURN 0
;乳頭夾使用中は不可
SIF TEQUIP:16
	RETURN 0
;乳房電極装着中はダメ
SIF TEQUIP:24
	RETURN 0
SIF TEQUIP:体位 == 5 || TEQUIP:体位 == 2 || TEQUIP:体位 == 3
	RETURN 0
RETURN 1

