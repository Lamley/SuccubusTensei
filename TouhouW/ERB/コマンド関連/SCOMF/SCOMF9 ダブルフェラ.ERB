	SIF TEQUIP:縄 || TEQUIP:LOCAL:縄
		RETURN 0
ENDIF
;口枷使用中は不可
SIF TEQUIP:口枷 || TEQUIP:LOCAL:口枷
	RETURN 0

RETURN 1

