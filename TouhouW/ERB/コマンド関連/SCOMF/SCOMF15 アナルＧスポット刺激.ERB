;-------------------------------------------------
;アナルＧスポ責め
;セックス系派生コマンド
;-------------------------------------------------
@SCOM15
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 2
;強度
TCVAR:PLAYER:4 = 1800

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:TARGET:2 = 12
;強度
TCVAR:TARGET:4 = 2000

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 60
	SOURCE:快Ａ = 500
	SOURCE:苦痛 = 250

ELSE

DOWNBASE:体力 += 60
	DOWNBASE:気力 += 120

	SOURCE:快Ａ = 500
	SOURCE:情愛 = 200
	SOURCE:苦痛 = 500
	SOURCE:露出 = 100
	SOURCE:反感 = 500


	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 500

	;貞操観念持ちで恋慕、親愛持ち以外には常に反発のソースを追加する（セックス系のみ）
	SIF TALENT:貞操 > 0 && !TALENT:恋慕
		SOURCE:反感 += 1000
ENDIF
;Aへの苦痛は先に処理しておく
CALL PAIN_CHECK_A(TARGET)

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;奴隷のA⇔調教者のＰの汚れが移動
STAIN:PLAYER:2 |= STAIN:4
STAIN:PLAYER:2 |= STAIN:7
STAIN:4 |= STAIN:PLAYER:2
STAIN:7 |= STAIN:PLAYER:2

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:挿入経験 ++
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF
IF FLAG:70 == 1
	EXP:MASTER:時姦経験 += 1
ELSEIF CFLAG:MASTER:イタズラ == 2
	EXP:MASTER:睡眠姦経験 += 1
	EXP:TARGET:睡眠姦経験 += 1
ELSE
	EXP:Ａ性交経験 ++
	;愛情経験
	SIF ASSIPLAY == 0
		EXP:愛情経験 += TALENT:恋慕
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE75
;アナル刺激Ｇ点
SIF !TFLAG:100
	RETURN 0
SIF !MASTER_POSE(SET_A,SET_P,1)
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(75)
	RETURN RESULT
;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
SIF TEQUIP:TARGET:51 != MASTER
	RETURN 0
RETURN 1

;-------------------------------------------------
;選択可能判定
;-------------------------------------------------
;アナル刺激Ｇ点
@COM_ABLE515
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(515)
	RETURN RESULT
;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
RETURN 1

