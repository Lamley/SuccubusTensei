;-------------------------------------------------
;挿入子宮口玩弄
;系コマンド、レベル
;-------------------------------------------------
@SCOM7
#DIM 苦痛補正値

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手）

LOCALS = {TARGET}/
CSTR:PLAYER:10 += LOCALS
TCVAR:PLAYER:2 = 1
;強度
TCVAR:PLAYER:4 = 2000 + TEQUIP:TARGET:子宮 * 250

CSTR:TARGET:10 += @"{PLAYER}/"
;TCVAR:2 射精箇所フラグ（-1=避孕套 1=膣内 2=アナル 3=手淫 4=口淫 5=乳交 6=素股 7=足交 8=体表 9=肛門奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
TCVAR:TARGET:2 = 13
;強度
TCVAR:TARGET:4 = 1600

SIF EXP:TARGET:子宮口開発経験 >= 50
	TCVAR:PLAYER:4 += MIN(EXP:TARGET:子宮口開発経験 * 5,1500)


;ベッドがないと立位に
SIF !BEDROOM(CFLAG:PLAYER:現在位置) && !(BATHROOM() && ITEM:20)
	TFLAG:193 = 1

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
SOURCE:快Ｖ = 500 + TEQUIP:TARGET:子宮 * 200
SOURCE:苦痛 = MAX(500 - EXP:TARGET:子宮口開発経験 * 2, 400)
SIF EXP:TARGET:子宮口開発経験 > 50
	SOURCE:苦痛 /= 2

;子宮口開発経験で快感追加
SELECTCASE EXP:TARGET:子宮口開発経験
	CASE IS > 300
		SOURCE:快Ｖ += 200
	CASE IS > 150
		SOURCE:快Ｖ += 100
	CASE IS > 50
	CASEELSE
		SOURCE:快Ｖ /= 2
ENDSELECT


;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 60

ELSE

	DOWNBASE:体力 += 60
	DOWNBASE:気力 += 120
	SOURCE:情愛 = 200 + TEQUIP:TARGET:子宮 * 100
	SOURCE:露出 = 120
	SOURCE:反感 = 500
	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 500

	;貞操観念持ちで恋慕、親愛持ち以外には常に反発のソースを追加する（セックス系のみ）
	SIF TALENT:貞操 > 0 && !TALENT:恋慕
		SOURCE:反感 += 1000
ENDIF

;Vへの苦痛は先に処理しておく
CALL PAIN_CHECK_V(TARGET)

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;膣内に破瓜之血の汚れを付加
SIF TALENT:処女 && TALENT:処女 != -1
	STAIN:6 |= 64
;奴隷の膣内⇔調教者のＰの汚れが移動
STAIN:6 |= STAIN:PLAYER:2
STAIN:PLAYER:2 |= STAIN:6

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:挿入経験 ++
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 4
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 4
ENDIF

EXP:子宮口開発経験 ++
SIF ABL:MASTER:腰 >= 3
	EXP:子宮口開発経験 ++
IF FLAG:70 == 1
	EXP:MASTER:時姦経験 += 1
ELSEIF CFLAG:MASTER:イタズラ == 2
	EXP:MASTER:睡眠姦経験 += 1
	EXP:TARGET:睡眠姦経験 += 1
ELSE
	EXP:Ｖ性交経験 ++
	;愛情経験
	SIF !ASSIPLAY
		EXP:愛情経験 += TALENT:恋慕
ENDIF
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE73
;挿入子宮口玩弄
SIF !TFLAG:100
	RETURN 0
SIF !MASTER_POSE(SET_V,SET_P,1)
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(73)
	RETURN RESULT
;下半身着衣
SIF TEQUIP:0 & 4
	RETURN 0
SIF TEQUIP:TARGET:50 != MASTER
	RETURN 0
;体格差がある場合は主人が禁断的知識持ちじゃないとダメ
SIF 挿入不可(TARGET) == 1 && !TALENT:PLAYER:禁断的知識
	RETURN 0
;さらに体格差があると経験が必要
SIF 挿入不可(TARGET) == 2 && (!TALENT:PLAYER:禁断的知識 || EXP:Ｖ経験 < 50)
	RETURN 0
SIF 挿入不可(TARGET) == 3
	RETURN 0
RETURN 1

