;-------------------------------------------------
;岩清水
;愛撫系派生コマンド
;-------------------------------------------------
@SCOM2
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;奉仕快楽フラグ
TCVAR:PLAYER:108 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 5
	SOURCE:快Ｃ = 150

ELSE

	DOWNBASE:体力 += 20
	DOWNBASE:気力 += 150

	SOURCE:快Ｃ = 150
	SOURCE:恐怖 = 100
	SOURCE:液体 = 100
	SOURCE:露出 = 150
	SOURCE:逸脱 = 300
	SOURCE:反感 = 300

	;-------------------------------------------------
	;特殊ソース処理
	;-------------------------------------------------
	;圧抑、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:自己愛 < 0 || TALENT:抵抗
		SOURCE:鬱屈 += 300
ENDIF
;舌を使う調教では、調教者の舌頭霊活によって、快感のソース増加
SIF TALENT:PLAYER:舌頭霊活
	TIMES SOURCE:快Ｃ , 1.50

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＶ⇔調教者の口の汚れが移動
STAIN:3 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:3

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 3
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 3
ENDIF

;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
SIF TALENT:PLAYER:猫舌
	EXP:PLAYER:嗜虐快楽経験 += 1

RETURN 1

;-------------------------------------------------
;選択可能判定
;-------------------------------------------------
@COM_ABLE502
;岩清水実行判定
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(502)
	RETURN RESULT
;羞恥PLAY中じゃないとダメ
SIF TEQUIP:30 == 0
	RETURN 0
;猫舌の調教者の場合は技巧Lv2以上必要
SIF TALENT:PLAYER:猫舌 && ABL:PLAYER:技巧 < 2
	RETURN 0
;性器が汚れているとMASTERの場合舐陰はできない（調教者が汚臭無視か愛液、母乳のよごれならＯＫ）
SIF STAIN:3 >= 2 && (STAIN:3 != 16 && STAIN:3 != 17) && ASSIPLAY == 0 && TALENT:MASTER:汚臭耐性 < 2
	RETURN 0
;性器が汚れており、汚臭敏感で従順3以下のASSIの場合舐陰はできない（調教者が汚臭無視か愛液、母乳のよごれならＯＫ）
IF STAIN:3 >= 2 && (STAIN:3 != 16 && STAIN:3 != 17) && ASSIPLAY
	SIF ABL:ASSI:従順 <= 3 && TALENT:ASSI:汚臭耐性 < 0
		RETURN 0
ENDIF

;下半身着衣
SIF TEQUIP:0 > 1
	RETURN 0
;男人だとダメ
SIF  !(TALENT:2 & 1)
	RETURN 0
RETURN 1

