@COM_ABLE508
;６９乳交
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(508)
	RETURN RESULT
;睡眠姦中
SIF CFLAG:イタズラ > 1
	RETURN 0
;男人だとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;体格差があるとダメ
SIF ABS(TALENT:体型 - TALENT:PLAYER:体型) > 2
	RETURN 0
;[絶壁]だと不可
SIF TALENT:胸囲 == -2
	RETURN 0
;[爆乳]なら技巧LV2以上、[巨乳]でなければ技巧4以上、[貧乳]だと技巧5必要
SIF TALENT:胸囲 + ABL:技巧 < 4
	RETURN 0
;調教者が男人か半人半妖かFutanariじゃないとダメ
SIF !(TALENT:PLAYER:2 & 2)
	RETURN 0
;猫舌の調教者の場合は技巧Lv2以上必要
SIF TALENT:PLAYER:猫舌 && ABL:PLAYER:技巧 < 2
	RETURN 0
;猫舌の奴隷の場合は技巧Lv2以上必要
SIF TALENT:猫舌 && ABL:技巧 < 2
	RETURN 0
;上半身着衣
SIF TEQUIP:1 > 1
	RETURN 0
;縄使用中は不可
SIF TEQUIP:縄
	RETURN 0
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:PLAYER:現在位置) && !(BATHROOM() && ITEM:20)
	RETURN 0
;停止中は不可
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

