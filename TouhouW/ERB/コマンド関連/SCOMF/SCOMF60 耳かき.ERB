@SCOM60
;掏耳朵
LOCAL = RAND:110
LOCAL:1 = 90 + GET_SUCCESS_RATE() / 5
SIF LOCAL:1 > 109
	LOCAL:1 = 109
IF LOCAL <= 9
	;10％で大成功
	TFLAG:193 = 1
	;信頼
	TFLAG:98 = 3
ELSEIF LOCAL >= LOCAL:1
	;10～1％で失敗
	TFLAG:193 = -1
	;信頼
	TFLAG:98 = -2
ELSE
	;残りは成功
	TFLAG:193 = 0
	;信頼
	TFLAG:98 = 0
ENDIF
;先制発生時は失敗しない
SIF TFLAG:102 == 3
	TFLAG:193 = MAX(TFLAG:193,0)
DOWNBASE:気力 += 100
DOWNBASE:MASTER:気力 += 50

;固定で獲得するソース
SOURCE:情愛 = 170
SOURCE:歓楽 = 100
SOURCE:恭順 = 85
SOURCE:反感 = 50
SIF TFLAG:193 == -1
	SOURCE:反感 += 30

;ABL:親密をみる
IF ABL:親密 <= 1
	SOURCE:情愛 += (ABL:親密 * 20)
	SOURCE:恭順 += (ABL:親密 * 10)
ELSEIF ABL:親密 <= 3
	SOURCE:情愛 += 200 + (ABL:親密 * 20)
	SOURCE:恭順 += 150 + (ABL:親密 * 10)
ELSEIF ABL:親密 <= 5
	SOURCE:情愛 += 400 + (ABL:親密 * 20)
	SOURCE:恭順 += 200 + (ABL:親密 * 10)
ELSEIF ABL:親密 <= 8
	SOURCE:情愛 += 600 + (ABL:親密 * 30)
	SOURCE:恭順 += 250 + (ABL:親密 * 10)
	SOURCE:歓楽 += 100 + (ABL:奉仕精神 * 10)
ELSEIF ABL:親密 <= 11
	SOURCE:情愛 += 800 + (ABL:親密 * 30)
	SOURCE:恭順 += 300 + (ABL:親密 * 10)
	SOURCE:歓楽 += 200 + (ABL:奉仕精神 * 10)
ELSE
	SOURCE:情愛 += 1000 + (ABL:親密 * 20)
	SOURCE:恭順 += 500 + (ABL:親密 * 10)
	SOURCE:歓楽 += 300 + (ABL:奉仕精神 * 10)
ENDIF

LOCAL = 0
;好感度が低いと好感度低下
IF CFLAG:2 <= 50
	LOCAL -= 3
ELSEIF CFLAG:2 <= 100
	LOCAL -= 2
ELSEIF CFLAG:2 <= 250
	LOCAL -= 1
ENDIF


SOURCE:受動 = 150 + 250 * ABL:従順

;好感度変化
TFLAG:97 += LOCAL

IF TFLAG:193 == -1
	TIMES SOURCE:情愛 , 0.50
	TIMES SOURCE:恭順 , 0.50
	TIMES SOURCE:受動 , 0.50
	TIMES SOURCE:歓楽 , 0.40
ELSEIF TFLAG:193 == 0
	TIMES SOURCE:情愛 , 1.00
	TIMES SOURCE:恭順 , 1.00
	TIMES SOURCE:受動 , 1.00
	TIMES SOURCE:歓楽 , 0.80
ELSE
	TIMES SOURCE:情愛 , 1.50
	TIMES SOURCE:恭順 , 1.50
	TIMES SOURCE:受動 , 2.00
	TIMES SOURCE:歓楽 , 1.30
ENDIF
TIME += 30
CALL SET_DERAY(6,TARGET)

RETURN 1

