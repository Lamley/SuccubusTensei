	RETURN 0
SIF TEQUIP:LOCAL:0 & 4
	RETURN 0
;浴室PLAY中は塑料地墊が無いとダメ
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF

;助手が騎乗位からはダメ
SIF TEQUIP:LOCAL:体位２ == 3
	RETURN 0

RETURN 1

