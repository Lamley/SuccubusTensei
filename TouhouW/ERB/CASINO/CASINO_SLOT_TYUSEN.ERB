#DIM REF 絵柄_左上
#DIM REF 絵柄_左中
#DIM REF 絵柄_左下
#DIM REF 絵柄_中上
#DIM REF 絵柄_中中
#DIM REF 絵柄_中下
#DIM REF 絵柄_右上
#DIM REF 絵柄_右中
#DIM REF 絵柄_右下

;各絵柄の略称(B_E_Rのみ5文字なのに注意!!)
#DIM CONST RD7 = 1
#DIM CONST BL7 = 2
#DIM CONST BEL = 3
#DIM CONST CHE = 4
#DIM CONST MEL = 5
#DIM CONST B_A_R = 6
#DIM CONST REP = 7
#DIM CONST NUL = 8

;当選小役の種類
#DIM CONST 当選小役_赤7ボー茄子 = 0
#DIM CONST 当選小役_青7ボー茄子 = 1
#DIM CONST 当選小役_レギュラーボー茄子 = 2
#DIM CONST 当選小役_中チェリー = 3
#DIM CONST 当選小役_強チェリー = 4
#DIM CONST 当選小役_弱チェリー = 5
#DIM CONST 当選小役_強西瓜 = 6
#DIM CONST 当選小役_弱西瓜 = 7
#DIM CONST 当選小役_ベル = 8
#DIM CONST 当選小役_リプレイ = 9
#DIM CONST 当選小役_はずれ = 99

SELECTCASE 当選した小役
	;===================================
	;当選小役_赤7ボー茄子は以下の1街道
	;	REP		CHE		BEL
	;	RD7		RD7		RD7
	;	CHE		CHE		MEL
	;===================================
	CASE 当選小役_赤7ボー茄子
		絵柄_左上 = REP
		絵柄_左中 = RD7
		絵柄_左下 = CHE
		絵柄_中上 = CHE
		絵柄_中中 = RD7
		絵柄_中下 = CHE
		絵柄_右上 = BEL
		絵柄_右中 = RD7
		絵柄_右下 = MEL
	;===================================
	;当選小役_青7ボー茄子は以下の1街道
	;	REP		MEL		BEL
	;	BL7		BL7		BL7
	;	CHE		REP		MEL
	;===================================
	CASE 当選小役_青7ボー茄子
		絵柄_左上 = REP
		絵柄_左中 = BL7
		絵柄_左下 = CHE
		絵柄_中上 = MEL
		絵柄_中中 = BL7
		絵柄_中下 = REP
		絵柄_右上 = BEL
		絵柄_右中 = BL7
		絵柄_右下 = MEL
	;===================================
	;当選小役_レギュラーボー茄子は以下の1街道
	;	REP		CHE		BEL
	;	RD7		RD7		B_A_R
	;	CHE		CHE		MEL
	;===================================
	CASE 当選小役_レギュラーボー茄子
		絵柄_左上 = REP
		絵柄_左中 = RD7
		絵柄_左下 = CHE
		絵柄_中上 = CHE
		絵柄_中中 = RD7
		絵柄_中下 = CHE
		絵柄_右上 = BEL
		絵柄_右中 = B_A_R
		絵柄_右下 = MEL
	;===================================
	;当選小役_中チェリー
	;	B_A_R	---		---
	;	CHE		B_A_R	---
	;	MEL		---		B_A_R
	;===================================
	CASE 当選小役_中チェリー
		絵柄_左上 = B_A_R
		絵柄_左中 = CHE
		絵柄_左下 = MEL
		;中リールにて上の停止系は2街道(6,14)
		IF !RAND(2)
			絵柄_中上 = CHE
			絵柄_中中 = B_A_R
			絵柄_中下 = REP
		ELSE
			絵柄_中上 = BEL
			絵柄_中中 = B_A_R
			絵柄_中下 = MEL
		ENDIF
		;右リールにて上の停止系は2街道(8,16)
		IF !RAND(2)
			絵柄_右上 = RD7
			絵柄_右中 = MEL
			絵柄_右下 = B_A_R
		ELSE
			絵柄_右上 = REP
			絵柄_右中 = BEL
			絵柄_右下 = B_A_R
		ENDIF
	;===================================
	;当選小役_強チェリー
	;	REP		---		CHE
	;	RD7		CHE		REP
	;	CHE		---		BEL
	;===================================
	CASE 当選小役_強チェリー
		絵柄_左上 = REP
		絵柄_左中 = RD7
		絵柄_左下 = CHE
		;中リールにて上の停止系は6街道(4,5,9,11,16,19)
		SELECTCASE RAND(6)
		CASE 0
			絵柄_中上 = BEL
			絵柄_中中 = CHE
			絵柄_中下 = CHE
		CASE 1
			絵柄_中上 = CHE
			絵柄_中中 = CHE
			絵柄_中下 = B_A_R
		CASE 2
			絵柄_中上 = BEL
			絵柄_中中 = CHE
			絵柄_中下 = RD7
		CASE 3
			絵柄_中上 = RD7
			絵柄_中中 = CHE
			絵柄_中下 = REP
		CASE 4
			絵柄_中上 = MEL
			絵柄_中中 = CHE
			絵柄_中下 = REP
		CASEELSE
			絵柄_中上 = BEL
			絵柄_中中 = CHE
			絵柄_中下 = MEL
		ENDSELECT
		絵柄_右上 = CHE
		絵柄_右中 = REP
		絵柄_右下 = BEL
	;===================================
	;当選小役_弱チェリー
	;右リールはチェリー外し
	;	REP		---		---
	;	RD7		CHE		---
	;	CHE		---		---
	;===================================
	CASE 当選小役_弱チェリー
		絵柄_左上 = REP
		絵柄_左中 = RD7
		絵柄_左下 = CHE
		;中リールにて上の停止系は6街道(4,5,9,11,16,19)
		SELECTCASE RAND(6)
		CASE 0
			絵柄_中上 = BEL
			絵柄_中中 = CHE
			絵柄_中下 = CHE
		CASE 1
			絵柄_中上 = CHE
			絵柄_中中 = CHE
			絵柄_中下 = B_A_R
		CASE 2
			絵柄_中上 = BEL
			絵柄_中中 = CHE
			絵柄_中下 = RD7
		CASE 3
			絵柄_中上 = RD7
			絵柄_中中 = CHE
			絵柄_中下 = REP
		CASE 4
			絵柄_中上 = MEL
			絵柄_中中 = CHE
			絵柄_中下 = REP
		CASEELSE
			絵柄_中上 = BEL
			絵柄_中中 = CHE
			絵柄_中下 = MEL
		ENDSELECT
		;右リールにてチェリーこぼしは2街道
		IF !RAND(2)
			絵柄_右上 = MEL
			絵柄_右中 = CHE
			絵柄_右下 = REP
		ELSE
			絵柄_右上 = REP
			絵柄_右中 = BEL
			絵柄_右下 = B_A_R
		ENDIF
	;===================================
	;当選小役_強西瓜
	;小Ｖ字西瓜
	;	MEL		---		MEL
	;	BEL		MEL		---
	;	REP		---		REP
	;===================================
	CASE 当選小役_強西瓜
		絵柄_左上 = MEL
		絵柄_左中 = BEL
		絵柄_左下 = REP
		;中リールにて上の停止系は2街道
		IF !RAND(2)
			絵柄_中上 = CHE
			絵柄_中中 = MEL
			絵柄_中下 = BL7
		ELSE
			絵柄_中上 = B_A_R
			絵柄_中中 = MEL
			絵柄_中下 = CHE
		ENDIF
		;右リールにて上の停止系は2街道
		IF !RAND(2)
			絵柄_右上 = MEL
			絵柄_右中 = CHE
			絵柄_右下 = REP
		ELSE
			絵柄_右上 = MEL
			絵柄_右中 = B_A_R
			絵柄_右下 = REP
		ENDIF
	;===================================
	;当選小役_弱西瓜
	;右下がり西瓜
	;	MEL		---		BEL
	;	BEL		MEL		---
	;	REP		---		MEL
	;===================================
	CASE 当選小役_弱西瓜
		絵柄_左上 = MEL
		絵柄_左中 = BEL
		絵柄_左下 = REP
		;中リールにて上の停止系は2街道
		IF !RAND(2)
			絵柄_中上 = CHE
			絵柄_中中 = MEL
			絵柄_中下 = BL7
		ELSE
			絵柄_中上 = B_A_R
			絵柄_中中 = MEL
			絵柄_中下 = CHE
		ENDIF
		;右リールにて上の停止系は4街道
		SELECTCASE RAND(4)
		CASE 0
			絵柄_右上 = BEL
			絵柄_右中 = B_A_R
			絵柄_右下 = MEL
		CASE 1
			絵柄_右上 = BEL
			絵柄_右中 = BL7
			絵柄_右下 = MEL
		CASE 2
			絵柄_右上 = BEL
			絵柄_右中 = RD7
			絵柄_右下 = MEL
		CASEELSE
			絵柄_右上 = BEL
			絵柄_右中 = BEL
			絵柄_右下 = MEL
		ENDSELECT
	;===================================
	;当選小役_ベル
	;右下がりベル
	;	BEL		---		---
	;	REP		BEL		---
	;	RD7		---		BEL
	;
	;上段ベル
	;	BEL		BEL		BEL
	;	REP		---		---
	;	RD7		---		---
	;
	;西瓜滑りからの中段ベル
	;	MEL		REP		REP
	;	BEL		BEL		BEL
	;	REP		B_A_R	---
	;===================================
	CASE 当選小役_ベル
		;西瓜滑りからの中段ベル
		;出現頻度を下げたいためにベル当選時の1/20で出現
		IF !RAND(20)
			絵柄_左上 = MEL
			絵柄_左中 = BEL
			絵柄_左下 = REP
			絵柄_中上 = REP
			絵柄_中中 = BEL
			絵柄_中下 = B_A_R
			;右リールにて上の停止系は4街道
			SELECTCASE RAND(4)
			CASE 0
				絵柄_右上 = REP
				絵柄_右中 = BEL
				絵柄_右下 = BL7
			CASE 1
				絵柄_右上 = REP
				絵柄_右中 = BEL
				絵柄_右下 = RD7
			CASE 2
				絵柄_右上 = REP
				絵柄_右中 = BEL
				絵柄_右下 = BEL
			CASEELSE
				絵柄_右上 = REP
				絵柄_右中 = BEL
				絵柄_右下 = B_A_R
			ENDSELECT
		;右下がりベル
		ELSEIF !RAND(2)
			絵柄_左上 = BEL
			絵柄_左中 = REP
			絵柄_左下 = RD7
			;中リールにて上の停止系は2街道
			IF !RAND(2)
				絵柄_中上 = REP
				絵柄_中中 = BEL
				絵柄_中下 = B_A_R
			ELSE
				絵柄_中上 = REP
				絵柄_中中 = BEL
				絵柄_中下 = CHE
			ENDIF
			;右リールにて上の停止系は3街道
			SELECTCASE RAND(3)
			CASE 0
				絵柄_右上 = CHE
				絵柄_右中 = REP
				絵柄_右下 = BEL
			CASE 1
				絵柄_右上 = B_A_R
				絵柄_右中 = REP
				絵柄_右下 = BEL
			CASEELSE
				絵柄_右上 = REP
				絵柄_右中 = BEL
				絵柄_右下 = BEL
			ENDSELECT
		;上段ベル
		ELSE
			絵柄_左上 = BEL
			絵柄_左中 = REP
			絵柄_左下 = RD7
			;中リールにて上の停止系は4街道
			SELECTCASE RAND(4)
			CASE 0
				絵柄_中上 = BEL
				絵柄_中中 = CHE
				絵柄_中下 = CHE
			CASE 1
				絵柄_中上 = BEL
				絵柄_中中 = CHE
				絵柄_中下 = RD7
			CASE 2
				絵柄_中上 = BEL
				絵柄_中中 = B_A_R
				絵柄_中下 = MEL
			CASEELSE
				絵柄_中上 = BEL
				絵柄_中中 = CHE
				絵柄_中下 = MEL
			ENDSELECT
			;右リールにて上の停止系は5街道
			SELECTCASE RAND(5)
			CASE 0
				絵柄_右上 = BEL
				絵柄_右中 = BL7
				絵柄_右下 = MEL
			CASE 1
				絵柄_右上 = BEL
				絵柄_右中 = RD7
				絵柄_右下 = MEL
			CASE 2
				絵柄_右上 = BEL
				絵柄_右中 = BEL
				絵柄_右下 = MEL
