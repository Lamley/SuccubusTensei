					SIF !((TALENT:LOCAL:150 || TALENT:LOCAL:151) && !TALENT:LOCAL:初潮) || !GETBIT(TALENT:LOCAL:性別,0)
						CFLAG:LOCAL:900 = 7
				ENDIF
