		ENDIF
	CASEELSE
		LOCAL = 24
ENDSELECT

IF RAND:LOCAL + 1 <= 12 && CFLAG:MASTER:現在位置 != 天界
	;天候変化発生で虹は消える
	;TIME:7 = 0
	SELECTCASE TIME:5
		;晴天の時
		CASE 0
			;20%で晴天に移行
			IF RAND:5 == 0
				SETBIT TIME:5,0
			;20%で多雲に移行
			ELSEIF RAND:5 == 0
				SETBIT TIME:5,1
				SIF !CFLAG:MASTER:うふふ && !地底
					PRINTW 変成多云天气了
			;5%で陰天に移行
			ELSEIF RAND:20 == 0
				TIME:5 = 3
				SIF !CFLAG:MASTER:うふふ && !地底
					PRINTW 変成陰天了
			;上記確率に引っかからなかったら晴天
			ELSE
				TIME:5 = 0
			ENDIF
		CASE 1
			;20%で晴天に移行
			IF RAND:5 == 0
				CLEARBIT TIME:5,0
			;20%で多雲に移行
			ELSEIF RAND:5 == 0
				TIME:5 = 2
				SIF !CFLAG:MASTER:うふふ && !地底
					PRINTW 変成多云天气了
			ENDIF
		;陰天の時
		CASE 2,3
			;25%で強化or弱体化
			IF RAND:4 == 0
				INVERTBIT TIME:5,0
			ELSE
				;20%で晴天に移行
				IF RAND:5 == 0
					TIME:5 = 0
					IF !CFLAG:MASTER:うふふ && !地底
						IF TIME:2 >= 5 && TIME:2 <= 7
							PRINTW 可以看见星星了
						ELSE
							PRINTW 太阳出来了
						ENDIF
					ENDIF
				;多雲なら10%で雨か雪に移行
				ELSEIF TIME:5 == 2 && RAND:10 == 0
					IF DAY:2 == 4 && RAND:5
						TIME:5 = 8
						SIF !CFLAG:MASTER:うふふ && !地底
							PRINTW 下雪了！
					ELSE
						TIME:5 = 4
						SIF !CFLAG:MASTER:うふふ && !地底
							PRINTW 下雨了！
					ENDIF
					;更に10%の確率で霧雨,細雪に移行
					SIF RAND:10 == 0
						SETBIT TIME:5,1
				;陰天なら30%で雨に移行
				ELSEIF TIME:5 == 3 && RAND:10 < 3
					IF DAY:2 == 4 && RAND:5
						TIME:5 = 8
						SIF !CFLAG:MASTER:うふふ && !地底
							PRINTW 下雪了！
					ELSE
						TIME:5 = 4
						SIF !CFLAG:MASTER:うふふ && !地底
							PRINTW 下雨了！
					ENDIF
				ENDIF
			ENDIF
		;雨の時
		CASE 4,5,6,7
			;25%で強化or弱体化
			IF RAND:4 == 0
				INVERTBIT TIME:5,0
			ELSE
				;25%で陰天に移行
				IF RAND:4 == 0
					TIME:5 = 3
					SIF !CFLAG:MASTER:うふふ && !地底
						PRINTW 雨要停了的样子
					;念のため相合い傘を解除
					FOR LOCAL,0,CHARANUM
						SIF TEQUIP:LOCAL:201
							TEQUIP:LOCAL:201 = 0
					NEXT
				;雨なら10%で霧雨か雨雪交加に移行
				ELSEIF TIME:5 == 4 && RAND:10 == 0
					IF DAY:2 == 4
						TIME:5 = 12
						SIF !CFLAG:MASTER:うふふ && !地底
							PRINTW 雨中掺了一些雪花
					ELSE
						TIME:5 = 6
						SIF !CFLAG:MASTER:うふふ && !地底
							PRINTW 雨点変小了
					;更に10%の確率で霧,冰雹に移行
					SIF RAND:10 == 0
						SETBIT TIME:5,0
					ENDIF
				;10%で晴天に移行
				ELSEIF RAND:10 == 0
					TIME:5 = 0
					IF !CFLAG:MASTER:うふふ && !地底
						;かもしれないといいつつ確実に見えるのは気分をよくさせる魔法
						IF TIME:2 >= 5 && TIME:2 <= 7
							PRINTW 突然星空変的晴朗了！説不定能看到月下彩虹呢
						ELSE
							PRINTW 突然太阳出来了！説不定能看到彩虹呢
						ENDIF
					FOR LOCAL,0,CHARANUM
						SIF TEQUIP:LOCAL:201
							TEQUIP:LOCAL:201 = 0
					NEXT
					ENDIF
					;更に低確率で晴朗
					SIF RAND:100 < 5
						TIME:5 = 1
					;雨→晴天を処理したら虹が出る
					TIME:7 = 1
				ENDIF
			ENDIF
		;雪の時
		CASE IS >= 8
			;雪は冬以外降らない
			IF DAY:2 != 4
				;雨になる
				CLEARBIT TIME:5,3
				SETBIT TIME:5,2
				SIF !CFLAG:MASTER:うふふ && !地底
					PRINTW 雪天好像変成了雨天的样子
			;10%で強化
			ELSEIF !GETBIT(TIME:5,0) && RAND:10 == 0
				SETBIT TIME:5,0
			;50%の確率で弱体化
			ELSEIF GETBIT(TIME:5,0) && RAND:2
				CLEARBIT TIME:5,0
			
			ELSE
				;25%で陰天に移行
				IF RAND:4 == 0
					TIME:5 = 3
					SIF !CFLAG:MASTER:うふふ && !地底
						PRINTW 雪好像停了的样子
					FOR LOCAL,0,CHARANUM
						SIF TEQUIP:LOCAL:201
							TEQUIP:LOCAL:201 = 0
					NEXT
				;雪なら10%で細雪か雨雪交加に移行
				ELSEIF TIME:5 == 8 && RAND:10 == 0
					IF RAND:2
						TIME:5 = 10
						SIF !CFLAG:MASTER:うふふ && !地底
							PRINTW 雪花変小了
					ELSE
						TIME:5 = 12
						SIF !CFLAG:MASTER:うふふ && !地底
							PRINTW 雪中掺了一些雨点
					ENDIF
					;更に10%の確率で霧雪,冰雹に移行
					SIF RAND:10 == 0
						SETBIT TIME:5,0
				;10%で晴天に移行
				ELSEIF RAND:10 == 0
					TIME:5 = 0
					IF !CFLAG:MASTER:うふふ && !地底
						IF TIME:2 >= 5 && TIME:2 <= 7
							PRINTW 突然星空変的晴朗了！説不定能看到钻石尘呢
						ELSE
							PRINTW 突然太阳出来了！説不定能看到钻石尘呢
						ENDIF
					FOR LOCAL,0,CHARANUM
						SIF TEQUIP:LOCAL:201
							TEQUIP:LOCAL:201 = 0
					NEXT
					ENDIF
					;更に低確率で晴朗
					SIF RAND:100 < 5
						TIME:5 = 1
					;雪→晴天を処理したらダイヤモンドダストが出る
					TIME:7 = 2
				ENDIF
			ENDIF
		CASEELSE
			TIME:5 = RAND:5
	ENDSELECT
ENDIF
