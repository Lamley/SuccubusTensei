;-------------------------------------------------
;手淫
;-------------------------------------------------
IF GETBIT(TCVAR:50,3)
	IF CFLAG:(NO:TARGET):イタズラ 
		TRYCCALLFORM M_KOJO_MESSAGE_PALAMCNG_A2_K{NO:TARGET}_3(ARG)
		CATCH
