IF GETBIT(TCVAR:50,20)
	TRYCALLFORM M_KOJO_MESSAGE_PALAMCNG_A_K{NO:TARGET}_20(ARG)
	SIF RESULT
		RETURN RESULT
		RESETCOLOR
ENDIF
;-------------------------------------------------
