IF GETBIT(TCVAR:50,4)
	IF CFLAG:(NO:TARGET):イタズラ 
		TRYCCALLFORM M_KOJO_MESSAGE_PALAMCNG_A2_K{NO:TARGET}_4(ARG)
		CATCH
			CALL PALAM_MESSAGE_A
		ENDCATCH
	ELSE
		TRYCALLFORM M_KOJO_MESSAGE_PALAMCNG_A_K{NO:TARGET}_4(ARG)
	ENDIF
	SIF RESULT
		RETURN RESULT
		RESETCOLOR
