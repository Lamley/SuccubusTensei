;====================================================================
;KOJO表示総合管理
;@KOJO_MESSAGE_SEND
;ARGS   => 口上種類 ("ENCOUNTER" "SP_EVENT" "EVENT" "COMMAND" "COUNTER" "PALAM" "MARK" "DIRECT" "ENDING"）
;ARG:1 => 口上タイミング(イベント番号、PALAM系タイミング番号、COMMAND番号等)
;ARG:2 => 発言者（口上主）ナンバー
;ARG:3 => 其他口上向け引数buffer
;ARG:4 => 其他口上向け引数buffer2
;RESULTSによる汎用化に関しては仕様が読めないので取り敢えずベタ移植
;====================================================================
@KOJO_MESSAGE_SEND( ARGS,ARG:1,ARG:2,ARG:3,ARG:4 )
SIF ARG:2 == MASTER && ARGS != "COMMAND"
	RETURN -1
RESULTS =
VARSET LOCAL
SELECTCASE ARGS
;------------------------------------------------------------
;ファーストインプレッション系KOJO出力処理（俗に言うエクストラ構文）
;------------------------------------------------------------
	CASE "ENCOUNTER"
		;TARGETに発言者設定（現在のTARGETはLOCALへ退避）
		LOCAL = TARGET
		TARGET = ARG:2
		;口上存在判定
		TRYCALLFORM M_KOJO_K{NO:TARGET}
		;口上存在しないなら終了
		IF !RESULT
			TARGET = LOCAL
			RETURN 0
		ENDIF
		;口上表示設定なら表示
		IF FLAG:口上テキスト設定 > 0
			SIF FLAG:口上色
			TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
			TRYCALLFORM M_KOJO%RESULTS%_ENCOUNTER_K{NO:TARGET}
		ENDIF
		RESETCOLOR
		TARGET = LOCAL
;------------------------------------------------------------
;SPイベント系KOJO出力処理
;------------------------------------------------------------
	CASE "SP_EVENT"
		;TARGETに発言者設定（現在のTARGETはLOCALへ退避）
		LOCAL = TARGET
		TARGET = ARG:2
		;口上未表示なら共通口上へ
		IF FLAG:口上テキスト設定 <= 0
			;共通口上出力
			CALLFORM SPEVENT_MESSAGE_{ARG:1}(ARG:3,ARG:4)
			TARGET = LOCAL
			RETURN 0
		ENDIF
		RESULT = 0
		RESULTS =
		;TARGETの発言
		;@M_KOJO_KXにてRESULTSを定義すると口上が被らず起動する
			SIF FLAG:口上色
			TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
		TRYCALLFORM M_KOJO_K{NO:TARGET}
		RESETCOLOR
		;口上が存在しないなら共通口上へ
		IF !RESULT
			;口上表示設定なら共通表示
			IF FLAG:口上テキスト設定 > 0
				;共通口上出力
				CALLFORM SPEVENT_MESSAGE_{ARG:1}(ARG:3,ARG:4)
				TARGET = LOCAL
				RETURN 0
			ENDIF
		ENDIF
		;口上表示
		IF FLAG:口上テキスト設定 > 0
			;TARGET口上出力
			;M_KOJO_KXでRESULTSを定義すると切り替え可
			SIF FLAG:口上色
			TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
			TRYCALLFORM M_KOJO%RESULTS%_SPEVENT_K{NO:TARGET}_{ARG:1}(ARG:3,ARG:4)
		ENDIF
			RESETCOLOR
		TARGET = LOCAL
;------------------------------------------------------------
;イベント系KOJO出力処理
;------------------------------------------------------------
	CASE "EVENT"
		;TARGETに発言者設定（現在のTARGETはLOCALへ退避）
		LOCAL = TARGET
		TARGET = ARG:2
		;口上未表示なら共通口上へ
		IF FLAG:口上テキスト設定 <= 0
			;共通口上出力
			TRYCALLFORM M_KOJO_EVENT_{ARG:1}(ARG:3,ARG:4)
			TARGET = LOCAL
			RETURN 0
		ENDIF
		RESULT = 0
		RESULTS =
		;TARGETの発言
		;@M_KOJO_KXにてRESULTSを定義すると口上が被らず起動する
		TRYCALLFORM M_KOJO_K{NO:TARGET}
		;口上が存在しないなら共通口上へ
		IF !RESULT || (FLAG:70 && !CFLAG:(NO:TARGET):時間停止口上有)
			;口上表示設定なら共通表示
			IF FLAG:口上テキスト設定 > 0
				;共通口上出力
				TRYCALLFORM M_KOJO_EVENT_{ARG:1}(ARG:3,ARG:4)
				TARGET = LOCAL
				RETURN 0
			ENDIF
		ENDIF
		;口上表示
		IF FLAG:口上テキスト設定 > 0
			;TARGET口上出力
			SIF FLAG:口上色
			TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
			TRYCALLFORM M_KOJO%RESULTS%_EVENT_K{NO:TARGET}_{ARG:1}(ARG:3,ARG:4)
		ENDIF
			RESETCOLOR
		TARGET = LOCAL
;------------------------------------------------------------
;コマンド系KOJO出力処理
;------------------------------------------------------------
	CASE "COMMAND"
		;テキスト設定
		IF FLAG:口上テキスト設定 <= 0
			;情景テキスト出力
			SIF FLAG:6 > 0
				CALL TRAIN_MESSAGE
			RETURN 0
		ENDIF
		;口枷時
		IF TEQUIP:(ARG:2):20 && SELECTCOM != 107
			SIF FLAG:6 > 0
				CALL TRAIN_MESSAGE
		ELSEIF (FLAG:70 && !CFLAG:(ARG:2):時間停止口上有) || (CFLAG:(ARG:2):イタズラ >= 1 && !CFLAG:(ARG:2):眠姦口上有)
			SIF FLAG:6 > 0
				CALL TRAIN_MESSAGE
		ELSE
			RESULT = 0
			RESULTS =
			;口上の存在判定 and RESULTSに文字列代入
			SIF FLAG:口上色
				TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
			TRYCALLFORM M_KOJO_K{NO:TARGET}
			RESETCOLOR
			RESULT = 0
			IF TFLAG:50
				TRYCALLFORM M_KOJO%RESULTS%_MESSAGE_SCOM_K{NO:TARGET}_{TFLAG:50}
			ELSE
				TRYCALLFORM M_KOJO%RESULTS%_MESSAGE_COM_K{NO:TARGET}_{SELECTCOM}
			ENDIF
			RESETCOLOR
			;埋めていないところは汎用的な処理が可能
			IF RESULT
				TRYCALLFORM M_KOJO%RESULTS%_MESSAGE_COM_K{NO:TARGET}_00
			ELSEIF !RESULT && FLAG:6 > 0
				CALL TRAIN_MESSAGE
				RESETCOLOR
				RETURN 0
			ENDIF
		ENDIF
		RESETCOLOR
;------------------------------------------------------------
;カウンター系KOJO出力処理
;------------------------------------------------------------
	CASE "COUNTER"
		LOCAL = TARGET
		TARGET = ARG:2
		IF FLAG:口上テキスト設定 <= 0
			IF FLAG:6 > 0
				CALL EVENT_COUNTER_MESSAGE
				TARGET = LOCAL
			ENDIF
			RETURN 0
		ENDIF
		
		;口枷
		IF TEQUIP:(ARG:2):20 && FLAG:6 > 0
			CALL EVENT_COUNTER_MESSAGE
			TARGET = LOCAL
		ELSE
			RESULT = 0
			RESULTS =
			;口上の存在判定 and RESULTSに文字列代入
			TRYCALLFORM M_KOJO_K{NO:TARGET}
			TRYCCALLFORM M_KOJO%RESULTS%_MESSAGE_COUNTER_K{NO:TARGET}_{TCVAR:20}
				PRINTL
				PRINTL
			CATCH
				IF FLAG:6 > 0
					CALL EVENT_COUNTER_MESSAGE
					TARGET = LOCAL
					RESETCOLOR
					RETURN 0
				ENDIF
			ENDCATCH
			TARGET = LOCAL
		ENDIF
		RESETCOLOR
;------------------------------------------------------------
;パラメータ系KOJO出力処理
;------------------------------------------------------------
	CASE "PALAM"
		SELECTCASE ARG:1
		;==== 射精時口上 ============
			CASE 1
				VARSET LOCAL
				IF FLAG:口上テキスト設定 <= 0
					SIF FLAG:6 > 0
						CALL PALAM_MESSAGE_A
					RETURN 0
				ENDIF
				FOR LOCAL,0,CHARANUM
					SIF TARGET:LOCAL < 1
						CONTINUE
					;TARGET,TARGET:1,…の順に出力
					SIF LOCAL > 0 && TARGET:LOCAL == TARGET
						CONTINUE
					;口上出力用のフラグがないと飛ばす
					SIF !TCVAR:(TARGET:LOCAL):50
						CONTINUE
					LOCAL:1 = TARGET
					TARGET = TARGET:LOCAL
					RESULT = 0
					RESULTS =
					;口上の存在判定 and RESULTSに文字列代入
					SIF FLAG:口上色
					TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
					TRYCALLFORM M_KOJO_K{NO:TARGET}
					RESETCOLOR
					IF (!RESULT &&  FLAG:6 > 0) || (FLAG:70 && !CFLAG:(NO:TARGET):時間停止口上有)
						CALL PALAM_MESSAGE_A
						TARGET = LOCAL:1
						RETURN 0
					ENDIF
					;射精口上出力ギミック
					CALL KOJO_MESSAGE_PALAMCNG_A2(LOCAL)
					SIF !RESULT
					LOCAL:2 ++
					TARGET = LOCAL:1
					;避孕套口上は対象一人のみ
					SIF GETBIT(TFLAG:1,0)
						BREAK
				NEXT
		;==== 絶頂時口上 ============
			CASE 2
				IF FLAG:口上テキスト設定 <= 0
					SIF FLAG:6 > 0
						CALL PALAM_MESSAGE_B
					RETURN 0
				ENDIF
				RESULT = 0
				RESULTS =
				;口上の存在判定 and RESULTSに文字列代入
				SIF FLAG:口上色
					TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
				TRYCALLFORM M_KOJO_K{NO:TARGET}
				RESETCOLOR
				IF (!RESULT && FLAG:6 > 0) || (FLAG:70 && !CFLAG:(NO:TARGET):時間停止口上有)
					CALL PALAM_MESSAGE_B
					RETURN 0
				ENDIF
				IF CFLAG:(NO:TARGET):イタズラ
					TRYCCALLFORM M_KOJO_MESSAGE_PALAMCNG_B2_K{NO:TARGET}
					CATCH
						CALL PALAM_MESSAGE_B
					ENDCATCH
				ELSE
					TRYCCALLFORM M_KOJO_MESSAGE_PALAMCNG_B_K{NO:TARGET}
					CATCH
						CALL PALAM_MESSAGE_B
					ENDCATCH
				ENDIF
				RESETCOLOR
		;==== 調教後口上 ============
			CASE 3
				IF FLAG:口上テキスト設定 <= 0
					SIF FLAG:6 > 0
						CALL PALAM_MESSAGE_C
					RETURN 0
				ENDIF
				RESULT = 0
				RESULTS =
				;口上の存在判定 and RESULTSに文字列代入
				SIF FLAG:口上色
				TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
				TRYCALLFORM M_KOJO_K{NO:TARGET}
				RESETCOLOR
				IF !RESULT && FLAG:6 > 0
					CALL PALAM_MESSAGE_C
					RETURN 0
				ENDIF
				TRYCALLFORM M_KOJO_MESSAGE_PALAMCNG_C_K{NO:TARGET}
				RESETCOLOR
		;==== パラメータ変動口上 ====
			CASE 4
				IF FLAG:口上テキスト設定 <= 0
					SIF FLAG:情景テキスト設定 > 0
						CALL PALAM_MESSAGE_D
					RETURN 0
				ENDIF
				RESULT = 0
				RESULTS =
				;口上の存在判定 and RESULTSに文字列代入
				SIF FLAG:口上色
				TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
				TRYCALLFORM M_KOJO_K{NO:TARGET}
				RESETCOLOR
				IF (!RESULT && FLAG:情景テキスト設定 > 0) || (FLAG:70 && !CFLAG:(NO:TARGET):時間停止口上有)
					CALL PALAM_MESSAGE_D
					RETURN 0
				ENDIF
				TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
				TRYCALLFORM M_KOJO_MESSAGE_PALAMCNG_D_K{NO:TARGET}
				RESETCOLOR
		;==== 触手の射精 ============
			CASE 5
				IF FLAG:口上テキスト設定 <= 0
					SIF FLAG:情景テキスト設定 > 0
						CALL PALAM_MESSAGE_E
					RETURN 0
				ENDIF
				RESULT = 0
				RESULTS =
				;口上の存在判定 and RESULTSに文字列代入
				TRYCALLFORM M_KOJO_K{NO:TARGET}
				IF !RESULT && FLAG:情景テキスト設定 > 0
					CALL PALAM_MESSAGE_E
					RETURN 0
				ENDIF
				TRYCALLFORM M_KOJO_MESSAGE_PALAMCNG_E_K{NO:TARGET}
		;==== 焦らし ============
			CASE 6
				IF FLAG:口上テキスト設定 <= 0
					SIF FLAG:情景テキスト設定 > 0
						CALL PALAM_MESSAGE_F
					RETURN 0
				ENDIF
				RESULT = 0
				RESULTS =
				;口上の存在判定 and RESULTSに文字列代入
				TRYCALLFORM M_KOJO_K{NO:TARGET}
				IF !RESULT && FLAG:情景テキスト設定 > 0
					CALL PALAM_MESSAGE_F
					RETURN 0
				ENDIF
				TRYCALLFORM M_KOJO_MESSAGE_PALAMCNG_F_K{NO:TARGET}
		ENDSELECT
;	;刻印系KOJO出力処理
	CASE "MARK"
		IF FLAG:口上テキスト設定 <= 0
			SIF FLAG:情景テキスト設定 > 0
				CALL MARK_MESSAGE
			RETURN 0
		ENDIF
		RESULT = 0
		RESULTS =
		;口上の存在判定 and RESULTSに文字列代入
		SIF FLAG:口上色
			TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
		TRYCALLFORM M_KOJO_K{NO:TARGET}
		RESETCOLOR
		IF !RESULT && FLAG:情景テキスト設定 > 0
			CALL MARK_MESSAGE
			RETURN 0
		ENDIF
		TRYCALLFORM M_KOJO_MESSAGE_MARKCNG_K{NO:TARGET}
		RESETCOLOR
	;コマンド系直接呼び出し
	CASE "DIRECT"
		SELECTCASE ARG:1
			CASE 351
				;口枷
				IF TEQUIP:(ARG:2):20 && SELECTCOM != 107 && FLAG:情景テキスト設定 > 0
					RETURN 1
				ELSE
					RESULT = 0
					RESULTS =
					
					IF FLAG:口上テキスト設定 > 0
						IF FLAG:口上色
							TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
						ELSE
							RESETCOLOR
						ENDIF
					ELSE
						RESETCOLOR
						RETURN 1
					ENDIF
					TRYCALLFORM M_KOJO_MESSAGE_COM_K{NO:TARGET}_351
					RESETCOLOR
				ENDIF
		ENDSELECT
	;いつか来る終わりの為に
	CASE "ENDING"
	SIF FLAG:口上色
		TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
		TRYCALLFORM M_KOJO_MESSAGE_ENDING_K{NO:TARGET}
		RESETCOLOR
ENDSELECT

;-------------------------------------------------
;@KOJO_MESSAGE_PALAMCNG_A2
;射精口上出力のギミック
;-------------------------------------------------
@KOJO_MESSAGE_PALAMCNG_A2(ARG)
;ARG Wフェラ等でTARGETならARG=0、二人目ならARG=1

;-------------------------------------------------
;射精対象が非ターゲットかつ非複数キャラSCOMF射精
;-------------------------------------------------
IF MASTER_POSE(0,SET_P) != TARGET && !ARG
	IF CFLAG:(NO:TARGET):イタズラ 
		TRYCCALLFORM M_KOJO_MESSAGE_PALAMCNG_A2_K{NO:TARGET}_00(ARG)
		CATCH
			CALL PALAM_MESSAGE_A
		ENDCATCH
	ELSE
