	SIF 選択肢履歴 / 100
		RETURNF 4
	SIF 選択肢履歴 / 10
		RETURNF 3
	SIF 選択肢履歴 / 1
		RETURNF 2
CASE 0
	RETURNF 1
CASEELSE
	PRINTL エラー(@EVENT_次の選択肢())
ENDSELECT
RETURNF 0

