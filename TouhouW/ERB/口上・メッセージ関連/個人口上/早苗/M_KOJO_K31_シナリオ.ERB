;口上の根幹をなす予定のシナリオイベント
;コマンド「会話」からの呼び出しだけじゃなくなりそうなんでこっちに移動
;移動した上で内容量がとんでもなく大きくなりそうなんで更にシナリオごとに分割
;方針
;ギャグギャグ＆ギャグ
;シリアスが書けないってそれ一番いわれてるから
;それこそエロシーンだってギャグで行きたいぐらい
;------------------------------------------------------------------------------------------------
@M_KOJO_EVENT_K31_シナリオイベント(第n章,第m選択肢)
#DIM 第n章
#DIM 第m選択肢


SELECTCASE 第n章
;================================================================================================
;第1章
;シナリオNo. 0(通常),10000(レア)
;ここに拡張性もたせてないのは失敗かも、適当に20000とか30000とか使用のこと
;================================================================================================
CASE 1
	;############################################
	;通常ルート「第1章　はじめまして」
	;############################################
	IF CHAPTER_攻略中_K31(0)
		CALL M_KOJO_EVENT_K31_シナリオ_0(第m選択肢)
	;############################################
	;レアルート「第1章　出会って3秒即デート！？」
	;############################################
	ELSEIF CHAPTER_攻略中_K31(10000)
		CALL M_KOJO_EVENT_K31_シナリオ_10000(第m選択肢)
	ELSE
		RETURN
	ENDIF
;================================================================================================
;第2章
;シナリオNo.10-90(通常),10010-10090(レア)
;================================================================================================
CASE 2
	;############################################
	;通常ルート「第2章　守矢さんちの現人神」
	;分岐先
	;信者と神のアヤシイ関係
	;
	;3年B組サナエさん
	;巫女アイドル早苗さんルート
	;############################################
	IF CHAPTER_攻略中_K31(10)
		CALL M_KOJO_EVENT_K31_シナリオ_10(第m選択肢)
	ENDIF
	;############################################
	;通常ルート「第2章　信者獲得大作戦」
	;分岐先
	;信者と神のアヤシイ関係
	;
	;妖怪バ斯塔ズ
	;異変解決のためにチームを結成、ただし犯人は主人公
	;############################################
	IF CHAPTER_攻略中_K31(20)
		CALL M_KOJO_EVENT_K31_シナリオ_20(第m選択肢)
	ENDIF
	;############################################
	;レアルート「第2章　くじで繋がる縁」
	;基本的に勧誘そっちのけでほのぼの日常
	;通常とは展開を変えることでレアルート感を演出…　どうせ誰もここには来ないっ！残念！
	;分岐先の章のタイトルは縁日系で
	;############################################
	IF CHAPTER_攻略中_K31(10010)
		CALL M_KOJO_EVENT_K31_シナリオ_10010(第m選択肢)
	ENDIF
	
	;############################################
	;レアルート「第2章　奇跡のおこしかた」
	;分岐先
	;『自己犠牲はいかんよ、自己犠牲は』ルート
	;シリアス寄り　通常のNo.30っぽさ
	;
	;『そんなことわかってますよ』ルート
	;ギャグ　ポンコツ増し増しのほんわかルート
	;############################################
	IF CHAPTER_攻略中_K31(10020)
		CALL M_KOJO_EVENT_K31_シナリオ_10020(第m選択肢)
	ENDIF
;================================================================================================
;第3章
;シナリオNo.100-190(通常),10100-10190(レア)
;================================================================================================
CASE 3
	IF CHAPTER_攻略中_K31(100)
		CALL M_KOJO_EVENT_K31_シナリオ_100(第m選択肢)
	ENDIF
	IF CHAPTER_攻略中_K31(110)
		CALL M_KOJO_EVENT_K31_シナリオ_110(第m選択肢)
	ENDIF
	IF CHAPTER_攻略中_K31(120)
		CALL M_KOJO_EVENT_K31_シナリオ_120(第m選択肢)
	ENDIF
	IF CHAPTER_攻略中_K31(10100)
		CALL M_KOJO_EVENT_K31_シナリオ_10100(第m選択肢)
	ENDIF
	IF CHAPTER_攻略中_K31(10110)
		CALL M_KOJO_EVENT_K31_シナリオ_10110(第m選択肢)
	ENDIF
;================================================================================================
;第4章
;================================================================================================
CASE 4
;================================================================================================
;第5章
;================================================================================================
CASE 5
;================================================================================================
;第6章
;================================================================================================
CASE 6

;================================================================================================
;エラー分岐
;================================================================================================
CASEELSE
	PRINTL エラー(@M_KOJO_EVENT_K31_シナリオイベント(第n章,第m選択肢))
ENDSELECT
RETURN



