	MARK:68:苦痛刻印 = 0
	MARK:68:快楽刻印 = 0
	MARK:68:不埒刻印 = 0
	
	;ABL初期化
	CALL INI_K68("ABL")
	;初期能力
	ABL:68:0 = 1
	ABL:68:1 = 1
	ABL:68:11 = 1
	ABL:68:16 = 5
	ABL:68:17 = 2
	ABL:68:42 = 5
	ABL:68:43 = 2
	
	;EXP初期化
	CALL INI_K68("EXP")
	;初期経験
	EXP:68:1 = 50
	EXP:68:10 = 35
	EXP:68:22 = 25
	EXP:68:51 = 75
	EXP:68:74 = 30
	
	;宝珠
	CALL INI_K68("JUEL")
	
RETURN 1
;-------------------------------------------------
;@INI_K68(ARGS)
;ARGS = ABLでABL初期化、EXPでEXP初期化、JUELでJUEL初期化
;存在しない場所まで初期化してるけど・・・
;-------------------------------------------------
;
@INI_K68(ARGS)
	IF ARGS == "ABL"
		FOR LOCAL, 0, 56
			ABL:68:LOCAL = 0
		NEXT
	ELSEIF ARGS == "EXP"
		FOR LOCAL, 0, 111
			EXP:68:LOCAL = 0
		NEXT
	ELSEIF ARGS == "JUEL"
		FOR LOCAL, 0, 33
			JUEL:68:LOCAL = 0
		NEXT
		JUEL:68:100 = 0
	ENDIF
RETURN 1
