@DAIRY_CONDITION_EV10
#DIM YOME
SIF !CFLAG:MASTER:兒童人数
	RETURN -1
SIF RAND:20 > 0
	RETURN -1
YOME = 0
CALL FISHER_YATES_SHAFFLE(CHARANUM - 1)
FOR LOCAL:10,1,CHARANUM
	LOCAL = SHAFFLE_ARRAY:(LOCAL:10) + 1
	IF CFLAG:LOCAL:兒童人数 - CFLAG:LOCAL:育児人数 > 0
		YOME = LOCAL
		BREAK
	ENDIF
NEXT
IF YOME
	CALL DAIRY_EV10(YOME)
ELSE
	RETURN -1
ENDIF


@DAIRY_EV10(ARG)
PRINTFORMW 收到了和%CALLNAME:ARG%的孩子的来信
LOCAL:1 = 0
FOR LOCAL,1,CHARANUM
	SIF CFLAG:LOCAL:好感度 > CFLAG:ARG:好感度
		LOCAL:1 ++
NEXT

IF LOCAL:1 >= 3
	PRINTFORMW 上面写着腰好好愛護%CALLNAME:ARG%……
ELSEIF !RAND:5
	PRINTFORMW 又来要錢了……
	PRINTFORMW %CALLNAME:MASTER%決定送去\@ MONEY > 30000? ￥30000# 所有的錢\@
	MONEY = MAX(MONEY - 30000,0)
ELSE
	PRINTFORMW %CALLNAME:MASTER%收到了%CALLNAME:ARG%擔心的話和寄来的\\10000金
	MONEY += 10000
ENDIF
RETURN 1