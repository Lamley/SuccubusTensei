	ELSE
		PRINTFORMW %CALLNAME:ARG%表达了想要孩子的想法、%CALLNAME:ARG%红着脸同意了
		CFLAG:ARG:生解禁 = 2
		CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,5,0)
		PRINTFORMW 从%CALLNAME:ARG%那里得到了一起生孩子的许可！
	ENDIF
ELSE
	PRINTFORML	%CALLNAME:ARG%委婉地拒絶了
	CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,2,0)
	PRINTL [0]尊重她的意志
	PRINTL [1]作最后的努力
	$INPUT2_LOOP
	INPUT
	IF RESULT == 0
		TFLAG:16 =2
		TFLAG:17 = TARGET
	ELSEIF RESULT == 1
	;口のうまさと相手次第では粘ればどうにかなる
		LOCAL = (4 - TALENT:ARG:応答 - TALENT:ARG:胆量 - TALENT:ARG:態度) * (ABL:MASTER:話術技能 + 3 * CFLAG:ARG:ダメ出し)
		LOCAL:2 = 理性判定値 * (100 - LOCAL) / 100
		CALL SHOW_REASONWALL(LOCAL:2)
		IF CHK_HININ_LOVE(ARG) > LOCAL:2
			PRINTFORMW %CALLNAME:MASTER%用三寸不烂之舌把给%CALLNAME:ARG%哄过去了
			IF ESTRUS_CYCLE(ARG) != 150
				CFLAG:ARG:生解禁 = 1
				CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,4,0)
				PRINTW 可以在危険日以外不避妊就做爱了！
			ELSE
				CFLAG:ARG:生解禁 = 2
				CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,5,0)
				PRINTFORMW 从%CALLNAME:ARG%那里得到了一起生孩子的许可！
			ENDIF
		ELSE
			CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,3,0)
			PRINTFORMW %CALLNAME:ARG%彻底被惹火了…
			CFLAG:ARG:ダメ出し += 1
			CALL ENDUFUFU(ARG)
			CALL GET_ANGRY(ARG)
			MARK:ARG:反発刻印 = MIN(MARK:ARG:反発刻印 + 1, 3)
			TFLAG:106 = 0
			TFLAG:16 = 2
		ENDIF
	ELSE
