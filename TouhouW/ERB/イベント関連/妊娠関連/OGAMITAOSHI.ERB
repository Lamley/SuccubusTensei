	CALL COLORMESSAGE(@"%CALLNAME:ARG%、対真正的性交感到了倒錯的魅力……",C_PINK,1,1)
	理性判定値 = 理性判定値 * 9 / 10
	CALL SHOW_REASONWALL(理性判定値)
ENDIF
IF TALENT:ARG:難以越過的底線
	SELECTCASE EXP:ARG:愛情経験
		CASE IS >= 500
			CALL COLORMESSAGE(@"%CALLNAME:ARG%、已経就快要完全接受%CALLNAME:MASTER%了……！",C_PINK,1,1)
			理性判定値 = 理性判定値 / 2
		CASE IS >= 300
			CALL COLORMESSAGE(@"%CALLNAME:ARG%、雖然是面対%CALLNAME:MASTER%但還是有些抵抗……",C_PINK,1,1)
			理性判定値 = 理性判定値 * 6 / 5
		CASE IS >= 100
			CALL COLORMESSAGE(@"%CALLNAME:ARG%、即使是和親密的対象也保持着一定距離……",C_PINK,1,1)
			理性判定値 = 理性判定値 * 3 / 2
		CASEELSE
			CALL COLORMESSAGE(@"%CALLNAME:ARG%、不願意接受其他人……",C_PINK,1,1)
			理性判定値 *= 2
	ENDSELECT
	CALL SHOW_REASONWALL(理性判定値)
ENDIF
IF TALENT:ARG:傲嬌
	IF TALENT:ARG:恋慕
		理性判定値 = 理性判定値 * 2 / 3
		CALL COLORMESSAGE(@"%CALLNAME:ARG%撒嬌求歡！",C_PINK,1,1)
	ELSE
		理性判定値 = 理性判定値 * 3 / 2
		CALL COLORMESSAGE(@"%CALLNAME:ARG%抱有了反感……",C_PINK,1,1)
	ENDIF
	CALL SHOW_REASONWALL(理性判定値)
ENDIF
WAIT
IF CHK_HININ_LOVE(ARG) > 理性判定値
	IF ESTRUS_CYCLE(ARG) != 150
		PRINTFORMW 面対%CALLNAME:MASTER%厚颜无耻的請求、%CALLNAME:ARG%还是作出了让步
		CFLAG:ARG:生解禁 = 1
		CALL KOJO_MESSAGE_SEND("EVENT",18,TARGET,4,0)
