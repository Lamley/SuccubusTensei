@出産経過(ARG)
#DIM CHILDNUM

SIF CFLAG:ARG:妊娠経過日数 > 100
	CALL BIRTH(ARG)
SIF CFLAG:ARG:妊娠経過日数 > 1
	CALL PERCIEVE(ARG)
SIF CFLAG:ARG:妊娠経過日数 > 0
	CFLAG:ARG:妊娠経過日数 += 1
SIF CFLAG:ARG:出産経過日 > 0
	CFLAG:ARG:出産経過日 += 1

CHILDNUM = TALENT:ARG:育児中

;子出口
IF CFLAG:ARG:出産経過日 > CHILD_自立 
	PRINTFORMW %CALLNAME:ARG%和%CALLNAME:MASTER%的孩子%CHILDNAME:ARG:CHILDNUM%平安的迎来了独自生活的日子、自立了。
	PRINTFORML 
	PRINTFORML 希望能偶爾見見面
	PRINTFORMW %CALLNAME:MASTER%的愿望沒能説出口……
	PRINTFORML 
	
	CFLAG:ARG:育児人数 -= 1
	CFLAG:MASTER:育児人数 -= 1
	;IF CFLAG:ARG:育児人数 >= 0
	IF CFLAG:ARG:育児人数 > 0
		;PRINTFORML 遠くなる子の背中を見ながらまだ小さい他の兒童も無事に育てようと、
		PRINTFORML 看着逐渐远去的孩子、
		PRINTFORML 希望還小的孩子能順利成長、
		;PRINTFORML %CALLNAME:ARG%は%CALLNAME:MASTER%と静かに誓った。
		PRINTFORML %CALLNAME:ARG%握着%CALLNAME:MASTER%的手、默默祈願。
	ELSE
		;PRINTFORML 遠くなる子の背中を見ながら%CALLNAME:ARG%は%CALLNAME:MASTER%とこどもの無事を祈った。
		PRINTFORML 看着遠去的孩子的背影的%CALLNAME:ARG%和%CALLNAME:MASTER%祈禱着孩子平安
	ENDIF

;PRINTFORML 別れ際、兒童は%CALLNAME:MASTER%が%CALLNAME:ARG%を顧みず他の女の尻を追い回していたことを口汚く罵り、
;PRINTFORML 自分は絶対に%CALLNAME:MASTER%のようにはならないと吐き捨てて去っていった

	IF CFLAG:ARG:育児人数 == 0
		TALENT:ARG:育児中 = 0
	ENDIF
	CFLAG:ARG:出産経過日 = 0
ENDIF
IF CFLAG:ARG:出産経過日 == CHILD_自立前
	TRYCCALLFORM M_KOJO_EVENT_K{ARG}_CHILD_RAISING_自立前
	CATCH
	PRINTFORML %CHILDNAME:ARG:CHILDNUM%還有一段時間就要分別了
	PRINTFORML 個子也長高了、已経和%CALLNAME:ARG%差不多了
	PRINTFORMW 這個孩子不久也要離開家門了吧、要好好珍惜剩下的時間……
	ENDCATCH

ENDIF
IF CFLAG:ARG:出産経過日 == CHILD_就学
	TRYCCALLFORM M_KOJO_EVENT_K{ARG}_CHILD_RAISING_就学
	CATCH
		PRINTFORML %CALLNAME:ARG%的孩子%CHILDNAME:ARG:CHILDNUM%開始上私塾了
		PRINTFORML 孩子的成長很迅速
		PRINTFORML 離開父母的那天很快就会到来的吧……
		PRINTFORMW %CALLNAME:MASTER%変得有些傷感
	ENDCATCH
ENDIF

IF CFLAG:ARG:出産経過日 == CHILD_しつけ
	PRINTFORML %CHILDNAME:ARG:CHILDNUM%越来越聰明了、做出了各種各樣的行動
	PRINTFORML 同時悪作劇和任性次数也増加了
	PRINTFORMW 必須要認真考慮教育的事了……
ENDIF

IF CFLAG:ARG:出産経過日 == CHILD_語彙
	PRINTFORML %CHILDNAME:ARG:CHILDNUM%的詞匯量増加了
	PRINTFORML 説的内容只是単独的２、３個音節完全無法形成句子
ENDIF
IF CFLAG:ARG:出産経過日 == CHILD_喋る
	TRYCCALLFORM M_KOJO_EVENT_K{ARG}_CHILD_RAISING_喋る
	CATCH
		PRINTFORML %CALLNAME:ARG%以驚人的気勢跑了過来
		PRINTFORML %CHILDNAME:ARG:CHILDNUM%呼喊了%CALLNAME:ARG%的名字
		PRINTFORML 趕緊去看看、確実在看着%CALLNAME:ARG%的臉喊着名字
		PRINTFORML %CALLNAME:MASTER%為了聽見叫自己、把臉靠過去也聽見了連喊爸爸的声音
	ENDCATCH
ENDIF
IF INRANGE(CFLAG:ARG:出産経過日, CHILD_喋る - 3, CHILD_喋る - 1)
	;口上チェック
	TRYCCALLFORM M_KOJO_EVENT_K{ARG}_CHILD_RAISING_会話寸前
	CATCH
		PRINTFORML 最近%CHILDNAME:ARG:CHILDNUM%常常張口説話
		PRINTFORML 雖然説不出意義清楚的話、只能用手指着想要的東西喊着名字、以此表達自己的意思
		PRINTFORML 不久就能説出清楚的話吧……
	ENDCATCH
ENDIF
IF CFLAG:ARG:出産経過日 == CHILD_よちよち
	;口上チェック
	TRYCCALLFORM M_KOJO_EVENT_K{ARG}_CHILD_RAISING_よちよち
	CATCH
		PRINTFORML %CHILDNAME:ARG:CHILDNUM%用双脚站立開始搖搖晃晃的走路了
		PRINTFORML 因為視線和行動半径的擴大対各種各樣的事情産生了興趣
		PRINTFORMW %CALLNAME:MASTER%牽着還在搖搖晃晃的%CHILDNAME:ARG:CHILDNUM%的手移動到了各種地方
	ENDCATCH
ENDIF
IF CFLAG:ARG:出産経過日 == CHILD_つかまり立ち
	;口上チェック
	TRYCCALLFORM M_KOJO_EVENT_K{ARG}_CHILD_RAISING_つかまり立ち
	CATCH
		PRINTFORML %CALLNAME:MASTER%蹲了下去讓%CHILDNAME:ARG:CHILDNUM%握住手指
		PRINTFORMW 然後慢慢地抬起手指、做着站立的練習
	ENDCATCH
ENDIF
IF CFLAG:ARG:出産経過日 == CHILD_玩具
	PRINTFORML 為了%CHILDNAME:ARG:CHILDNUM%玩耍%CALLNAME:MASTER%用木頭製作了簡単的玩具
	PRINTFORML 反正肯定会被扔来扔去所以只要単純的做結実就好
	PRINTFORMW 為了不讓孩子受傷、%CALLNAME:MASTER%仔細的打磨着断面
ENDIF
IF CFLAG:ARG:出産経過日 == CHILD_離乳
	;口上チェック
	TRYCCALLFORM M_KOJO_EVENT_K{ARG}_CHILD_RAISING_離乳
	CATCH
		PRINTFORMW 剛剛断奶的嬰兒満臉笑容的樣子讓%CALLNAME:MASTER%嘴角上揚
	ENDCATCH
	PRINTFORMW %CHILDNAME:ARG:CHILDNUM%的授乳期間結束了。
	PRINTFORMW 完成任务的%CALLNAME:ARG%的胸部変小了、母乳也没有了。
	SIF TALENT:ARG:母乳体質 == 1
		TALENT:ARG:母乳体質 = 0
;		CALL REVERSE_B_SIZE
	;乳ランクアップフラグたってて、今絶壁じゃないなら小さくなる。通常出産以外の妊娠終了なんかも考慮するとCALLで呼び出す方が良いのだろうが…
	IF CFLAG:ARG:乳ランクアップ == 1 && TALENT:ARG:胸囲 > -2
		TALENT:ARG:胸囲 -= 1
		CFLAG:ARG:乳ランクアップ = 0
	ENDIF
ELSEIF CFLAG:ARG:出産経過日 == 20 && CFLAG:ARG:回復速度ダウン
	PRINTFORMW 在平安完成産後恢复后、%CALLNAME:ARG%完全恢复了元気
	MAXBASE:ARG:体力 += 500
	MAXBASE:ARG:気力 += 500
	MAXBASE:ARG:体力 = MIN(MAXBASE:ARG:体力 / 10 * 11, CSVBASE(ARG,0) * 2)
	MAXBASE:ARG:気力 = MIN(MAXBASE:ARG:気力 / 10 * 11, CSVBASE(ARG,1) * 2)
	TALENT:ARG:回復速度 = CFLAG:ARG:回復速度ダウン - 2
	CFLAG:ARG:回復速度ダウン = 0
ENDIF