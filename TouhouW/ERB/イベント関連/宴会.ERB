@ENKAI_DRUNK(ARG)
;酔いつぶれるラインを超えていたら戻る
IF BASE:ARG:酒気 > (MAXBASE:ARG:酒気 / 10) * 8
	RETURN 1
ENDIF

;酒を飲まないなら酔わない 
IF TALENT:ARG:酒耐性 == -2 || CFLAG:ARG:妊娠自覚状態 == 1
	CFLAG:ARG:職種 = 0
	CFLAG:ARG:宴会参加 = 4
	IF CFLAG:MASTER:現在位置 == CFLAG:ARG:現在位置
		PRINTFORMW %CALLNAME:ARG%好像过得十分開心
	ENDIF
ELSE
	CFLAG:ARG:職種 = 0
	CFLAG:ARG:宴会参加 = 3
;	PRINTFORMW %CALLNAME:ARG%はほろ酔い気分のようです
	IF CFLAG:MASTER:現在位置 == CFLAG:ARG:現在位置
		PRINTFORMW %CALLNAME:ARG%好像过得十分開心
