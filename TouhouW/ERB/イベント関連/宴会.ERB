@ENKAI_ENTRY
;---   宴会の参加者決定   -----------------------------------------------------------------------------
;CFLAG:宴会参加 0=不参加 1=参加 2=主催者 3=脱落者 4=飲まないけど参加
;------------------------------------------------------------------------------------------------------
;フラグ初期化
FOR LOCAL,1,CHARANUM
	CFLAG:LOCAL:宴会参加 = 0
NEXT
SELECTCASE FLAG:宴会開催フラグ
	;2 幻想郷歳忘れ会
	CASE 2
		FOR LOCAL,1,CHARANUM
			;参加者　霊夢
			IF LOCAL == 1
				CFLAG:LOCAL:宴会参加 = 2
			;るーこと　霊夢の手伝いに駆り出される
			ELSEIF LOCAL == 2
				CFLAG:LOCAL:宴会参加 = 2
			;魔理沙　遊びに来てるだけだが手伝わされる
			ELSEIF LOCAL == 11
				CFLAG:LOCAL:宴会参加 = 2
			;萃香　まあ基本的に来るよね
			ELSEIF LOCAL == 10
				CFLAG:LOCAL:宴会参加 = 1
			;正邪は参加しない
			ELSEIF LOCAL == 97
				CFLAG:LOCAL:宴会参加 = 0
			;他のキャラはランダム参加
			ELSEIF RAND:5 == 0
				CFLAG:LOCAL:宴会参加 = 1
			ENDIF
		NEXT
	;1 霊夢の気紛れ酒盛り
	CASE 1
		SELECTCASE FLAG:宴会差し入れ
			CASE 51
				FLAG:31 += RAND:1000
			CASE 52
				FLAG:31 += RAND:2000
		ENDSELECT
		FOR LOCAL,1,CHARANUM
			;参加者　霊夢(主催者)
			IF LOCAL == 1
				CFLAG:LOCAL:宴会参加 = 2
			;るーこと　霊夢の手伝いに駆り出される
			ELSEIF LOCAL == 2
				CFLAG:LOCAL:宴会参加 = 2
			;魔理沙　遊びに来てるだけだが手伝わされる
			ELSEIF LOCAL == 11
				CFLAG:LOCAL:宴会参加 = 2
			;萃香　まあ基本的に来るよね
			ELSEIF LOCAL == 10
				CFLAG:LOCAL:宴会参加 = 1
			;正邪は参加しない
			ELSEIF LOCAL == 97
				CFLAG:LOCAL:宴会参加 = 0
			;他のキャラはランダム参加
			ELSEIF RAND:14 == 0
				CFLAG:LOCAL:宴会参加 = 1
			ENDIF
			;宴会規模が一定以上なら参加確率２倍に
			IF FLAG:31 >= 2500 && RAND:14 == 0 && CFLAG:LOCAL:宴会参加 == 0
				CFLAG:LOCAL:宴会参加 = 1
			ENDIF
		NEXT
	;月見酒
	CASE 3
		FOR LOCAL,1,CHARANUM
			;参加者　
			SELECTCASE LOCAL
				;ぐや　主催者だけど働かない、姫だから 
				CASE 62
					CFLAG:LOCAL:宴会参加 = 1
				;えーりん烏冬面帝は働く　梅蒂欣も手伝う
				CASE 52,53,72,75
					CFLAG:LOCAL:宴会参加 = 2
				CASE 97
				CFLAG:LOCAL:宴会参加 = 0
				;他のキャラはランダム参加だが、竹林方面に住んでると確率が上がる
				CASEELSE
					IF CFLAG:LOCAL:自宅位置 / 100 == 4 && !RAND:3
						CFLAG:LOCAL:宴会参加 = 1
					ELSEIF !RAND:11
						CFLAG:LOCAL:宴会参加 = 1
					ENDIF
			ENDSELECT
		NEXT
	;収穫祭
	CASE 4
		FOR LOCAL,1,CHARANUM
			;参加者　
			SELECTCASE LOCAL
				;秋姉妹は必ず来る
				CASE 77,78
					CFLAG:LOCAL:宴会参加 = 1
				CASE 97
				CFLAG:LOCAL:宴会参加 = 0
				;人里在住のキャラは働く
				CASEELSE
					IF CFLAG:LOCAL:自宅位置 / 100 == 2
						CFLAG:LOCAL:宴会参加 = 2
					ELSEIF !RAND:12
						CFLAG:LOCAL:宴会参加 = 1
					ENDIF
			ENDSELECT
		NEXT
	;読経ライブ
;	CASE 5
;		FOR LOCAL,1,CHARANUM
;			;参加者　
;			SELECTCASE LOCAL
;				;命蓮寺メンバーは働く
;				CASE 39,40,41,55,85,86,87,88
;					CFLAG:LOCAL:宴会参加 = 2
;				;博麗神社組はこない
;				CASE 1 TO 11
;					CFLAG:LOCAL:宴会参加 = 0
;				;正邪もこない
;				CASE 97
;					CFLAG:LOCAL:宴会参加 = 0
;				;他は酒を飲まない
;				CASEELSE
;					SIF RAND:15 == 1
;						CFLAG:LOCAL:宴会参加 = 9
;			ENDSELECT
;		NEXT
	;6 蕾米莉亜の気紛れなパーティ
	CASE 6
		FOR LOCAL,1,CHARANUM
			;参加者　
			SELECTCASE LOCAL
				;蕾米莉亜、フランは働かない
				CASE 16,50
					CFLAG:LOCAL:宴会参加 = 1
				;咲夜、美鈴、小悪魔は働く
				CASE 15,58,59
					CFLAG:LOCAL:宴会参加 = 2
				;琶秋莉と正邪は参加しない
				CASE 54,97
				CFLAG:LOCAL:宴会参加 = 0
				;他のキャラはランダム参加だが、霧之湖方面に住んでると確率が上がる
				CASEELSE
					IF CFLAG:LOCAL:自宅位置 / 100 == 3 && !RAND:3
						CFLAG:LOCAL:宴会参加 = 1
					ELSEIF !RAND:11
						CFLAG:LOCAL:宴会参加 = 1
					ENDIF

			ENDSELECT
			;宴会規模が一定以上なら参加確率２倍に
			IF FLAG:31 >= 2500 && RAND:14 == 0 && CFLAG:LOCAL:宴会参加 == 0
				CFLAG:LOCAL:宴会参加 = 1
			ENDIF
		NEXT
ENDSELECT

@ENKAI_WORK(ARG)
;宴会の行動内容を入力する
;NOSAMES:すべての引数が異なると1, 1つでも一致していると0を返す
IF FLAG:宴会開催フラグ > 0 && (NOSAMES(CFLAG:ARG:職種, 48, 49, 50, 51) || CFLAG:ARG:行動 == 0)
	;宴会の時間になったら準備仕事の量に応じて主催者が動き始める
	IF TIME >= FLAG:開始時間 - (FLAG:宴会規模 / 30) - 15 && TIME < FLAG:33 && CFLAG:ARG:宴会参加 == 2
		CALL ENKAI_PREPARE(ARG)
		RETURN 1
	;遊びに来るだけの奴は時間になったら遊びに来る
	ELSEIF DAY == FLAG:34 && TIME >= FLAG:33 && CFLAG:ARG:同行 == 0
		CALL ENKAI_START(ARG)
		RETURN 1
	;とっくに始まってる場合
	ELSEIF FLAG:宴会開催フラグ >= 98 && CFLAG:ARG:同行 == 0
		CALL ENKAI_START(ARG)
		RETURN 1
	ENDIF
ELSEIF FLAG:宴会開催フラグ > 0
	RETURN 1
ENDIF
RETURN 0


@ENKAI_PREPARE(ARG)
;主催者の準備仕事
IF CFLAG:ARG:職種 != 宴会準備
	MAXBASE:ARG:工作量 = FLAG:31 / 3
	;最大値、2400
	SIF MAXBASE:ARG:工作量 >= 2400
		MAXBASE:ARG:工作量 = 2400
	BASE:ARG:工作量 = MAXBASE:ARG:工作量
	CFLAG:ARG:職種 = 宴会準備
	CFLAG:ARG:職場 = FLAG:32
	TCVAR:ARG:315 = 0
	CFLAG:ARG:行動 = 5
ENDIF
RETURN 1

@ENKAI_START(ARG)
;それぞれが飲むペースを変えるので、宴の規模に応じて工作量が変化
IF CFLAG:ARG:職種 != ENKAI_SANKA && TCVAR:ARG:泥酔 == 0
	MAXBASE:ARG:工作量 = FLAG:31
	;最大値、通常7200(半日)・酒呑み神なら制限なし
	SIF MAXBASE:ARG:工作量 >= 7200 && TALENT:ARG:酒耐性 != 3
		MAXBASE:ARG:工作量 = 7200
	MAXBASE:ARG:工作量 += RAND:500
	IF TALENT:ARG:酒耐性 == -1
		TIMES MAXBASE:ARG:工作量, 0.75
	ELSEIF TALENT:ARG:酒耐性 == 1
		TIMES MAXBASE:ARG:工作量, 1.25
	ELSEIF TALENT:ARG:酒耐性 == 2
		TIMES MAXBASE:ARG:工作量, 1.5
	ELSEIF TALENT:ARG:酒耐性 == 3
		TIMES MAXBASE:ARG:工作量, 2.0
	ENDIF
	BASE:ARG:工作量 = MAXBASE:ARG:工作量
	;仕事内容・宴会に参加
	CFLAG:ARG:職種 = ENKAI_SANKA
	CFLAG:ARG:職場 = FLAG:32
	CFLAG:ARG:現在位置 = FLAG:32
	TCVAR:ARG:315 = 0
	CFLAG:ARG:行動 = 5
	IF CFLAG:ARG:宴会参加 == 2
		;主催者は片付け予定をセット(工作量は最大1200)
		CFLAG:ARG:片付け工作量 = MIN(FLAG:宴会規模 / 6, 1200)
		CFLAG:ARG:片付け場所 = FLAG:宴会会場
	ENDIF
ENDIF

RETURN 1


@ENKAI_KATAZUKE(ARG)
;主催者の片づけ仕事
MAXBASE:ARG:工作量 = CFLAG:ARG:片付け工作量
BASE:ARG:工作量 = MAXBASE:ARG:工作量
;仕事内容・宴会の片づけ
CFLAG:ARG:職種 = 50
CFLAG:ARG:職場 = CFLAG:ARG:片付け場所
