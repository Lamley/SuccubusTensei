;若鷺姫
@CHARAMOVE_DATA_93(ARG,ARG:2)
LOCAL = 93
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
		;例外処理
		IF !CFLAG:LOCAL:遭遇位置
			CFLAG:LOCAL:現在位置 = SUKIMA()
		ELSE
			CFLAG:LOCAL:現在位置 = CFLAG:LOCAL:遭遇位置
			IF FLAG:プール < 8
				SIF CFLAG:LOCAL:現在位置 != 610 && !AT_HOME(LOCAL) && !CFLAG:LOCAL:デート中
					CFLAG:LOCAL:現在位置 = 霧之湖
			ENDIF
		ENDIF
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		IF FLAG:プール < 8
			SELECTCASE ARG:2
				CASE 347, 348
					RETURN 0
				CASEELSE
					RETURN -100
			ENDSELECT
		ELSE
			SELECTCASE ARG:2
				;納屋と屋敷の三階と地下、及び各私室には入らない
				CASE 303, 304, 305, 311, 312, 318, 320, 321, 323, 325, 340, 341, 342, 344, 345, 346, 347, 348
					RETURN -100
			ENDSELECT
		ENDIF
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 3
				RETURN 1
			CASE 4
				SIF FLAG:プール >= 8
					RETURN 1
				RETURN 0
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 31
				RETURN 1
			CASE 32,33,34, 41,42,43
				SIF FLAG:プール >= 8
					RETURN 1
				RETURN 0
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

