;屠自古
@CHARAMOVE_DATA_91(ARG,ARG:2)
LOCAL = 91
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;神霊廟メンバーの私室
			CASE 127, 128
				RETURN -5
			;出口と墓地と命蓮寺内部
			CASE 103 TO 122
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 1, 6
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 11,12,13,15,16, 61,62,67,68
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

