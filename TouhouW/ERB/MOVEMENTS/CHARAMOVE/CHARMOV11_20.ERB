;魔理沙
@CHARAMOVE_DATA_11(ARG,ARG:2)
LOCAL = 11
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;博麗神社・走廊
			CASE 10
				RETURN 5
			;香霖堂,菌菇群生地
			CASE 502, 507
				RETURN 5
			;霧雨魔法店,15～19時は行きやすい
			CASE 510
				IF BETWEENTIME(900,1140)
					RETURN 5
				ELSE
					RETURN -5
				ENDIF
			;魔理沙寝室,寝起きと寝る前以外は避ける
			CASE 512
				IF CFLAG:LOCAL:就寝時間 - TIME > 60 && CFLAG:LOCAL:起床時間 - TIME > 60
					RETURN -10
				ELSE
					RETURN 0
				ENDIF
			;魔理沙研究室,19～22時は行きやすい
			CASE 513
				IF BETWEENTIME(1140,1320)
					RETURN 10
				ELSE
					RETURN -5
				ENDIF
			;神綺的房間,夢子的房間,愛麗絲家の浴室,愛麗絲の倉庫,空的部屋,艾倫家,妖怪的棲息処
			CASE 522, 523, 526, 528, 531, 535, 536, 537, 541, 542, 543
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 2, 3, 4, 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,4, 21,22,23,27, 31 TO 38, 41,42,43,45,46,47, 51 TO 57
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

