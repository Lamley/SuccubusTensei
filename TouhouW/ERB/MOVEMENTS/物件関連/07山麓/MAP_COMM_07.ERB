@MAP_CAN_MOVE_7(ARG, ARG:1)
#FUNCTION
SELECTCASE ARG
	;華扇ハウス
	CASE 720 TO 730
		;本人は除外
		SIF ARG:1 == 43
			RETURNF 1
		IF !INRANGE(CFLAG:(ARG:1):現在位置,720,730)
			;恋慕か住み込み
			IF ARG:1 == MASTER && (INRANGE(CFLAG:MASTER:初期位置,720,730) || TALENT:43:恋慕)
				RETURNF 1
			;教養が足りないとたどり着けない
			ELSEIF ABL:(ARG:1):教養 < 3
				TFLAG:移動不能メッセージ = 1
				TIME += 30
				RETURNF 0
			ELSE
				;それ以外は戦闘力5以上必要
				IF ABL:(ARG:1):戦闘能力 < 4 && !FLAG:70
					TFLAG:移動不能メッセージ = 2
					;CFLAG:(ARG:1):現在位置 = 731
					TIME += 15
					RETURNF 0
				ELSE
					RETURNF 1
				ENDIF
			ENDIF
		;中からは動ける
		ELSE
			RETURNF 1
		ENDIF
	;正邪ハウス
	CASE 733
		;主人公は恋慕があれば入れてもらえる
		IF TALENT:97:恋慕 && ARG:1 == MASTER
			RETURNF 1
		;本人は入れる
		ELSEIF ARG:1 == 97
			RETURNF 1
		ELSE
			TFLAG:移動不能メッセージ = ARG
			RETURNF 0
		ENDIF
	CASEELSE
		RETURNF 1
ENDSELECT

