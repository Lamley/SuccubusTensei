@MAPBUTTON(ARGS,ARG)
SETCOLOR C_P_BLUE
SELECTCASE ARG
	CASE MAIN_MAP
		SIF !CHK_DATENOW(CFLAG:MASTER:デート中)
			SETCOLOR 0 , 255, 0
	CASE 0
		SIF CFLAG:MASTER:デート中 == ARG
			SETCOLOR 0 , 255, 0
	CASE 1
		SIF CFLAG:MASTER:デート中 == ARG
			SETCOLOR 0 , 255, 0
	CASE 2
		SIF CFLAG:MASTER:デート中 == ARG
			SETCOLOR 0 , 255, 0
	CASE 3
		SIF CFLAG:MASTER:現在位置 == 霧之湖 || CFLAG:MASTER:現在位置 == 冰造的小雪屋
			SETCOLOR 0 , 255, 0
	CASE 4
		SIF CFLAG:MASTER:現在位置 >= 竹林入口 && CFLAG:MASTER:現在位置 <= 兎的洞穴
			SETCOLOR 0 , 255, 0
	CASE 5
		SIF CFLAG:MASTER:現在位置 >= 森林的入口 && CFLAG:MASTER:現在位置 <= 再思之道
			SETCOLOR 0 , 255, 0
	CASE 6
		SIF CFLAG:MASTER:現在位置 >= 中有之道 && CFLAG:MASTER:現在位置 <= 三途之川
			SETCOLOR 0 , 255, 0
	CASE 7
		;SIF CFLAG:MASTER:デート中 == ARG && CFLAG:MASTER:現在位置 != 迷途之家
		;	SETCOLOR 0 , 255, 0
	CASE 8
		SIF CFLAG:MASTER:デート中 == ARG && CFLAG:MASTER:現在位置 != 天界
			SETCOLOR 0 , 255, 0
	CASE 9
		SIF CFLAG:MASTER:デート中 == ARG
			SETCOLOR 0 , 255, 0
	CASE 10
		SIF CFLAG:MASTER:現在位置 == 槐安通路
			SETCOLOR 0 , 255, 0
ENDSELECT
PRINTBUTTON ARGS,ARG
RESETCOLOR

