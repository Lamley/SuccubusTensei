@MAP_UNIQUEMESSAGE_1
VARSET LOCAL
SELECTCASE CFLAG:MASTER:現在位置
	CASE 104
		CALL DRAW_INFORMATIONLINE("Info",1)
		PRINTFORML 放置着大木魚
		RETURN 1
	CASE 109
		CALL DRAW_INFORMATIONLINE("Info",1)
		PRINTFORML 放置着木刻的熊
		RETURN 1
	CASE 110
		CALL DRAW_INFORMATIONLINE("Info",1)
		PRINTFORML 房檐上掛着蘿卜
		RETURN 1
	CASE 119
		FOR LOCAL,1,CHARANUM
			IF CFLAG:LOCAL:現在位置 == 112
				LOCAL:1 = LOCAL
				LOCAL:2 ++
			ENDIF
		NEXT
		CALL DRAW_INFORMATIONLINE("Info",1)
		IF !LOCAL:2
			PRINTFORML 有着在這房間能偸窺浴室的秘密装置
		ELSE
			PRINTFORML 通過秘密装置看到了入浴中的%CALLNAME:(LOCAL:1)%\@ LOCAL:2 > 1? 們# \@
			PRINTFORML 真是絶景！
		ENDIF
		RETURN 1
	CASEELSE
		
ENDSELECT

