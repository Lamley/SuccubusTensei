@GETMAP_5(ARG)
KEHAI = 0
IF TALENT:MASTER:居場所察知 && FLAG:察知モード == 1
	SIF ROOMDATA:(ARG % 100) & 場所_モブ
		SETCOLOR C_D_PINK
	FOR LOCAL, 1, CHARANUM
		IF CFLAG:LOCAL:現在位置 == ARG
			IF CFLAG:LOCAL:行動 == 5
				KEHAI = 2
			ELSEIF CFLAG:LOCAL:睡眠
				KEHAI = 3
			ENDIF
			SIF KEHAI > 1
				BREAK
			KEHAI = 1
		ENDIF
		IF ARG == 520
			CALL GETMAP_BUILDING(LOCAL,520,531)
		ELSEIF ARG == 510
			CALL GETMAP_BUILDING(LOCAL,510,515)
		ELSEIF ARG == 534
			CALL GETMAP_BUILDING(LOCAL,534,537)
		ENDIF
		SIF KEHAI > 1
			BREAK
	NEXT
	IF KEHAI == 1
		SETCOLOR 255, 100, 200
	ELSEIF KEHAI == 2
		SETCOLOR 255, 100, 0
	ELSEIF KEHAI == 3
		SETCOLOR 0, 120, 180
	ENDIF
ENDIF
CALL GETMAP_YOGORE(ARG)
