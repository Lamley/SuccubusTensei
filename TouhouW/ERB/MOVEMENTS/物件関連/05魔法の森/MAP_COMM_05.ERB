@MAP_PLACENAME_5(ARG)
#FUNCTIONS
#DIM PLACEID

IF GET_MAPID(ARG) == MAIN_MAP
	SELECTCASE ARG
		CASE 501 TO (MAXROOM - 1)
			RETURNF STR:(ARG + 8000)
		CASE 598
			RETURNF OMANEKI_PLACE()
		CASE 599
			RETURNF "隙間空間"
		CASE MAXROOM
			RETURNF "森林之外"
		CASEELSE
			RETURNF "不明"
	ENDSELECT
ELSE
	RETURNF "不明"
ENDIF

@MAP_VIEWING_5(AA)
#DIMS REF AA, 0
IF !TFLAG:マップ切り替え
	SELECTCASE CFLAG:MASTER:現在位置
		CASE 510 TO 515
			TFLAG:マップ切り替え = 3
		CASE 520 TO 533
			TFLAG:マップ切り替え = 2
		CASE 534 TO 537
			TFLAG:マップ切り替え = 4
		CASEELSE
			TFLAG:マップ切り替え = 1
	ENDSELECT
ENDIF
CALL DRAW_INFORMATIONLINE(@"%MAPNAME:(TFLAG:マップ切り替え)%")
PRINTFORML 
TRYCALLFORM MAP_FOREST_{TFLAG:マップ切り替え}(AA)

