	RETURNF 1
SIF GROUPMATCH(FLAG:デート相手,52,53,62,72)
	RETURNF 1
SIF GROUPMATCH(FLAG:なりきり,52,53,62,72)
	RETURNF 1
SIF CFLAG:52:同行 || CFLAG:53:同行 || CFLAG:62:同行 || CFLAG:72:同行
	RETURNF 1
RETURNF 0