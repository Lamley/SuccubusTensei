@MAP_CAN_MOVE_4(ARG, ARG:1)
#FUNCTION
SELECTCASE ARG
	;奥ノ院判定
	CASE 407 TO 430
		;主人公
		IF ARG:1 == MASTER
			IF 永遠亭侵入許可() || INRANGE(CFLAG:MASTER:初期位置,401,430) || FLAG:時間停止
				RETURNF 1
			ELSE
				TFLAG:移動不能メッセージ = 401
				RETURNF 0
			ENDIF
		;鈴仙、烏冬面げ、輝夜、永琳
		ELSEIF GROUPMATCH(ARG:1, 52, 53, 62, 72)
			RETURNF 1
		ELSE
			RETURNF 0
		ENDIF
	CASEELSE
		RETURNF 1
ENDSELECT

@MAP_CANNOT_WORD_4(ARG)
