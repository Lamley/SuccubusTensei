@GETMAP_2(ARG)
#DIM 気配
気配 = 0
IF TALENT:MASTER:居場所察知 && FLAG:察知モード == 1
	SIF ROOMDATA:(ARG % 100) & 場所_モブ
		SETCOLOR C_D_PINK
	FOR LOCAL, 1, CHARANUM
		IF CFLAG:LOCAL:現在位置 == ARG
			IF CFLAG:LOCAL:行動 == 5
				気配 = 2
				BREAK
			ELSEIF CFLAG:LOCAL:睡眠
				気配 = 3
				BREAK
			ENDIF
			気配 = 1
		ENDIF
		IF ARG == 213 && !GROUPMATCH(CFLAG:MASTER:現在位置, 226,213)
			IF GROUPMATCH(CFLAG:LOCAL:現在位置, 213,226)
				IF CFLAG:LOCAL:行動 == 5
					気配 = 2
					BREAK
				ELSEIF CFLAG:LOCAL:睡眠
					気配 = 3
					BREAK
				ENDIF
				気配 = 1
			ENDIF
		ELSEIF ARG == 214 && !GROUPMATCH(CFLAG:MASTER:現在位置,230,231,232,233,234,235,236,237)
			IF GROUPMATCH(CFLAG:LOCAL:現在位置,230,231,232,233,234,235,236,237)
				IF CFLAG:LOCAL:行動 == 5
					気配 = 2
					BREAK
				ELSEIF CFLAG:LOCAL:睡眠
					気配 = 3
					BREAK
				ENDIF
				気配 = 1
			ENDIF
		ENDIF
	NEXT
	IF 気配 == 1
		SETCOLOR 255, 100, 200
	ELSEIF 気配 == 2
		SETCOLOR 255, 100, 0
	ELSEIF 気配 == 3
		SETCOLOR 0, 120, 180
	ENDIF
ENDIF
CALL GETMAP_YOGORE(ARG)
