		RETURNF PLACE_ID
	SIF INRANGE(CFLAG:MASTER:初期位置, 521, 531)
		RETURNF PLACE_ID
	SIF !TALENT:17:恋慕 && !TALENT:17:思慕 && !TALENT:102:恋慕 && !TALENT:102:思慕
