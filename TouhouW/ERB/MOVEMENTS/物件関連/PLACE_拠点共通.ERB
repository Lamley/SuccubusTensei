	SIF FLAG:なりきり == 11
		RETURNF PLACE_ID
	SIF CFLAG:11:信頼度 < 30
		RETURNF 0
	SIF CFLAG:11:現在位置 == CFLAG:MASTER:現在位置
		RETURNF PLACE_ID
