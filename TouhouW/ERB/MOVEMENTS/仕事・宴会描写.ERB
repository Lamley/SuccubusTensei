@仕事情景描写(ARG)
;ARGはキャラ　キャラ別の情景描写にどうぞ。
IF CFLAG:ARG:職種 == 48
	PRINTFORMW %CALLNAME:ARG%\@ TALENT:ARG:恋慕 ? 一辺牵挂着%CALLNAME:MASTER%一辺 # 忙碌的\@做宴会的準備。
ELSEIF CFLAG:ARG:職種 == 50
	PRINTFORMW %CALLNAME:ARG%\@ TALENT:ARG:恋慕 ? 一辺牵挂着%CALLNAME:MASTER%一辺 # 默默地\@做宴会的善后工作。
ELSEIF CFLAG:ARG:職種 == 46
	PRINTFORMW %CALLNAME:ARG%\@ TALENT:ARG:恋慕 ? 一辺时不时把视线投向%CALLNAME:MASTER%一辺 # \@玩耍着。
ELSE
	SELECTCASE ARG
		CASE 54
			PRINTFORMW %CALLNAME:ARG%头也不抬的看着书…
		CASE 57
			PRINTFORMW %CALLNAME:ARG%在悠哉地做%GET_JOBNAME(ARG)%。
		CASE 67
			IF TIME >= 720 && TIME <= 780
				PRINTFORMW %CALLNAME:ARG%\@ TALENT:ARG:恋慕 ? 一辺牵挂着%CALLNAME:MASTER%一辺 # \@陪孩子們%GET_JOBNAME(ARG)%。
			ELSE
				PRINTFORMW %CALLNAME:ARG%\@ TALENT:ARG:恋慕 ? 一辺牵挂着%CALLNAME:MASTER%一辺 # \@做着%GET_JOBNAME(ARG)%。
			ENDIF
		CASE 70
			IF DAY % 7 == 3 || DAY % 7 == 4
				PRINTFORMW %CALLNAME:ARG%一辺読书一辺%GET_JOBNAME(ARG)%。
			ELSE
				PRINTFORMW %CALLNAME:ARG%一辺%GET_JOBNAME(ARG)%一辺时不时停下手来埋头読书。
			ENDIF
		CASEELSE
			PRINTFORML %CALLNAME:ARG%心情不错的%GET_JOBNAME(ARG)%着。
	ENDSELECT
ENDIF
@宴会描写(ARG)
;FLAG:宴会開催フラグを使って宴会種別で書き分けてもいいかも

IF TCVAR:ARG:泥酔 == 0
	IF CFLAG:ARG:職種 == 49 && TALENT:ARG:恋慕 == 1
		PRINTFORMW %CALLNAME:ARG%一辺享受着宴会一辺时不时看向%CALLNAME:MASTER%。
	ELSE
		PRINTFORML %CALLNAME:ARG%享受着宴会
	ENDIF
ELSE
	IF TALENT:ARG:恋慕 == 1
		PRINTFORMW %CALLNAME:ARG%一辺时不时看向%CALLNAME:MASTER%一辺喝的酩酊大酔。
	ELSE
		PRINTFORML %CALLNAME:ARG%喝的酩酊大酔。
	ENDIF
ENDIF
IF CFLAG:ARG:職種 == 51 && (BASE:ARG:酒気 > (MAXBASE:ARG:酒気 / 10) * 8)
	PRINTW 　好像还酔醺醺的样子…
ELSEIF CFLAG:ARG:職種 == 51 && (BASE:ARG:酒気 > (MAXBASE:ARG:酒気 / 10) * 6)
	PRINTW 　好像离酒醒还需要一段时间…
ELSEIF CFLAG:ARG:職種 == 51
	PRINTW 　还差一点就能从酔意中清醒过来了…
ELSEIF CFLAG:ARG:職種 == 49 && (BASE:ARG:酒気 > (MAXBASE:ARG:酒気 / 10) * 6) 
	IF TALENT:ARG:感情缺乏 && RAND:4
		ELSEIF !RAND:10
			IF !RAND:2
				PRINTFORMW 　%CALLNAME:ARG%眼神呆滞…
				PRINTFORMW 　好像喝酔了的样子
					TALENT:ARG:15 = -1
			ELSE
				PRINTFORMW 　%CALLNAME:ARG%看上去非常開心
				PRINTFORMW 　状态良好的来回敬酒的样子
					TALENT:ARG:15 = 1
			ENDIF
		ELSE
			IF TALENT:ARG:15 == -1
				PRINTFORMW 　%CALLNAME:ARG%説着酔话…
			ELSEIF TALENT:ARG:15 == 1
				PRINTFORMW 　%CALLNAME:ARG%意义不明的笑着…
			ELSE
				PRINTW 　差不多要酔倒了的样子…
			ENDIF
	 	ENDIF
ELSEIF CFLAG:ARG:職種 == 49 && (BASE:ARG:酒気 > (MAXBASE:ARG:酒気 / 10) * 4)
	PRINTW 　有点渐入佳境了…
ELSEIF TALENT:ARG:酒耐性 == -2 || CFLAG:ARG:妊娠自覚状態 == 1
	IF BASE:ARG:工作量 >= (MAXBASE:ARG:工作量 / 3) * 2
		PRINTW 　没有喝酒而在談笑着…
	ELSEIF BASE:ARG:工作量 >= (MAXBASE:ARG:工作量 / 3)
		IF CFLAG:ARG:妊娠自覚状態 == 1
			PRINTW 　坚决不喝酒并享受着…
		ELSEIF TALENT:ARG:酒耐性 == -2
			PRINTW 　还是老样子滴酒不沾…
		ENDIF
	ELSEIF TALENT:ARG:酒耐性 == -2 || CFLAG:ARG:妊娠自覚状態 == 1
		PRINTW 　一点酒也不能碰…
	ENDIF
ELSEIF CFLAG:ARG:職種 == 49 
	PRINTW 　还很能喝呢…
ENDIF