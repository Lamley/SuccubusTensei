@YASAI
FOR LOCAL,0,5
	IF PLANT_TYPE:LOCAL
		SIF FLAG:澆水代行
			PLANT_DRY:LOCAL = 0
		PLANT_DAYS:LOCAL ++
		PLANT_DRY:LOCAL ++
		IF MAIN_MAP == 9
			PLANT_GROW:LOCAL ++
		ELSE
			SELECTCASE TIME:5
			CASE 0,1
				PLANT_GROW:LOCAL ++
			CASE 2,3
				PLANT_GROW:LOCAL += RAND:2
			CASE 4 TO 7
				PLANT_DRY:LOCAL = 0
			CASE 8 TO 13
				PLANT_GROW:LOCAL -= RAND:2
			ENDSELECT
		ENDIF
	ENDIF
NEXT

