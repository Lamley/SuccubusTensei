@EXP_GOT_CHECK(ARG)
#DIM 嗜虐増加量
IF FLAG:70 == 1 || CFLAG:イタズラ
ELSE
;奉仕系である、奉仕快楽のチェック
LOCAL = CUP:ARG:快Ｃ + CUP:ARG:快Ｖ + CUP:ARG:快Ａ + CUP:ARG:快Ｂ + CUP:ARG:快Ｍ + CUP:ARG:恭順 / 5
LOCAL:1 = 0


SELECTCASE CUP:ARG:欲情
	CASE IS < 100
		LOCAL = 0
	CASE 101 TO 1000
	CASE 1001 TO 5000
		LOCAL *= 2
	CASE 5001 TO 10000
		LOCAL *= 3
	CASE 10001 TO 30000
		LOCAL *= 4
	CASEELSE
		LOCAL *= 5
ENDSELECT


LOCAL += TCVAR:ARG:射精ゲージ増加量
SIF TCVAR:ARG:嗜虐フラグ
	LOCAL /= 4
;奉仕フラグが立っている
IF TCVAR:ARG:108
	;奉仕快楽のチェック
	IF LOCAL >= 100000
		LOCAL:1 = 16
		TIMES CUP:ARG:恐怖 , 0.65
		TIMES CUP:ARG:反感 , 0.30
	ELSEIF LOCAL >= 50000
		LOCAL:1 = 12
		TIMES CUP:ARG:恐怖 , 0.70
		TIMES CUP:ARG:反感 , 0.40
	ELSEIF LOCAL >= 30000
		LOCAL:1 = 8
		TIMES CUP:ARG:恐怖 , 0.75
		TIMES CUP:ARG:反感 , 0.50
	ELSEIF LOCAL >= 10000
		LOCAL:1 = 4
		TIMES CUP:ARG:恐怖 , 0.80
		TIMES CUP:ARG:反感 , 0.60
	ELSEIF LOCAL >= 5000
		LOCAL:1 = 2
		TIMES CUP:ARG:恐怖 , 0.85
		TIMES CUP:ARG:反感 , 0.70
	ELSEIF LOCAL >= 3000
		LOCAL:1 = 1
		TIMES CUP:ARG:恐怖 , 0.90
		TIMES CUP:ARG:反感 , 0.80
	ENDIF
	EXP:ARG:奉仕快楽経験 += LOCAL:1
ENDIF

;相手の嗜虐快楽のチェック
IF TCVAR:ARG:嗜虐フラグ
	LOCAL = CUP:ARG:快Ｃ + CUP:ARG:快Ｖ + CUP:ARG:快Ａ + CUP:ARG:快Ｂ + CUP:ARG:快Ｍ
	SELECTCASE CUP:ARG:優越
		CASE IS < 100
			LOCAL = 0
		CASE 101 TO 1000
		CASE 1001 TO 5000
			LOCAL *= 2
		CASE 5001 TO 10000
			LOCAL *= 3
		CASE 10001 TO 30000
			LOCAL *= 4
		CASEELSE
			LOCAL *= 5
	ENDSELECT
	;加虐ソースがないと半減
	SIF !SOURCE:ARG:加虐
		LOCAL /= 2
	;奉仕快楽経験が入る場合減少
	SIF TCVAR:ARG:108
		LOCAL /= 4
	SELECTCASE LOCAL
		CASE IS > 100000
			嗜虐増加量 = 16
		CASE IS > 50000
			嗜虐増加量 = 12
		CASE IS > 30000
			嗜虐増加量 = 8
		CASE IS > 10000
			嗜虐増加量 = 4
		CASE IS > 5000
			嗜虐増加量 = 2
		CASE IS > 3000
			嗜虐増加量 = 1
	ENDSELECT
	SIF ABL:ARG:施虐属性 < ABL:MASTER:施虐属性
		嗜虐増加量 /= 2
	EXP:ARG:嗜虐快楽経験 += 嗜虐増加量
ENDIF
;苦痛快楽のチェック
