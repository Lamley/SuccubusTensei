@射精絶頂表記(ARG)
#DIM Ｃ絶頂回数
#DIM Ｖ絶頂回数
#DIM Ａ絶頂回数
#DIM Ｂ絶頂回数
#DIM Ｍ絶頂回数
#DIM 同時絶頂補正
#DIM 改行判定
#DIM 接続判定
#DIMS 名前表記

IF ARG == MASTER
	名前表記 = 
ELSE
	名前表記 = (%CALLNAME:ARG%)
ENDIF

;●---絶頂の表記---●
IF NOWEX:ARG:五重絶頂
	同時絶頂補正 = 16
ELSEIF NOWEX:ARG:四重絶頂
	同時絶頂補正 = 8
ELSEIF NOWEX:ARG:三重絶頂
	同時絶頂補正 = 4
ELSEIF NOWEX:ARG:二重絶頂
	同時絶頂補正 = 2
ELSE
	同時絶頂補正 = 1
ENDIF

Ｃ絶頂回数 = NOWEX:ARG:Ｃ絶頂 / 同時絶頂補正
Ｖ絶頂回数 = NOWEX:ARG:Ｖ絶頂 / 同時絶頂補正
Ａ絶頂回数 = NOWEX:ARG:Ａ絶頂 / 同時絶頂補正
Ｂ絶頂回数 = NOWEX:ARG:Ｂ絶頂 / 同時絶頂補正
Ｍ絶頂回数 = NOWEX:ARG:Ｍ絶頂 / 同時絶頂補正

SETCOLOR C_PINK
改行判定 = 0
LOCALS:0 = 
LOCALS:1 = 
LOCALS:2 = 
IF Ｃ絶頂回数 > 2
	LOCALS:2 += "Ｃ"
ELSEIF Ｃ絶頂回数 > 1
	LOCALS:1 += "Ｃ"
ELSEIF Ｃ絶頂回数 > 0
	LOCALS:0 += "Ｃ"
ENDIF
IF Ｖ絶頂回数 > 2
	LOCALS:2 += "Ｖ"
ELSEIF Ｖ絶頂回数 > 1
	LOCALS:1 += "Ｖ"
ELSEIF Ｖ絶頂回数 > 0
	LOCALS:0 += "Ｖ"
ENDIF
IF Ａ絶頂回数 > 2
	LOCALS:2 += "Ａ"
ELSEIF Ａ絶頂回数 > 1
	LOCALS:1 += "Ａ"
ELSEIF Ａ絶頂回数 > 0
	LOCALS:0 += "Ａ"
ENDIF
IF Ｂ絶頂回数 > 2
	LOCALS:2 += "Ｂ"
ELSEIF Ｂ絶頂回数 > 1
	LOCALS:1 += "Ｂ"
ELSEIF Ｂ絶頂回数 > 0
	LOCALS:0 += "Ｂ"
ENDIF
IF Ｍ絶頂回数 > 2
	LOCALS:2 += "Ｍ"
ELSEIF Ｍ絶頂回数 > 1
	LOCALS:1 += "Ｍ"
ELSEIF Ｍ絶頂回数 > 0
	LOCALS:0 += "Ｍ"
ENDIF
IF LOCALS:0 != "" || LOCALS:1 != "" || LOCALS:2 != ""
	PRINT 《
	接続判定 = 0
	IF LOCALS:2 != ""
		PRINTFORM %LOCALS:2%超強絶頂
		接続判定 = 1
	ENDIF
	IF LOCALS:1 != ""
		IF 接続判定
			PRINT /
		ENDIF
		PRINTFORM %LOCALS:1%強絶頂
		接続判定 = 1
	ENDIF
	IF LOCALS:0 != ""
		IF 接続判定
			PRINT /
		ENDIF
		PRINTFORM %LOCALS:0%絶頂
	ENDIF
	PRINT 》
	改行判定 = 1
ENDIF

;●---射精の表記---●
SETCOLOR C_CREAM
IF NOWEX:ARG:射精
	PRINT 【
	SELECTCASE TCVAR:ARG:12
		CASE 1
			PRINT 膣内
		CASE 2
			PRINT 肛内
		CASE 4
			PRINT 口内
		CASE 5
			PRINT 乳内
		CASE 12
			PRINT Ａ玩弄
		CASE 13
			PRINT 膣玩弄
	ENDSELECT
	SIF NOWEX:ARG:射精 > 2
		PRINT 超
	SIF NOWEX:ARG:射精 > 1
		PRINT 大量
	PRINT 射精】
	改行判定 = 1
ENDIF

RESETCOLOR

IF 改行判定
	PRINTFORML %名前表記%
ENDIF
