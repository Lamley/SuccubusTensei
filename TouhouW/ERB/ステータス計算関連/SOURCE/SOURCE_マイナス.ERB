@SOURCE_不潔(ARG)
VARSET LOCAL
LOCAL = SOURCE:ARG:不潔

;ABL:従順をみる
SELECTCASE ABL:ARG:従順
	CASE 0
		TIMES LOCAL , 1.50
	CASE 1 TO 3
		TIMES LOCAL , 1.30
	CASE 4 TO 6
		TIMES LOCAL , 1.00
	CASE 7 TO 9
		TIMES LOCAL , 0.75
	CASE 10 TO 12
		TIMES LOCAL , 0.50
	CASE 13 TO 15
		TIMES LOCAL , 0.25
	CASEELSE
		TIMES LOCAL , 0.10
ENDSELECT
CUP:ARG:不快 += LOCAL

