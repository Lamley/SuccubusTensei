	CASE 5
		RETURNF \@ ARG:2 ? 小昼 # 巳 \@
	CASE 6
		RETURNF \@ ARG:2 ? 昼中 # 午 \@
	CASE 7
		RETURNF \@ ARG:2 ? 日盛り # 未 \@
	CASE 8
		RETURNF \@ ARG:2 ? 終日 # 申 \@
	CASE 9
		RETURNF \@ ARG:2 ? 黄昏 # 酉 \@
	CASE 10
		RETURNF \@ ARG:2 ? 宵 # 戌 \@
