	IF GETBIT(CFLAG:(TARGET:LOCAL):既成事実, 0) || CFLAG:(TARGET:LOCAL):弱み握られ
		LOCAL:1 = CFLAG:(TARGET:LOCAL):態度
	ELSE
		LOCAL:1 = MIN(CFLAG:(TARGET:LOCAL):態度, 2)
	ENDIF
