@InputListDataNum(ページ番号, 最大ページ番号, リストページ番号, 最大リストページ番号)
#DIM REF ページ番号
#DIM REF 最大ページ番号
#DIM REF リストページ番号
#DIM REF 最大リストページ番号
#DIMS 入力文字列
#DIM 入力数値

WHILE 1
	INPUTS
	入力文字列 = %RESULTS%
	PRINTL
	SELECTCASE 入力文字列
		;処理の共通部分を抜き出したいなあ
		CASE 察看前一頁 , "1100"
			ページ番号--
			IF ページ番号 < 0
				ページ番号 = 最大ページ番号
			ENDIF
			RETURN 再描画
		CASE 察看下一頁 , "1200"
			ページ番号++
			IF ページ番号 > 最大ページ番号
				ページ番号 = 0
			ENDIF
			RETURN 再描画
		CASE 前一位角色 , "1001"
			リストページ番号--
			IF リストページ番号 < 0
				リストページ番号 = 最大リストページ番号
			ENDIF
			RETURN 再描画
		CASE 下一位角色 , "1002"
			リストページ番号++
			IF リストページ番号 > 最大リストページ番号
				リストページ番号 = 0
			ENDIF
			RETURN 再描画
		CASE やめる , "1000"
			;帰れ
			RETURN 帰る
		CASEELSE
			入力数値 = TOINT(入力文字列)
			RETURN 入力数値
	ENDSELECT
WEND


