	DOWNBASE:MASTER:気力 = 100
	TIME += 45
	SIF CFLAG:同行
		CFLAG:同行 += 45
ELSEIF TFLAG:194 == 3
	DOWNBASE:MASTER:体力 = 100
	DOWNBASE:MASTER:気力 = 100
	TIME += 45
	SIF CFLAG:同行
		CFLAG:同行 += 45
ELSEIF TFLAG:194 == 4
	DOWNBASE:MASTER:体力 = 150
	DOWNBASE:MASTER:気力 = 150
	TIME += 45
	SIF CFLAG:同行
		CFLAG:同行 += 45
