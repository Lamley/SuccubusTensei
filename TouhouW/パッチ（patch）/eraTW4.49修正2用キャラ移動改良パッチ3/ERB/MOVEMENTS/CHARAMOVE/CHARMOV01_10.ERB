;霊夢
@CHARAMOVE_DATA_1(ARG,ARG:2)
LOCAL = 1
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		;23時～6時、13時～14時は寝てる　仕事中は寝ない
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;主に境内,縁側に居る
			CASE 2, 10
				RETURN 5
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 2
				RETURN 1
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,3,4, 21,22,23,27
				RETURN 1
		ENDSELECT
ENDSELECT

