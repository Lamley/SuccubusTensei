;蓮子
@CHARAMOVE_DATA_81(ARG,ARG:2)
LOCAL = 81
SELECTCASE ARG
	;移動対象メンバーチェック
	CASE 1
		;連動処理（メリーのが高いときはメリーを参照）
		IF TALENT:82:恋慕 || (TALENT:82:思慕 && !TALENT:81:思慕)
			CFLAG:LOCAL:現在位置 = CFLAG:82:遭遇位置 ? CFLAG:82:遭遇位置 # SUKIMA()
		ELSE
			CFLAG:LOCAL:現在位置 = CFLAG:81:遭遇位置 ? CFLAG:81:遭遇位置 # SUKIMA()
		ENDIF
	;移動確率
	CASE 2
	;起床時間帯
	CASE 3
		RETURN 睡眠時間(LOCAL)
	;移動傾向
	CASE 4
		SELECTCASE ARG:2
			;ひとんちの風呂とかトイレにはいかない
			CASE 12, 13, 14, 18, 30, 35, 39, 40, 43, 44, 51, 52
				RETURN -100
			;私室には入らない
			CASE 15, 17, 19, 53, 55
				SIF FLAG:15 != LOCAL
					RETURN -100
			;物置等を漁りたい
			CASE 6, 17, 19, 51, 53
				RETURN 5
			;ボロ小屋の時はむしろ行く
			CASE 16
				SIF FLAG:15 == 82
					RETURN 5
				SIF FLAG:15 == 81
					RETURN 0
				SIF FLAG:15
					RETURN -100
				RETURN 5
			;遺跡によく行く
			CASE 26 TO 51
				RETURN 5
			;自室,メリーの部屋,広場
			CASE 232, 233, 202
				RETURN 5
			;あなたの部屋
			CASE 230
				IF TALENT:LOCAL:恋慕
					RETURN 5
				ELSE
					RETURN -100
				ENDIF
			;行かない
			CASE 220, 225, 221, 222, 224, 226
				RETURN -100
		ENDSELECT
	;仕事時間帯
	CASE 5
	;行く地域(0=博1=寺2=里3=湖4=竹5=森6=冥7=山8=守9=地10=月）
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 1, 2, 4, 6
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;出現場所
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,3,4,6, 12,13,15, 21,22,23,27, 41,42,43, 61,62
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

