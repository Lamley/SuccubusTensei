@BENTO
SIF CFLAG:MASTER:現在地区 != 0 && CFLAG:MASTER:現在位置 != 1
	RETURN 0
SIF	(D:101) != 0
	RETURN 0
;LOCAL=作ってくれる人、LOCAL:1=作ってくれる人の料理補正
LOCAL = 0
LOCAL:1 = 0
IF RAND:4 == 1 && GETCHARA(11) != -1
;母
	LOCAL = GETCHARA(11)
	LOCAL:1 = 1
ELSEIF RAND:3 == 1 && GETCHARA(13) != -1
;妹妹妹妹
	LOCAL = GETCHARA(13)
	LOCAL:1 = 5
ELSEIF RAND:2 == 1 && GETCHARA(15) != -1
;姐姐
	LOCAL = GETCHARA(15)
	LOCAL:1 = 3
ELSE
	RETURN 0
ENDIF
PRINTFORML %CALLNAME:LOCAL%开始制作便当。
IF RAND(15) - ABL:LOCAL:料理技能 * 3 - LOCAL:1 < 1
	IF RAND(10) - (ABL:LOCAL:料理技能 - 2) * 2 < 1
		PRINTW 做出了特别美味的便当！
		EQUIP:MASTER:美味的便当++
		EXP:LOCAL:料理经验 += 3
	ELSE
		PRINTW 做出了一般味道的便当
		EQUIP:MASTER:普通的便当++
		EXP:LOCAL:料理经验 += 2
	ENDIF
ELSE
	PRINTW 做出了可怕的便当･･････
	SIF NO:LOCAL == 13
	PRINTFORML 但不知为什么%CALLNAME:LOCAL%还挺自豪的･･････
	EQUIP:MASTER:可怕的便当++
	EXP:LOCAL:料理经验 += 1
ENDIF


