@NPC_ACTION_5(ARG)
VARSET LOCAL
FOR LOCAL,0,200
	SIF TRAINNAME:LOCAL == ""
		CONTINUE
	TRYCCALLFORM COM_ABLE{LOCAL}(ARG)
	IF RESULT
		LOCAL:1 = RAND(100)
		IF LOCAL:2 < LOCAL:1
			LOCAL:2 = LOCAL:1
			LOCAL:3 = LOCAL
			LOCAL:4++
		ENDIF
	ENDIF
	CATCH
	ENDCATCH
NEXT
IF LOCAL:4
	SELECTCOM:ARG = LOCAL:3
ELSE
	SELECTCOM:ARG = 991
ENDIF
RETURN 1

