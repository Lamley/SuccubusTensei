@EVENTSHOP


@SHOW_SHOP
;TFLAG:100 = 0
DRAWLINE
PRINTFORML {DAY}日目 %WEEK(DAY)%曜日
PRINTFORML (所持金:{MONEY:MASTER}円)
PRINT 体力:
BAR BASE:MASTER:0,MAXBASE:MASTER:0,16
PRINTFORM ({BASE:MASTER:0,4}/{MAXBASE:MASTER:0,4}) 
PRINT 气力:
BAR BASE:MASTER:1,MAXBASE:MASTER:1,16
PRINTFORM ({BASE:MASTER:1,4}/{MAXBASE:MASTER:1,4})
PRINTL 

PRINTL [100] - 起床
PRINTL [101] - 能力表示
PRINTL [104] - 設定
PRINTL [200] - SAVE
PRINTL [300] - LOAD
;PRINTL [400] - OPTION
PRINTL [500] - 换衣服
@USERSHOP
IF RESULT == 100
	BEGIN TRAIN
	RETURN 1
ELSEIF RESULT == 101
	CALL SHOW_CHARADATA
ELSEIF RESULT == 104
	CALL SCHEDULE
ELSEIF RESULT == 200
	SAVEGAME
ELSEIF RESULT == 300
	LOADGAME
;ELSEIF RESULT == 400
;	CALL OPTION
ELSEIF RESULT == 500
	CALL CHANGE_CLOTHES(MASTER)
ENDIF


@SCHEDULE
PRINTL [0] - 起床時間設定
PRINTL [1] - 危険度設定
PRINTL [2] - お弁当設定
PRINTL [100] - 戻る
INPUT
IF RESULT == 100
	RETURN 0
ELSEIF RESULT == 0
	PRINTL 何時に起床しますか?(0～23を入力してください)
	$INPUT_LOOP
	INPUT
	SIF RESULT < 0 || RESULT > 23
		GOTO INPUT_LOOP
	CFLAG:MASTER:起床時間 = RESULT * 60
ELSEIF RESULT == 1
	CALL SET_DANGEROUS
ELSEIF RESULT == 2
	CALL SET_BENTO
ELSEIF RESULT == 3
	CALL SET_EQUIP
ELSE
ENDIF
RETURN 1


