@COM1014(ARG)
VARSET LOCAL
PRINTL 
PRINTFORML %"=" * 107%
;遊ぶ
IF MONEY:ARG < 1000
	PRINTW お金が足りません
	RETURN 0
ENDIF

DOWNBASE:ARG:体力 += 100
DOWNBASE:ARG:气力 += 120
CFLAG:ARG:待機時間 = 60
DOWNBASE:ARG:疲労 -= 100
DOWNBASE:ARG:ストレス += 300
MONEY:ARG -= 1000

;;;	支配度に＋２、相手に＋２
TB:(CFLAG:ARG:現在地区):(CFLAG:ARG:現在位置):ARG += 2
IF TCVAR:ARG:行為対象
	TB:(CFLAG:ARG:現在地区):(CFLAG:ARG:現在位置):(TCVAR:ARG:行為対象) += 2
	DOWNBASE:(TCVAR:ARG:行為対象):体力 += 100
	DOWNBASE:(TCVAR:ARG:行為対象):气力 += 120

	CFLAG:(TCVAR:ARG:行為対象):待機時間 = 60
	SOURCE:(TCVAR:ARG:行為対象):歓楽 = 1000
ENDIF
;行為者にも同じ値をセット（好意があるので話しかけたと仮定）
SOURCE:ARG:歓楽 = SOURCE:(TCVAR:ARG:行為対象):歓楽

VARSET ARG
RETURN 1


