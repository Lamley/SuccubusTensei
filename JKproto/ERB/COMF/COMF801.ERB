RETURN 0

@COM801(ARG)
;雑談受け
VARSET LOCAL
;固定で獲得するソース
SOURCE:ARG:歓楽 = 200


IF TFLAG:成否用変数 == -1
	TIMES SOURCE:ARG:歓楽 , 0.10
ELSEIF TFLAG:成否用変数 == 1
	TIMES SOURCE:ARG:歓楽 , 1.00
ELSE
	TIMES SOURCE:ARG:歓楽 , 2.00
ENDIF
SELECTCASE ABL:(TCVAR:ARG:行為対象):说话技巧技能
	CASE 0
		TIMES SOURCE:ARG:歓楽 , 0.20
	CASE 1
		TIMES SOURCE:ARG:歓楽 , 0.40
	CASE 2
		TIMES SOURCE:ARG:歓楽 , 0.70
	CASE 3
		TIMES SOURCE:ARG:歓楽 , 1.00
	CASE 4
		TIMES SOURCE:ARG:歓楽 , 1.50
	CASEELSE
		TIMES SOURCE:ARG:歓楽 , 2.00
ENDSELECT

;会话累積値
VARSET ARG
RETURN 1

