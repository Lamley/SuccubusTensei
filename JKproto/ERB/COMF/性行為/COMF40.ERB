@COM_ABLE40(ARG)
VARSET LOCAL
LOCAL = ARG
VARSET ARG
SIF !TCVAR:LOCAL:行為対象
	RETURN 0
SIF !GETBIT(TALENT:(TCVAR:LOCAL:行為対象):2,0)
	RETURN 0
SIF TALENT:(TCVAR:LOCAL:行為対象):2 == 3
	RETURN 0
SIF !EQUIP:LOCAL:跳蛋
	RETURN 0
SIF TEQUIP:(TCVAR:LOCAL:行為対象):下半身下着 == 373
	RETURN 0
;行為者が绳子装着時は不可
SIF TEQUIP:LOCAL:绳子
	RETURN 0

RETURN GLOBAL_COMABLE(40)

