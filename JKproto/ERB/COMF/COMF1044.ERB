@COM_ABLE1044(ARG)
VARSET LOCAL
LOCAL = ARG
VARSET ARG
SIF !GETBIT(DA:(CFLAG:LOCAL:現在地区):(CFLAG:LOCAL:現在位置),8)
	RETURN 0
SIF CFLAG:LOCAL:職業 && CFLAG:LOCAL:現在地区 == JOB_AREA(CFLAG:LOCAL:職業) && CFLAG:LOCAL:現在位置 == JOB_PLACE(CFLAG:LOCAL:職業)
	RETURN 0

RETURN GLOBAL_COMABLE(1044)

@COM1044(ARG)
VARSET LOCAL
PRINTL 
PRINTFORML %"=" * 107%
PRINTL バイトに応募する
;バイトに応募する
PRINTFORML %CALLNAME:MASTER%接受了面试……
PRINTFORMW ……
;服屋、Aショップ、夜总会は厳しい
IF CFLAG:ARG:現在地区 == 2 && (CFLAG:MASTER:現在位置 == 9 || CFLAG:MASTER:現在位置 == 19 || CFLAG:MASTER:現在位置 == 20)
	IF BASE:MASTER:容姿 <= 400
		PRINTFORML %CALLNAME:MASTER%面试被拒绝了……
		PRINTFORMW 店長「要更加磨练自己，才能让你承受这份工作」（容姿不够）
		VARSET ARG
		RETURN 1
	ENDIF
ENDIF
FOR LOCAL:1,1,MAX_JOB() + 1
	IF CFLAG:ARG:現在地区 == JOB_AREA(LOCAL:1) && CFLAG:MASTER:現在位置 == JOB_PLACE(LOCAL:1)
		LOCAL = LOCAL:1
		BREAK
	ENDIF
NEXT
PRINTFORML 合格了！
PRINTFORMW 成为了%JOB_NAME(LOCAL)%的打工者。
CFLAG:ARG:職業 = LOCAL

CFLAG:ARG:待機時間 += 15

VARSET ARG
RETURN 1


