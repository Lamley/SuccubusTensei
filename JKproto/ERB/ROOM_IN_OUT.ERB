SELECTCASE CFLAG:MASTER:現在地区
	CASE 2
		SELECTCASE CFLAG:MASTER:現在位置
			CASE 1
				CFLAG:MASTER:現在地区 = 1
				CFLAG:MASTER:現在位置 = 1
				CFLAG:MASTER:待機時間 += 1
				IF (D:101) == 0
					SELECTCASE TIME
						CASE 480 TO 510
							PRINTFORML 校门前で%CALLNAME:(21 + CHARANUM -41)%打招呼了
							PRINTL 「快啊，要迟到了～」
							PRINTL 被若无其事的摸了屁股…
							TA:(21 + CHARANUM -41):1:0 += 3
					ENDSELECT
				ENDIF
		ENDSELECT
ENDSELECT


@OUT_ROOM
SELECTCASE CFLAG:MASTER:現在地区
	CASE 1
		SELECTCASE CFLAG:MASTER:現在位置
			CASE 1
				CFLAG:MASTER:現在地区 = 2
				CFLAG:MASTER:現在位置 = 1
				CFLAG:MASTER:待機時間 += 1
		ENDSELECT
ENDSELECT

